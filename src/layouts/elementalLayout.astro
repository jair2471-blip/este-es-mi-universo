---
// src/layouts/ElementalLayout.astro
export interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!DOCTYPE html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<title>{title}</title>
	</head>
	<body class="bg-slate-50 text-slate-900 selection:bg-orange-100">
		<nav class="max-w-4xl mx-auto px-6 py-8 flex justify-between items-center">
			<a href="/" class="text-xl font-bold hover:text-orange-600 transition-colors">
				Mi Amigo Anhelado
			</a>
			<div class="space-x-4">
				<a href="/contadordevida" class="text-sm hover:underline">Contador</a>
				<a href="/generador-compromisos" class="text-sm hover:underline">Compromisos</a>
			</div>
		</nav>

		<main class="max-w-4xl mx-auto px-6 py-12">
			<slot />
		</main>

		<footer class="max-w-4xl mx-auto px-6 py-12 border-t border-slate-200 text-center text-sm text-slate-500">
			&copy; {new Date().getFullYear()} â€” Elemental
		</footer>
	</body>
</html>
