---
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'ANTONOV | EL NÚCLEO',
  description: 'Desfragmentación de consciencia y mentoría radical.',
};
---

<Layout metadata={metadata}>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;700;900&family=JetBrains+Mono:wght@400;700&display=swap');

    :root {
      --accent: #ffd700;
      --bg-dark: #0a0a0a;
      --border-color: rgba(255, 215, 0, 0.15);
    }

    /* FORZAMOS EL CENTRADO TOTAL SIN QUE PAREZCA ALIENÍGENA */
    :global(main) { width: 100% !important; max-width: 100% !important; padding: 0 !important; }

    .master-container {
      width: 100%;
      min-height: 100vh;
      background: #000;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 20px;
      font-family: 'Inter', sans-serif;
    }

    .app-core {
      display: grid;
      grid-template-columns: 400px 1fr;
      width: 100%;
      max-width: 1300px;
      height: 85vh;
      background: #0d0d0d;
      border: 1px solid var(--border-color);
      border-radius: 4px; /* Menos redondeo, más industrial */
      overflow: hidden;
      box-shadow: 0 40px 100px rgba(0,0,0,0.8);
    }

    /* SIDEBAR: EL PANEL DE CONTROL */
    .sidebar {
      background: #080808;
      padding: 50px 40px;
      border-right: 1px solid var(--border-color);
      display: flex;
      flex-direction: column;
      gap: 40px;
    }

    .brand-box h1 {
      font-weight: 900;
      font-size: 3.5rem;
      letter-spacing: -3px;
      margin: 0;
      color: #fff;
      line-height: 0.8;
    }

    .brand-box p {
      color: var(--accent);
      font-family: 'JetBrains Mono', monospace;
      font-size: 10px;
      letter-spacing: 5px;
      margin-top: 15px;
      text-transform: uppercase;
      opacity: 0.8;
    }

    .input-section label {
      font-family: 'JetBrains Mono', monospace;
      font-size: 9px;
      color: #444;
      text-transform: uppercase;
      margin-bottom: 15px;
      display: block;
    }

    textarea {
      background: #000;
      border: 1px solid #222;
      color: #fff;
      padding: 20px;
      font-size: 14px;
      width: 100%;
      height: 160px;
      resize: none;
      font-family: 'Inter', sans-serif;
      transition: 0.3s;
    }

    textarea:focus {
      border-color: var(--accent);
      outline: none;
    }

    .main-btn {
      background: #fff;
      color: #000;
      border: none;
      padding: 20px;
      font-weight: 900;
      text-transform: uppercase;
      letter-spacing: 2px;
      cursor: pointer;
      transition: 0.3s;
      font-size: 13px;
    }

    .main-btn:hover {
      background: var(--accent);
    }

    .secondary-btns {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 10px;
    }

    .secondary-btns button {
      background: none;
      border: 1px solid #222;
      color: #666;
      padding: 12px;
      font-size: 10px;
      font-family: 'JetBrains Mono', monospace;
      cursor: pointer;
      transition: 0.3s;
    }

    .secondary-btns button:hover {
      border-color: var(--accent);
      color: #fff;
    }

    /* EL VISUALIZADOR: DONDE OCURRE LA MAGIA */
    .display-area {
      background: #000;
      position: relative;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 40px;
    }

    canvas {
      max-width: 100%;
      max-height: 100%;
    }

    /* EFECTO DE PROCESAMIENTO (GLITCH SUTIL) */
    .processing {
      animation: pulse-bg 0.5s infinite alternate;
    }

    @keyframes pulse-bg {
      from { opacity: 1; }
      to { opacity: 0.7; }
    }

    @media (max-width: 1100px) {
      .app-core { grid-template-columns: 1fr; height: auto; border-radius: 0; }
      .sidebar { padding: 30px; }
      .master-container { padding: 0; }
    }
  </style>

  <div class="master-container">
    <div class="app-core">
      <aside class="sidebar">
        <div class="brand-box">
          <h1>ANTONOV</h1>
          <p>Protocolo de Verdad</p>
        </div>

        <div class="input-section">
          <label>Inyección de Pensamiento</label>
          <textarea id="userInput" placeholder="Escribe lo que te detiene..."></textarea>
        </div>

        <div style="display:grid; grid-template-columns: 1fr 1fr; gap:15px;">
            <div class="input-section">
                <label>Matriz</label>
                <select id="formatSelect" style="width:100%; background:black; color:white; border:1px solid #222; padding:10px; font-size:11px;">
                  <option value="post">1080x1080</option>
                  <option value="story">1080x1920</option>
                </select>
            </div>
            <div class="input-section">
                <label>Escala</label>
                <input type="range" id="sizeSlider" min="50" max="150" value="90" style="width:100%; accent-color:var(--accent);">
            </div>
        </div>

        <button id="generateBtn" class="main-btn">PROCESAR REALIDAD</button>

        <div class="secondary-btns">
          <button id="downloadBtn">EXPORTAR .PNG</button>
          <button id="randomBtn">MODO AZAR</button>
        </div>
      </aside>

      <main class="display-area" id="displayArea">
        <canvas id="mainCanvas"></canvas>
      </main>
    </div>
  </div>

  <script is:inline>
    function startAntonov() {
      const canvas = document.getElementById('mainCanvas');
      const ctx = canvas.getContext('2d');
      const ui = {
        input: document.getElementById('userInput'),
        format: document.getElementById('formatSelect'),
        size: document.getElementById('sizeSlider'),
        btn: document.getElementById('generateBtn'),
        display: document.getElementById('displayArea')
      };

      let text = "LA VERDAD NO NECESITA ADORNOS";

      function draw() {
        const isStory = ui.format.value === 'story';
        const w = 1080, h = isStory ? 1920 : 1080;
        canvas.width = w; canvas.height = h;

        // Fondo profundo
        ctx.fillStyle = '#050505';
        ctx.fillRect(0, 0, w, h);

        // Grid sutilísimo
        ctx.strokeStyle = 'rgba(255,215,0,0.03)';
        ctx.lineWidth = 1;
        for(let i=0; i<w; i+=90) { ctx.beginPath(); ctx.moveTo(i,0); ctx.lineTo(i,h); ctx.stroke(); }
        for(let j=0; j<h; j+=90) { ctx.beginPath(); ctx.moveTo(0,j); ctx.lineTo(w,j); ctx.stroke(); }

        // Texto
        const fontSize = parseInt(ui.size.value);
        ctx.font = `900 ${fontSize}px 'Inter'`;
        ctx.textAlign = 'center';
        ctx.textBaseline = 'middle';
        ctx.fillStyle = '#fff';

        // Sombra de impacto
        ctx.shadowColor = 'rgba(255, 215, 0, 0.2)';
        ctx.shadowBlur = 20;

        const words = text.toUpperCase().split(' ');
        let lines = [], line = '';
        words.forEach(w => {
          if(ctx.measureText(line + w).width < 900) line += w + ' ';
          else { lines.push(line); line = w + ' '; }
        });
        lines.push(line);

        lines.forEach((l, i) => {
          ctx.fillText(l.trim(), w/2, (h/2) - ((lines.length-1)*fontSize/2) + (i*fontSize*1.1));
        });

        // Branding en el canvas
        ctx.shadowBlur = 0;
        ctx.font = "700 15px 'JetBrains Mono'";
        ctx.fillStyle = '#ffd700';
        ctx.letterSpacing = "10px";
        ctx.fillText("ANTONOV // SISTEMA DE CLARIDAD", w/2, h - 100);
      }

      async function process() {
        if(!ui.input.value.trim()) return;
        ui.btn.disabled = true;
        ui.btn.textContent = "DECODIFICANDO...";
        ui.display.classList.add('processing');

        try {
          const res = await fetch('https://mis-frases.poderparatriunfar.workers.dev/', {
            method: 'POST',
            body: JSON.stringify({
              prompt: `Antonov, mentor radical. Usuario: "${ui.input.value}". 
              Dile una verdad corta (máx 12 palabras) que lo obligue a pensar bien antes de quejarse. 
              Tono serio, crudo, imponente. TODO MAYÚSCULAS.`
            })
          });
          const data = await res.json();
          text = data.text;
          draw();
        } catch(e) { 
          text = "ERROR DE CONEXIÓN"; 
          draw();
        } finally {
          ui.btn.disabled = false;
          ui.btn.textContent = "PROCESAR REALIDAD";
          ui.display.classList.remove('processing');
        }
      }

      ui.btn.onclick = process;
      ui.format.onchange = draw;
      ui.size.oninput = draw;
      draw();
    }

    document.addEventListener('DOMContentLoaded', startAntonov);
    document.addEventListener('astro:page-load', startAntonov);
  </script>
</Layout>
