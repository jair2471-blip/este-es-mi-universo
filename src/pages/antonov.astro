---
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'ANTONOV PRO | El Oráculo de los Líderes',
  description: 'No es motivación, es verdad dictada por una conciencia artificial.',
};
---

<Layout metadata={metadata}>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Inter:wght@400;600;700;900&display=swap');

    * { box-sizing: border-box; margin: 0; padding: 0; }
    body { background: #000; font-family: 'Inter', sans-serif; color: white; }

    .app-container {
      min-height: 100vh;
      background: radial-gradient(ellipse at center, #0a0a0a 0%, #000000 100%);
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 30px 20px;
      position: relative;
      overflow: hidden;
    }

    .app-container::before {
      content: '';
      position: absolute;
      top: 0; left: 0; right: 0; bottom: 0;
      background-image: 
        radial-gradient(1px 1px at 20% 30%, rgba(255, 215, 0, 0.15), transparent),
        radial-gradient(1px 1px at 70% 60%, rgba(255, 255, 255, 0.1), transparent);
      background-size: 250px 250px;
      animation: particleFloat 40s linear infinite;
      pointer-events: none;
    }

    @keyframes particleFloat {
      from { background-position: 0 0; }
      to { background-position: 500px 1000px; }
    }

    .desktop-layout {
      width: 100%;
      max-width: 1400px;
      display: grid;
      grid-template-columns: 400px 1fr;
      gap: 30px;
      position: relative;
      z-index: 1;
    }

    .control-panel {
      background: rgba(13, 13, 13, 0.95);
      border: 1px solid rgba(255, 215, 0, 0.2);
      border-radius: 20px;
      padding: 35px;
      display: flex;
      flex-direction: column;
      gap: 25px;
      backdrop-filter: blur(10px);
      box-shadow: 0 30px 60px rgba(0,0,0,0.8);
      height: fit-content;
    }

    .brand { text-align: center; padding-bottom: 20px; border-bottom: 1px solid rgba(255, 215, 0, 0.1); }
    .brand h1 { font-family: 'Bebas Neue', cursive; font-size: 4rem; letter-spacing: 6px; margin: 0; }
    .brand p { color: #ffd700; font-size: 0.65rem; letter-spacing: 4px; font-weight: 800; text-transform: uppercase; }

    textarea {
      background: #050505; border: 1px solid rgba(255, 215, 0, 0.2);
      border-radius: 12px; color: #fff; padding: 16px; font-size: 0.9rem;
      resize: none; min-height: 120px; width: 100%;
    }

    label { color: #666; font-size: 0.65rem; font-weight: 800; text-transform: uppercase; letter-spacing: 2px; margin-bottom: 5px; display: block; }

    .btn-primary {
      background: linear-gradient(135deg, #ffd700, #b8860b); color: #000;
      border: none; padding: 18px; border-radius: 12px; font-weight: 900;
      font-size: 1rem; cursor: pointer; text-transform: uppercase; letter-spacing: 2px;
    }

    .btn-variant {
      background: transparent; color: #ffd700; border: 1px solid rgba(255, 215, 0, 0.3);
      padding: 12px; border-radius: 10px; font-size: 0.8rem; font-weight: 700; cursor: pointer;
    }

    .preview-panel {
      background: #000; border: 1px solid rgba(255, 215, 0, 0.1);
      border-radius: 20px; padding: 20px; display: flex; align-items: center; justify-content: center; min-height: 600px;
    }

    canvas { max-width: 100%; height: auto; border-radius: 4px; }

    @media (max-width: 1100px) { .desktop-layout { grid-template-columns: 1fr; } }
  </style>

  <div class="app-container">
    <div class="desktop-layout">
      <aside class="control-panel">
        <div class="brand">
          <h1>ANTONOV</h1>
          <p>Oráculo de Consciencia</p>
        </div>

        <div>
          <label>Confiesa tu bloqueo</label>
          <textarea id="userInput" placeholder="Dime qué te detiene, sin rodeos..."></textarea>
        </div>

        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 10px;">
          <div>
            <label>Formato</label>
            <select id="formatSelect" style="width: 100%; background: #050505; color: #fff; border: 1px solid rgba(255,215,0,0.2); padding: 10px; border-radius: 8px;">
              <option value="post">FEED (1:1)</option>
              <option value="story">STORY (9:16)</option>
            </select>
          </div>
          <div>
            <label>Tamaño</label>
            <input type="range" id="sizeSlider" min="60" max="150" value="90" style="width: 100%;">
          </div>
        </div>

        <button id="generateBtn" class="btn-primary">DICTAR SENTENCIA</button>
        <button id="variantBtn" class="btn-variant" style="display:none;">INVOCAR OTRO ÁNGULO</button>

        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 10px; margin-top: 10px;">
          <button id="downloadBtn" style="background: #111; color: #fff; border: 1px solid #333; padding: 10px; border-radius: 8px; cursor: pointer;">Guardar</button>
          <button id="shareBtn" style="background: #111; color: #fff; border: 1px solid #333; padding: 10px; border-radius: 8px; cursor: pointer;">Compartir</button>
        </div>
      </aside>

      <main class="preview-panel">
        <canvas id="mainCanvas"></canvas>
      </main>
    </div>
  </div>

  <script is:inline>
    function initApp() {
      const canvas = document.getElementById('mainCanvas');
      if (!canvas) return;
      const ctx = canvas.getContext('2d');
      
      const ui = {
        input: document.getElementById('userInput'),
        format: document.getElementById('formatSelect'),
        size: document.getElementById('sizeSlider'),
        generateBtn: document.getElementById('generateBtn'),
        variantBtn: document.getElementById('variantBtn'),
        downloadBtn: document.getElementById('downloadBtn'),
        shareBtn: document.getElementById('shareBtn')
      };

      let currentText = "ESPERANDO TU VERDAD...";

      function wrapText(context, text, x, y, maxWidth, lineHeight, center) {
        const words = text.split(' ');
        let lines = [];
        let currentLine = '';

        words.forEach(word => {
          const testLine = currentLine + word + ' ';
          if (context.measureText(testLine).width > maxWidth) {
            lines.push(currentLine);
            currentLine = word + ' ';
          } else {
            currentLine = testLine;
          }
        });
        lines.push(currentLine);

        let startY = center ? y - ((lines.length - 1) * lineHeight) / 2 : y;
        lines.forEach(line => {
          context.fillText(line.trim(), x, startY);
          startY += lineHeight;
        });
      }

      function render() {
        const isStory = ui.format.value === 'story';
        const w = 1080;
        const h = isStory ? 1920 : 1080;
        canvas.width = w;
        canvas.height = h;

        ctx.fillStyle = '#000';
        ctx.fillRect(0, 0, w, h);
        
        const grad = ctx.createRadialGradient(w/2, h/2, 0, w/2, h/2, w);
        grad.addColorStop(0, '#0d0d0d');
        grad.addColorStop(1, '#000');
        ctx.fillStyle = grad;
        ctx.fillRect(0, 0, w, h);

        const fontSize = parseInt(ui.size.value);
        ctx.font = `900 ${fontSize}px 'Bebas Neue'`;
        ctx.textAlign = 'center';
        ctx.fillStyle = '#fff';
        ctx.shadowColor = 'rgba(255, 191, 0, 0.4)';
        ctx.shadowBlur = 40;
        
        wrapText(ctx, currentText.toUpperCase(), w/2, h/2, w * 0.85, fontSize * 1.2, true);

        ctx.shadowBlur = 0;
        ctx.font = "900 22px 'Inter'";
        ctx.fillStyle = "#ffd700";
        ctx.fillText("ANTONOV PRO • SISTEMA DE EXCELENCIA", w/2, h - 80);

        // Ruido
        for(let i=0; i<3000; i++) {
          ctx.fillStyle = `rgba(255,255,255,${Math.random() * 0.02})`;
          ctx.fillRect(Math.random() * w, Math.random() * h, 1, 1);
        }
      }

      async function callAntonov(isVariation = false) {
        const text = ui.input.value.trim();
        if (!text) return alert("Habla conmigo, líder.");

        const btn = isVariation ? ui.variantBtn : ui.generateBtn;
        btn.textContent = "CONECTANDO...";
        btn.disabled = true;

        try {
          const response = await fetch('https://mis-frases.poderparatriunfar.workers.dev/', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
              prompt: `Antonov, mentor sabio y cercano. Contexto: "${text}". Dicta una SENTENCIA (máx 15 palabras) en MAYÚSCULAS. Sé profundo, usa metáforas de vida, evita clichés. Que se sienta como un consejo de un amigo que sabe la verdad. ${isVariation ? 'Diferente ángulo.' : ''}`
            })
          });
          const data = await response.json();
          if (data.text) {
            currentText = data.text;
            render();
            ui.variantBtn.style.display = 'block';
          }
        } catch (e) {
          alert("El oráculo está meditando (Error de conexión).");
        } finally {
          btn.textContent = isVariation ? "INVOCAR OTRO ÁNGULO" : "DICTAR SENTENCIA";
          btn.disabled = false;
        }
      }

      ui.generateBtn.onclick = () => callAntonov(false);
      ui.variantBtn.onclick = () => callAntonov(true);
      ui.size.oninput = render;
      ui.format.onchange = render;
      ui.downloadBtn.onclick = () => {
        const a = document.createElement('a');
        a.download = 'sentencia.png';
        a.href = canvas.toDataURL();
        a.click();
      };

      render();
    }

    // Doble check para cargar en Astro
    document.addEventListener('DOMContentLoaded', initApp);
    document.addEventListener('astro:page-load', initApp);
  </script>
</Layout>
