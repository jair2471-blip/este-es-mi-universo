---
import Layout from '~/layouts/PageLayout.astro';
const metadata = { title: 'ANTONOV | PROTOCOLO' };
const ESTADOS = [
  'CANSANCIO','SOLEDAD','ANSIEDAD','DUDA','RUPTURA','MIEDO',
  'RABIA','VACÍO','NOSTALGIA','CONFUSIÓN','TRISTEZA','CULPA',
  'AGOBIO','BLOQUEO','FRUSTRACIÓN','INSEGURIDAD'
];
---

<Layout metadata={metadata}>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@900&family=JetBrains+Mono:wght@700&display=swap');

    :global(body) { margin: 0; padding: 0; background: #000; overflow: hidden; height: 100vh; }
    :global(main) { margin: 0 !important; padding: 0 !important; height: 100vh; }

    .antonov-app {
      display: grid;
      grid-template-columns: 380px 1fr;
      height: 100vh;
      background: #000;
      overflow: hidden;
    }

    .sidebar {
      background: #0a0a0a;
      border-right: 1px solid #222;
      display: flex;
      flex-direction: column;
      overflow: hidden;
    }

    .sidebar-content {
      flex: 1;
      overflow-y: auto;
      display: flex;
      flex-direction: column;
    }

    .header-box {
      padding: 40px 30px;
      border-bottom: 1px solid #222;
    }

    h1 { font-size: 2.8rem; font-weight: 900; margin: 0; letter-spacing: -2px; color: #fff; }
    .tag { font-family: 'JetBrains Mono'; color: #ffd700; font-size: 10px; letter-spacing: 3px; }

    .states-container { padding: 30px; }
    .grid { display: grid; grid-template-columns: 1fr 1fr; gap: 8px; }

    .btn-state {
      background: #111;
      border: 1px solid #222;
      color: #666;
      padding: 14px;
      font-family: 'JetBrains Mono';
      font-size: 10px;
      cursor: pointer;
      text-transform: uppercase;
      transition: all 0.2s;
    }

    .btn-state:hover { border-color: #ffd700; color: #ffd700; }
    .btn-state.active { background: #ffd700; color: #000; border-color: #ffd700; font-weight: 700; }

    .controls-box {
      padding: 30px;
      border-top: 1px solid #222;
      background: #050505;
    }

    .size-label { display: flex; justify-content: space-between; font-size: 10px; color: #777; margin-bottom: 10px; }
    input[type="range"] { width: 100%; accent-color: #ffd700; height: 5px; cursor: pointer; }

    .btn-main {
      width: 100%;
      padding: 20px;
      background: #ffd700;
      color: #000;
      font-weight: 900;
      border: none;
      cursor: pointer;
      text-transform: uppercase;
      margin: 10px 0;
      border-radius: 4px;
      transition: 0.2s;
    }

    .btn-main:hover { background: #fff; transform: scale(1.02); }
    .btn-download { background: #1a1a1a; color: #ffd700; border: 1px solid #ffd700; }
    .btn-main:disabled { opacity: 0.3; cursor: not-allowed; }

    .canvas-area {
      position: relative;
      background: #000;
      display: flex;
      align-items: center;
      justify-content: center;
      overflow: hidden;
    }

    canvas {
      width: 100%;
      height: 100%;
      object-fit: contain;
    }

    @media (max-width: 900px) {
      .antonov-app { grid-template-columns: 1fr; grid-template-rows: auto 1fr; }
      .sidebar { border-right: none; border-bottom: 1px solid #222; max-height: 50vh; }
    }
  </style>

  <div class="antonov-app">
    <aside class="sidebar">
      <div class="sidebar-content">
        <div class="header-box">
          <h1>ANTONOV</h1>
          <div class="tag">PROTOCOLO DE VERDAD</div>
        </div>

        <div class="states-container">
          <p style="font-size: 10px; color: #555; margin-bottom: 15px; letter-spacing: 1px;">ESTADO ACTUAL</p>
          <div class="grid">
            {ESTADOS.map((e) => (
              <button class="btn-state" data-state={e}>{e}</button>
            ))}
          </div>
        </div>

        <div class="controls-box">
          <div class="size-label">
            <span>TAMAÑO</span>
            <span id="sizeVal">90 PX</span>
          </div>
          <input type="range" id="slider" min="50" max="180" value="90" />
          <button id="btn-traducir" class="btn-main">TRADUCIR ESTADO</button>
          <button id="btn-descargar" class="btn-main btn-download">DESCARGAR</button>
        </div>
      </div>
    </aside>

    <div class="canvas-area">
      <canvas id="mainCanvas"></canvas>
    </div>
  </div>

  <script is:inline>
    (function() {
      function initAntonov() {
        const canvas = document.getElementById('mainCanvas');
        if (!canvas) return;
        const ctx = canvas.getContext('2d');
        const buttons = document.querySelectorAll('.btn-state');
        const btnTraducir = document.getElementById('btn-traducir');
        const btnDescargar = document.getElementById('btn-descargar');
        const slider = document.getElementById('slider');
        const sizeVal = document.getElementById('sizeVal');

        let selectedState = '';
        let currentText = 'EL SILENCIO ES LA ÚNICA RESPUESTA';

        function draw() {
          const container = canvas.parentElement.getBoundingClientRect();
          // Usamos una resolución fija alta para que la descarga sea premium (1080x1080)
          canvas.width = 1080;
          canvas.height = 1080;

          ctx.fillStyle = '#000';
          ctx.fillRect(0, 0, 1080, 1080);

          // Grano premium
          for (let i = 0; i < 300; i++) {
            ctx.fillStyle = `rgba(255,255,255,${Math.random() * 0.03})`;
            ctx.fillRect(Math.random() * 1080, Math.random() * 1080, 2, 2);
          }

          // Header
          if (selectedState) {
            ctx.fillStyle = '#ffd700';
            ctx.font = '700 30px "JetBrains Mono", monospace';
            ctx.textAlign = 'left';
            ctx.fillText(`// PROTOCOLO: ${selectedState}`, 80, 100);
            ctx.fillRect(80, 120, 250, 2);
          }

          // Texto principal
          ctx.fillStyle = '#ffffff';
          ctx.textAlign = 'center';
          ctx.textBaseline = 'middle';

          let fontSize = parseInt(slider.value);
          const words = currentText.toUpperCase().split(' ');
          
          ctx.font = `900 ${fontSize}px 'Inter', sans-serif`;
          const lineHeight = fontSize * 0.95;
          const totalHeight = words.length * lineHeight;
          let y = 540 - (totalHeight / 2) + (lineHeight / 2);

          // Glow elegante
          ctx.shadowColor = 'rgba(255, 215, 0, 0.2)';
          ctx.shadowBlur = 30;

          words.forEach((word) => {
            ctx.fillText(word, 540, y);
            y += lineHeight;
          });

          ctx.shadowBlur = 0;
        }

        buttons.forEach(btn => {
          btn.onclick = () => {
            buttons.forEach(b => b.classList.remove('active'));
            btn.classList.add('active');
            selectedState = btn.dataset.state;
            draw();
          };
        });

        slider.oninput = () => {
          sizeVal.textContent = `${slider.value} PX`;
          draw();
        };

        btnTraducir.onclick = async () => {
          if (!selectedState) return;
          btnTraducir.disabled = true;
          btnTraducir.textContent = 'EXTRAYENDO...';

          try {
            const res = await fetch('https://mis-frases.poderparatriunfar.workers.dev/', {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({
                prompt: `ACTÚA COMO UN ORÁCULO BRUTALISTA. ESTADO: ${selectedState}. SENTENCIA DE MÁXIMO 8 PALABRAS. GOLPE DE REALIDAD. TODO MAYÚSCULAS.`
              })
            });
            const data = await res.json();
            currentText = data.text?.trim() || 'SIN RESPUESTA';
          } catch {
            currentText = 'ERROR DE PROTOCOLO';
          }

          btnTraducir.disabled = false;
          btnTraducir.textContent = 'TRADUCIR ESTADO';
          draw();
        };

        btnDescargar.onclick = () => {
          const link = document.createElement('a');
          link.download = `antonov-${selectedState || 'verdad'}.png`;
          link.href = canvas.toDataURL('image/png');
          link.click();
        };

        // Escuchar cambios de fuentes y redimensionar
        document.fonts.ready.then(draw);
        window.addEventListener('resize', draw);
        draw();
      }

      // Ejecución segura
      if (document.readyState === 'complete') {
        initAntonov();
      } else {
        window.addEventListener('load', initAntonov);
      }
      document.addEventListener('astro:after-swap', initAntonov);
    })();
  </script>
</Layout>
