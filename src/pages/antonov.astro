---
const metadata = {
  title: 'ANTONOV',
};
---

<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>{metadata.title}</title>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@900&family=JetBrains+Mono:wght@700&display=swap');

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    body {
      background: #000;
      color: #fff;
      font-family: 'Inter', sans-serif;
      overflow: hidden;
    }

    .container {
      display: grid;
      grid-template-columns: 400px 1fr;
      height: 100vh;
      width: 100vw;
    }

    .sidebar {
      background: #0a0a0a;
      border-right: 1px solid #222;
      display: flex;
      flex-direction: column;
      height: 100vh;
      overflow: hidden;
    }

    .header {
      padding: 40px;
      border-bottom: 1px solid #222;
      flex-shrink: 0;
    }

    h1 {
      font-size: 3rem;
      font-weight: 900;
      margin-bottom: 5px;
    }

    .tag {
      font-family: 'JetBrains Mono';
      font-size: 10px;
      color: #ffd700;
      letter-spacing: 2px;
    }

    .states-area {
      flex: 1;
      overflow-y: auto;
      padding: 30px 40px;
    }

    .states-area::-webkit-scrollbar {
      width: 4px;
    }

    .states-area::-webkit-scrollbar-thumb {
      background: #333;
    }

    .label {
      font-family: 'JetBrains Mono';
      font-size: 10px;
      color: #666;
      margin-bottom: 15px;
      display: block;
      text-transform: uppercase;
    }

    .grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 10px;
    }

    .btn-state {
      background: #111;
      border: 1px solid #222;
      color: #888;
      padding: 14px;
      font-family: 'JetBrains Mono';
      font-size: 10px;
      cursor: pointer;
      text-transform: uppercase;
      transition: all 0.2s;
    }

    .btn-state:hover {
      background: #1a1a1a;
      color: #fff;
    }

    .btn-state.active {
      background: #fff;
      color: #000;
      font-weight: 700;
    }

    .controls {
      padding: 30px 40px;
      border-top: 1px solid #222;
      background: #0a0a0a;
      flex-shrink: 0;
    }

    .slider-box {
      margin-bottom: 20px;
    }

    .slider-top {
      display: flex;
      justify-content: space-between;
      margin-bottom: 10px;
    }

    .size-val {
      font-family: 'JetBrains Mono';
      font-size: 10px;
      color: #ffd700;
    }

    input[type="range"] {
      width: 100%;
      height: 2px;
      background: #222;
      outline: none;
      cursor: pointer;
      -webkit-appearance: none;
    }

    input[type="range"]::-webkit-slider-thumb {
      -webkit-appearance: none;
      width: 14px;
      height: 14px;
      background: #ffd700;
      cursor: pointer;
      border-radius: 50%;
    }

    .btn-main {
      width: 100%;
      padding: 20px;
      background: #fff;
      color: #000;
      border: none;
      font-size: 13px;
      font-weight: 900;
      cursor: pointer;
      text-transform: uppercase;
      transition: background 0.3s;
    }

    .btn-main:hover:not(:disabled) {
      background: #ffd700;
    }

    .btn-main:disabled {
      opacity: 0.4;
      cursor: wait;
    }

    .canvas-area {
      background: #000;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 60px;
    }

    canvas {
      max-width: 100%;
      max-height: 100%;
      border: 1px solid #222;
    }

    @media (max-width: 900px) {
      .container {
        grid-template-columns: 1fr;
        grid-template-rows: 50vh 1fr;
      }
      .sidebar {
        height: 50vh;
      }
      .canvas-area {
        padding: 20px;
      }
    }
  </style>
</head>
<body>
  <div class="container">
    <div class="sidebar">
      <div class="header">
        <h1>ANTONOV</h1>
        <div class="tag">PROTOCOLO DE VERDAD</div>
      </div>

      <div class="states-area">
        <div class="label">Selecciona tu estado:</div>
        <div class="grid" id="grid"></div>
      </div>

      <div class="controls">
        <div class="slider-box">
          <div class="slider-top">
            <span class="label" style="margin: 0;">Tamaño</span>
            <span class="size-val" id="sizeVal">85px</span>
          </div>
          <input type="range" id="slider" min="50" max="150" value="85">
        </div>
        <button class="btn-main" id="btn">TRADUCIR ESTADO</button>
      </div>
    </div>

    <div class="canvas-area">
      <canvas id="canvas"></canvas>
    </div>
  </div>

  <script>
    const ESTADOS = [
      'CANSANCIO', 'SOLEDAD', 'ANSIEDAD', 'DUDA', 'RUPTURA', 'DESEO',
      'MIEDO', 'RABIA', 'VACÍO', 'NOSTALGIA', 'CONFUSIÓN', 'TRISTEZA',
      'PÉRDIDA', 'HASTÍO', 'CULPA', 'ENVIDIA', 'DESAMOR', 'AGOBIO',
      'BLOQUEO', 'INQUIETUD', 'ARREPENTIMIENTO', 'FRUSTRACIÓN',
      'INSEGURIDAD', 'DESCONEXIÓN'
    ];

    let estado = '';
    let texto = 'SELECCIONA UN ESTADO';

    const canvas = document.getElementById('canvas');
    const ctx = canvas.getContext('2d');
    const grid = document.getElementById('grid');
    const btn = document.getElementById('btn');
    const slider = document.getElementById('slider');
    const sizeVal = document.getElementById('sizeVal');

    function dibujar() {
      canvas.width = 1080;
      canvas.height = 1080;

      ctx.fillStyle = '#000';
      ctx.fillRect(0, 0, 1080, 1080);

      ctx.strokeStyle = '#0a0a0a';
      ctx.lineWidth = 1;
      for (let i = 0; i <= 1080; i += 54) {
        ctx.beginPath();
        ctx.moveTo(i, 0);
        ctx.lineTo(i, 1080);
        ctx.stroke();
        ctx.beginPath();
        ctx.moveTo(0, i);
        ctx.lineTo(1080, i);
        ctx.stroke();
      }

      if (estado) {
        ctx.font = "700 24px 'JetBrains Mono'";
        ctx.fillStyle = 'rgba(255, 215, 0, 0.6)';
        ctx.textAlign = 'center';
        ctx.fillText('> ' + estado, 540, 120);
      }

      const size = parseInt(slider.value);
      ctx.font = size + "px 'Inter'";
      ctx.fontWeight = '900';
      ctx.fillStyle = '#fff';
      ctx.textAlign = 'center';
      ctx.textBaseline = 'middle';

      const palabras = texto.toUpperCase().split(' ');
      const lineas = [];
      let linea = '';

      palabras.forEach(p => {
        const test = linea + p + ' ';
        if (ctx.measureText(test).width > 900) {
          lineas.push(linea.trim());
          linea = p + ' ';
        } else {
          linea = test;
        }
      });
      lineas.push(linea.trim());

      let y = 540 - ((lineas.length - 1) * size * 0.6);
      lineas.forEach(l => {
        ctx.fillText(l, 540, y);
        y += size * 1.15;
      });

      ctx.font = "700 20px 'JetBrains Mono'";
      ctx.fillStyle = '#ffd700';
      ctx.fillText('ANTONOV // PROTOCOLO DE VERDAD', 540, 960);

      ctx.strokeStyle = '#ffd700';
      ctx.lineWidth = 2;
      ctx.beginPath();
      ctx.moveTo(400, 985);
      ctx.lineTo(680, 985);
      ctx.stroke();
    }

    ESTADOS.forEach(e => {
      const b = document.createElement('button');
      b.className = 'btn-state';
      b.textContent = e;
      b.onclick = () => {
        document.querySelectorAll('.btn-state').forEach(x => x.classList.remove('active'));
        b.classList.add('active');
        estado = e;
        dibujar();
      };
      grid.appendChild(b);
    });

    slider.oninput = () => {
      sizeVal.textContent = slider.value + 'px';
      dibujar();
    };

    btn.onclick = async () => {
      if (!estado) {
        alert('Selecciona un estado primero');
        return;
      }

      btn.textContent = 'PROCESANDO...';
      btn.disabled = true;

      try {
        const res = await fetch('https://mis-frases.poderparatriunfar.workers.dev/', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            prompt: `ANTONOV ES UN TRADUCTOR DE ESTADOS HUMANOS.
NO RESPONDE PREGUNTAS.
NO DA CONSEJOS.
NO JUZGA.
NO MOTIVA.
OBSERVA Y NOMBRA CON SABIDURÍA DE CALLE.

LENGUAJE:
- SIMPLE, CERCANO, DE CALLE TRANQUILA
- SABIDURÍA ADQUIRIDA CON EXPERIENCIA
- NO SUENA A LIBRO NI A COACH
- SUENA A ALGUIEN QUE YA VIVIÓ

UNA SOLA FRASE.
MÁXIMO 12 PALABRAS.
TODO EN MAYÚSCULAS.

EL ESTADO ES: "${estado}"

ANTONOV LO TRADUCE.`
          })
        });

        const data = await res.json();
        texto = data.text || 'ERROR';
      } catch (e) {
        texto = 'ERROR DE CONEXIÓN';
      }

      btn.textContent = 'TRADUCIR ESTADO';
      btn.disabled = false;
      dibujar();
    };

    dibujar();
  </script>
</body>
</html>
