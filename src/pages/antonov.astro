---
import Layout from '~/layouts/PageLayout.astro';
const metadata = { title: 'ANTONOV | PROTOCOLO DE VERDAD' };
const ESTADOS = [
  'CANSANCIO','SOLEDAD','ANSIEDAD','DUDA','RUPTURA','MIEDO',
  'RABIA','VACÍO','NOSTALGIA','CONFUSIÓN','TRISTEZA','CULPA',
  'AGOBIO','BLOQUEO','FRUSTRACIÓN','INSEGURIDAD'
];
---

<Layout metadata={metadata}>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@900&family=JetBrains+Mono:wght@700&display=swap');

    /* Reset Maestro */
    :global(body) { margin: 0; padding: 0; background: #000; overflow: hidden; height: 100vh; color: #fff; }
    :global(main) { margin: 0 !important; padding: 0 !important; max-width: 100% !important; height: 100vh; }

    .app-container {
      display: grid;
      grid-template-columns: 400px 1fr;
      height: 100vh;
      background: #000;
    }

    /* Sidebar con Estilo de Terminal */
    .sidebar {
      background: #080808;
      border-right: 1px solid #1a1a1a;
      display: flex;
      flex-direction: column;
      z-index: 10;
      box-shadow: 10px 0 30px rgba(0,0,0,0.5);
    }

    .header-section {
      padding: 50px 40px;
      border-bottom: 1px solid #1a1a1a;
    }

    h1 { font-size: 3rem; font-weight: 900; margin: 0; letter-spacing: -3px; line-height: 0.9; }
    .protocol-tag { 
      font-family: 'JetBrains Mono'; 
      color: #ffd700; 
      font-size: 11px; 
      letter-spacing: 4px; 
      margin-top: 10px;
      display: block;
      opacity: 0.8;
    }

    .scroll-content {
      flex: 1;
      overflow-y: auto;
      padding: 40px;
    }

    .label-micro {
      font-family: 'JetBrains Mono';
      font-size: 9px;
      color: #444;
      text-transform: uppercase;
      letter-spacing: 2px;
      margin-bottom: 20px;
      display: block;
    }

    .states-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 10px;
    }

    .state-btn {
      background: #111;
      border: 1px solid #222;
      color: #555;
      padding: 15px 10px;
      font-family: 'JetBrains Mono';
      font-size: 10px;
      cursor: pointer;
      text-transform: uppercase;
      transition: all 0.3s cubic-bezier(0.16, 1, 0.3, 1);
    }

    .state-btn:hover { border-color: #ffd700; color: #fff; background: #151515; }
    .state-btn.active { background: #ffd700; color: #000; border-color: #ffd700; font-weight: 700; }

    /* Controles Inferiores */
    .footer-controls {
      padding: 40px;
      background: #050505;
      border-top: 1px solid #1a1a1a;
    }

    .slider-info {
      display: flex;
      justify-content: space-between;
      margin-bottom: 15px;
    }

    input[type="range"] { 
      width: 100%; 
      accent-color: #ffd700; 
      height: 4px; 
      background: #222;
      border-radius: 2px;
      margin-bottom: 25px;
    }

    .action-btn {
      width: 100%;
      padding: 22px;
      font-weight: 900;
      text-transform: uppercase;
      border: none;
      cursor: pointer;
      font-size: 14px;
      letter-spacing: 1px;
      transition: all 0.3s;
      margin-bottom: 10px;
    }

    .btn-primary { background: #fff; color: #000; }
    .btn-primary:hover { background: #ffd700; transform: translateY(-2px); }
    .btn-secondary { background: transparent; color: #ffd700; border: 1px solid #ffd700; }
    .btn-secondary:hover { background: rgba(255, 215, 0, 0.1); }

    /* Área del Canvas (El Alma de la App) */
    .viewer-area {
      display: flex;
      align-items: center;
      justify-content: center;
      background: #000;
      padding: 60px;
      perspective: 1000px;
    }

    .canvas-wrapper {
      width: 100%;
      height: 100%;
      display: flex;
      align-items: center;
      justify-content: center;
      filter: drop-shadow(0 0 50px rgba(255, 215, 0, 0.05));
    }

    canvas {
      max-width: 100%;
      max-height: 100%;
      object-fit: contain;
      border: 1px solid #1a1a1a;
      background: #000;
    }

    /* Scrollbar Personalizada */
    .scroll-content::-webkit-scrollbar { width: 3px; }
    .scroll-content::-webkit-scrollbar-thumb { background: #222; }

    @media (max-width: 1100px) {
      .app-container { grid-template-columns: 1fr; grid-template-rows: auto 1fr; }
      .sidebar { border-right: none; border-bottom: 1px solid #1a1a1a; height: 40vh; }
      .viewer-area { padding: 20px; }
    }
  </style>

  <div class="app-container">
    <aside class="sidebar">
      <div class="header-section">
        <h1>ANTONOV</h1>
        <span class="protocol-tag">SISTEMA DE VERDAD v2.0</span>
      </div>

      <div class="scroll-content">
        <span class="label-micro">01. Seleccionar Frecuencia Emocional</span>
        <div class="states-grid">
          {ESTADOS.map((estado) => (
            <button class="state-btn" data-state={estado}>{estado}</button>
          ))}
        </div>
      </div>

      <div class="footer-controls">
        <div class="slider-info">
          <span class="label-micro" style="margin:0">Escala de Impacto</span>
          <span id="sizeLabel" class="protocol-tag" style="margin:0; color:#fff">90PX</span>
        </div>
        <input type="range" id="rangeSlider" min="50" max="180" value="90">
        
        <button id="triggerBtn" class="action-btn btn-primary">Ejecutar Traducción</button>
        <button id="saveBtn" class="action-btn btn-secondary">Exportar Evidencia</button>
      </div>
    </aside>

    <main class="viewer-area">
      <div class="canvas-wrapper">
        <canvas id="outputCanvas"></canvas>
      </div>
    </main>
  </div>

  <script is:inline>
    (function() {
      function bootstrap() {
        const canvas = document.getElementById('outputCanvas');
        const ctx = canvas?.getContext('2d');
        const buttons = document.querySelectorAll('.state-btn');
        const trigger = document.getElementById('triggerBtn');
        const saver = document.getElementById('saveBtn');
        const slider = document.getElementById('rangeSlider');
        const sizeLabel = document.getElementById('sizeLabel');

        if (!canvas || !ctx) return;

        let activeState = '';
        let displayMessage = 'ESPERANDO SEÑAL...';

        function renderFrame() {
          // Resolución Nativa para máxima nitidez
          canvas.width = 1200;
          canvas.height = 1200;

          // Fondo Negro Profundo
          ctx.fillStyle = '#000';
          ctx.fillRect(0, 0, 1200, 1200);

          // Ruido Digital Estético
          for (let i = 0; i < 400; i++) {
            ctx.fillStyle = `rgba(255, 255, 255, ${Math.random() * 0.02})`;
            ctx.fillRect(Math.random() * 1200, Math.random() * 1200, 1.5, 1.5);
          }

          // UI del Canvas (Metadatos)
          if (activeState) {
            ctx.fillStyle = '#ffd700';
            ctx.font = '700 24px "JetBrains Mono", monospace';
            ctx.textAlign = 'left';
            ctx.fillText(`// STATUS: ${activeState}`, 80, 100);
            
            ctx.strokeStyle = '#ffd700';
            ctx.lineWidth = 1;
            ctx.globalAlpha = 0.3;
            ctx.strokeRect(60, 60, 1080, 1080); // Marco interno
            ctx.globalAlpha = 1.0;
          }

          // Tipografía Central
          ctx.fillStyle = '#fff';
          ctx.textAlign = 'center';
          ctx.textBaseline = 'middle';
          
          const size = parseInt(slider.value);
          ctx.font = `900 ${size}px 'Inter', sans-serif`;

          const lines = displayMessage.toUpperCase().split(' ');
          const step = size * 0.95;
          const startY = 600 - ((lines.length - 1) * step) / 2;

          // Glow de Poder
          ctx.shadowColor = 'rgba(255, 215, 0, 0.25)';
          ctx.shadowBlur = 40;

          lines.forEach((line, i) => {
            ctx.fillText(line, 600, startY + (i * step));
          });

          ctx.shadowBlur = 0;
        }

        buttons.forEach(btn => {
          btn.onclick = () => {
            buttons.forEach(b => b.classList.remove('active'));
            btn.classList.add('active');
            activeState = btn.dataset.state;
            renderFrame();
          };
        });

        slider.oninput = () => {
          sizeLabel.textContent = `${slider.value}PX`;
          renderFrame();
        };

        trigger.onclick = async () => {
          if (!activeState) return;
          trigger.disabled = true;
          trigger.textContent = 'PROCESANDO VERDAD...';

          try {
            const response = await fetch('https://mis-frases.poderparatriunfar.workers.dev/', {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({
                prompt: `ANTONOV ORÁCULO. ESTADO: ${activeState}. SENTENCIA BRUTALISTA DE MÁXIMO 7 PALABRAS. MAYÚSCULAS.`
              })
            });
            const data = await response.json();
            displayMessage = data.text || 'EL VACÍO RESPONDE';
          } catch {
            displayMessage = 'ERROR DE ENLACE';
          }

          trigger.disabled = false;
          trigger.textContent = 'Ejecutar Traducción';
          renderFrame();
        };

        saver.onclick = () => {
          const raw = canvas.toDataURL('image/png');
          const link = document.createElement('a');
          link.download = `ANTONOV_${activeState || 'VERDAD'}.png`;
          link.href = raw;
          link.click();
        };

        // Esperar a que las fuentes carguen para el primer render
        document.fonts.ready.then(renderFrame);
        window.addEventListener('resize', renderFrame);
      }

      // Inicialización Robusta
      if (document.readyState === 'complete') bootstrap();
      else window.addEventListener('load', bootstrap);
      document.addEventListener('astro:after-swap', bootstrap);
    })();
  </script>
</Layout>
