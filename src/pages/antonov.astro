---
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'ANTONOV | EL NÚCLEO',
  description: 'Sistema de decodificación de realidad.',
};
---

<Layout metadata={metadata}>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@900&family=JetBrains+Mono:wght@400;700&display=swap');

    :root {
      --accent: #ffd700;
      --border-color: #333;
    }

    :global(main) { width: 100% !important; max-width: 100% !important; padding: 0 !important; margin: 0 !important; }

    .master-wrapper {
      width: 100%;
      height: 100vh;
      background: #050505;
      display: flex;
      align-items: center;
      justify-content: center;
      overflow: hidden;
      color: white;
      font-family: 'Inter', sans-serif;
    }

    .app-container {
      display: grid;
      grid-template-columns: 380px 1fr;
      width: 95%;
      max-width: 1300px;
      height: 85vh;
      background: #000;
      border: 1px solid var(--border-color);
      box-shadow: 0 0 50px rgba(0,0,0,1);
    }

    .sidebar {
      background: #080808;
      padding: 35px;
      border-right: 1px solid var(--border-color);
      display: flex;
      flex-direction: column;
      justify-content: space-between;
    }

    .brand-area h1 { font-weight: 900; font-size: 2.8rem; color: #fff; margin: 0; letter-spacing: -2px; line-height: 1; }

    .states-grid {
      margin-top: 20px;
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 8px;
      max-height: 350px;
      overflow-y: auto;
      padding-right: 5px;
    }

    /* Scrollbar minimalista para la rejilla */
    .states-grid::-webkit-scrollbar { width: 4px; }
    .states-grid::-webkit-scrollbar-track { background: #111; }
    .states-grid::-webkit-scrollbar-thumb { background: #333; border-radius: 2px; }

    .state-btn {
      background: #111; border: 1px solid #222; color: #aaa; padding: 12px 8px;
      font-size: 10px; text-transform: uppercase; cursor: pointer;
      transition: all 0.2s; font-family: 'JetBrains Mono'; font-weight: 700;
    }

    .state-btn:hover { background: #1a1a1a; color: #fff; border-color: #444; }
    .state-btn.active { background: var(--accent); color: #000; border-color: var(--accent); }

    .btn-main {
      background: #fff; color: #000; border: none; padding: 20px;
      font-weight: 900; text-transform: uppercase; cursor: pointer; width: 100%;
      font-family: 'Inter'; font-size: 13px;
    }
    .btn-main:hover:not(:disabled) { background: var(--accent); }
    .btn-main:disabled { opacity: 0.5; cursor: wait; }

    .canvas-area {
      background: #080808;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 30px;
      overflow: hidden;
    }

    #mainCanvas {
      max-width: 100%;
      max-height: 100%;
      aspect-ratio: 1/1;
      border: 1px solid #222;
      background: #000;
    }

    @media (max-width: 1100px) {
      .app-container { grid-template-columns: 1fr; height: 100vh; overflow-y: auto; }
      .sidebar { border-right: none; border-bottom: 1px solid var(--border-color); }
      .canvas-area { height: 60vh; }
    }
  </style>

  <div class="master-wrapper">
    <div class="app-container">
      <aside class="sidebar">
        <div class="brand-area">
          <h1>ANTONOV</h1>
          <p style="color: var(--accent); font-family: 'JetBrains Mono'; font-size: 10px; letter-spacing: 3px; margin: 10px 0 0 0;">V.6.0_PROTOCOLO</p>
          
          <div style="margin-top: 25px;">
            <label style="font-family: 'JetBrains Mono'; font-size: 10px; color: #666; text-transform: uppercase; letter-spacing: 1px;">Selecciona Tu Estado</label>
            <div class="states-grid" id="statesGrid"></div>
          </div>
        </div>

        <div>
          <div style="margin-bottom: 20px;">
            <label style="font-family: 'JetBrains Mono'; font-size: 10px; color: #666; display: block; margin-bottom: 8px;">ZOOM DE RESPUESTA</label>
            <input type="range" id="sizeSlider" min="40" max="140" value="85" style="width:100%; accent-color:var(--accent);">
          </div>
          <button id="generateBtn" class="btn-main">Traducir Estado</button>
        </div>
      </aside>

      <main class="canvas-area">
        <canvas id="mainCanvas"></canvas>
      </main>
    </div>
  </div>

  <script is:inline>
    (function() {
      const ESTADOS = [
        'CANSANCIO', 'SOLEDAD', 'ANSIEDAD', 'DUDA', 'RUPTURA', 'DESEO', 
        'MIEDO', 'RABIA', 'VACÍO', 'NOSTALGIA', 'CONFUSIÓN', 'TRISTEZA', 
        'PÉRDIDA', 'HASTÍO', 'CULPA', 'ENVIDIA', 'DESAMOR', 'AGOBIO', 
        'BLOQUEO', 'INQUIETUD', 'ARREPENTIMIENTO', 'FRUSTRACIÓN', 
        'INSEGURIDAD', 'DESCONEXIÓN'
      ];

      function init() {
        const canvas = document.getElementById('mainCanvas');
        if (!canvas) return;
        const ctx = canvas.getContext('2d');
        const btn = document.getElementById('generateBtn');
        const slider = document.getElementById('sizeSlider');
        const statesGrid = document.getElementById('statesGrid');

        let selectedState = "";
        let antonovResponse = "SELECCIONA UN ESTADO";

        const render = () => {
          canvas.width = 1080;
          canvas.height = 1080;

          ctx.fillStyle = '#000000';
          ctx.fillRect(0, 0, 1080, 1080);

          // Grid
          ctx.strokeStyle = '#111';
          ctx.lineWidth = 1;
          for(let i=0; i<=1080; i+=108) {
            ctx.beginPath(); ctx.moveTo(i,0); ctx.lineTo(i,1080); ctx.stroke();
            ctx.beginPath(); ctx.moveTo(0,i); ctx.lineTo(1080,i); ctx.stroke();
          }

          // 1. INPUT
          if(selectedState) {
            ctx.font = "700 24px 'JetBrains Mono'";
            ctx.fillStyle = 'rgba(255, 215, 0, 0.5)';
            ctx.textAlign = "left";
            ctx.fillText("> ESTADO: " + selectedState, 80, 100);
          }

          // 2. SENTENCIA
          const fontSize = parseInt(slider.value);
          ctx.font = `900 ${fontSize}px 'Inter'`;
          ctx.fillStyle = "white";
          ctx.textAlign = "center";
          ctx.textBaseline = "middle";

          const words = antonovResponse.toUpperCase().split(' ');
          let lines = [], line = '';
          words.forEach(w => {
            if(ctx.measureText(line + w).width < 850) line += w + ' ';
            else { lines.push(line); line = w + ' '; }
          });
          lines.push(line);

          let startY = 540 - ((lines.length - 1) * fontSize * 0.6);
          lines.forEach(l => {
            ctx.fillText(l.trim(), 540, startY);
            startY += fontSize * 1.15;
          });

          // 3. FIRMA
          ctx.font = "700 20px 'JetBrains Mono'";
          ctx.fillStyle = "#ffd700";
          ctx.textAlign = "center";
          ctx.fillText("ANTONOV // PROTOCOLO DE VERDAD", 540, 950);
          ctx.strokeStyle = '#ffd700';
          ctx.lineWidth = 2;
          ctx.beginPath(); ctx.moveTo(390, 975); ctx.lineTo(690, 975); ctx.stroke();
        };

        // Limpiar y crear botones
        statesGrid.innerHTML = '';
        ESTADOS.forEach(estado => {
          const b = document.createElement('button');
          b.className = 'state-btn';
          b.textContent = estado;
          b.onclick = () => {
            document.querySelectorAll('.state-btn').forEach(btn => btn.classList.remove('active'));
            b.classList.add('active');
            selectedState = estado;
            render();
          };
          statesGrid.appendChild(b);
        });

        slider.oninput = render;

        btn.onclick = async () => {
          if(!selectedState) return alert('Selecciona un estado');
          
          btn.textContent = "TRADUCIENDO...";
          btn.disabled = true;

          try {
            const res = await fetch('https://mis-frases.poderparatriunfar.workers.dev/', {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({ 
                prompt: `Responde como Antonov, sabio de calle. Traduce el estado "${selectedState}" en una verdad cruda de máximo 12 palabras. TODO MAYÚSCULAS.` 
              })
            });
            const data = await res.json();
            antonovResponse = data.text || "SILENCIO";
          } catch (e) {
            antonovResponse = "ERROR DE NÚCLEO";
          } finally {
            btn.textContent = "Traducir Estado";
            btn.disabled = false;
            render();
          }
        };

        render();
      }

      // Ejecución segura
      if (document.readyState === 'complete') init();
      else window.addEventListener('load', init);
      document.addEventListener('astro:page-load', init);
    })();
  </script>
</Layout>
