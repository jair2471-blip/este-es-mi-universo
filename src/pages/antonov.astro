---
import Layout from '~/layouts/PageLayout.astro';
const metadata = { title: 'ANTONOV | PROTOCOLO' };

const ESTADOS = [
  'CANSANCIO','SOLEDAD','ANSIEDAD','DUDA','RUPTURA','MIEDO',
  'RABIA','VACÍO','NOSTALGIA','CONFUSIÓN','TRISTEZA','CULPA',
  'AGOBIO','BLOQUEO','FRUSTRACIÓN','INSEGURIDAD'
];
---

<Layout metadata={metadata}>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@900&family=JetBrains+Mono:wght@700&display=swap');

    /* CONFIGURACIÓN DE NIVEL "AMIGO ANHELADO": CONTROL TOTAL DEL VIEWPORT */
    :global(html, body) { 
      margin: 0 !important; 
      padding: 0 !important; 
      overflow: hidden !important; 
      background: #000 !important; 
    }

    /* MATAMOS CUALQUIER MARGEN DEL LAYOUT DE ASTRO */
    :global(main) { max-width: 100% !important; padding: 0 !important; margin: 0 !important; }

    .antonov-master {
      display: grid;
      grid-template-columns: 360px 1fr;
      height: 100vh;
      width: 100vw;
      font-family: 'Inter', sans-serif;
    }

    /* SIDEBAR: DISEÑO PERSONALIZADO */
    .sidebar {
      background: #050505;
      border-right: 1px solid #1a1a1a;
      display: flex;
      flex-direction: column;
      height: 100vh;
    }

    .brand {
      padding: 50px 30px;
      border-bottom: 1px solid #1a1a1a;
    }

    .brand h1 { 
      font-size: 2.5rem; 
      margin: 0; 
      letter-spacing: -3px; 
      color: #fff; 
      text-transform: uppercase;
    }

    .brand span {
      font-family: 'JetBrains Mono';
      font-size: 10px;
      color: #ffd700;
      letter-spacing: 3px;
    }

    .menu-scroll {
      flex: 1;
      overflow-y: auto;
      padding: 30px;
    }

    .grid-estados {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 10px;
    }

    .state-opt {
      background: #0a0a0a;
      border: 1px solid #222;
      color: #444;
      padding: 15px 5px;
      font-family: 'JetBrains Mono';
      font-size: 10px;
      cursor: pointer;
      transition: 0.3s;
    }

    .state-opt:hover { border-color: #ffd700; color: #fff; }
    .state-opt.active { background: #ffd700; color: #000; font-weight: bold; border-color: #ffd700; }

    /* PANEL DE CONTROL INFERIOR */
    .config-panel {
      padding: 30px;
      background: #020202;
      border-top: 1px solid #1a1a1a;
    }

    .control-group { margin-bottom: 20px; }
    .control-group label { display: block; font-size: 9px; color: #666; margin-bottom: 10px; letter-spacing: 2px; }

    input[type="range"] { 
      width: 100%; 
      accent-color: #ffd700; 
      background: #1a1a1a; 
      height: 4px; 
      cursor: pointer;
    }

    .btn-action {
      width: 100%;
      padding: 20px;
      font-weight: 900;
      border: none;
      cursor: pointer;
      text-transform: uppercase;
      letter-spacing: 1px;
      transition: 0.3s;
    }

    .btn-exec { background: #fff; color: #000; margin-bottom: 10px; }
    .btn-exec:hover { background: #ffd700; transform: translateY(-2px); }
    .btn-exec:disabled { opacity: 0.2; cursor: not-allowed; }

    /* ÁREA CENTRAL: EL PODER DEL CANVAS */
    .canvas-display {
      display: flex;
      align-items: center;
      justify-content: center;
      background: #000;
      padding: 60px;
    }

    canvas {
      max-width: 100%;
      max-height: 100%;
      object-fit: contain;
      border: 1px solid #111;
      box-shadow: 0 0 80px rgba(0,0,0,1);
    }
  </style>

  <div class="antonov-master">
    <aside class="sidebar">
      <div class="brand">
        <h1>Antonov</h1>
        <span>SISTEMA DE VERDAD</span>
      </div>

      <div class="menu-scroll">
        <div class="grid-estados">
          {ESTADOS.map((e) => (
            <button class="state-opt" data-val={e}>{e}</button>
          ))}
        </div>
      </div>

      <div class="config-panel">
        <div class="control-group">
          <label>TAMAÑO DEL IMPACTO</label>
          <input type="range" id="size" min="40" max="200" value="90">
        </div>
        <button id="run" class="btn-action btn-exec">Traducir Estado</button>
      </div>
    </aside>

    <main class="canvas-display">
      <canvas id="view"></canvas>
    </main>
  </div>

  <script is:inline>
    // USAMOS EL PATRÓN DE CONFIGURACIÓN QUE TE GUSTÓ:
    (function() {
      const state = {
        selected: '',
        phrase: 'ESPERANDO SEÑAL...',
        fontSize: 90
      };

      function init() {
        const cvs = document.getElementById('view');
        const ctx = cvs.getContext('2d');
        const opts = document.querySelectorAll('.state-opt');
        const runBtn = document.getElementById('run');
        const slider = document.getElementById('size');

        function update() {
          // Resolución cuadrada perfecta para redes
          cvs.width = 1080;
          cvs.height = 1080;

          // Fondo
          ctx.fillStyle = '#000';
          ctx.fillRect(0, 0, 1080, 1080);

          // Decoración Brutalista (Status line)
          if (state.selected) {
            ctx.fillStyle = '#ffd700';
            ctx.font = '700 24px "JetBrains Mono"';
            ctx.fillText(`// STATUS: ${state.selected}`, 80, 100);
            ctx.fillRect(80, 120, 180, 2);
          }

          // Texto Central
          ctx.fillStyle = '#fff';
          ctx.textAlign = 'center';
          ctx.textBaseline = 'middle';
          
          state.fontSize = parseInt(slider.value);
          ctx.font = `900 ${state.fontSize}px Inter`;

          const words = state.phrase.toUpperCase().split(' ');
          const lineH = state.fontSize * 0.95;
          let y = 540 - ((words.length - 1) * lineH) / 2;

          words.forEach(w => {
            ctx.fillText(w, 540, y);
            y += lineH;
          });
        }

        opts.forEach(btn => {
          btn.onclick = () => {
            opts.forEach(o => o.classList.remove('active'));
            btn.classList.add('active');
            state.selected = btn.dataset.val;
            update();
          };
        });

        slider.oninput = update;

        runBtn.onclick = async () => {
          if (!state.selected) return;
          runBtn.disabled = true;
          runBtn.innerText = 'PROCESANDO...';

          try {
            const res = await fetch('https://mis-frases.poderparatriunfar.workers.dev/', {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({ 
                prompt: `ACTÚA COMO UN ORÁCULO BRUTALISTA. ESTADO: ${state.selected}. MÁXIMO 6 PALABRAS.` 
              })
            });
            const data = await res.json();
            state.phrase = data.text || 'EL VACÍO RESPONDE';
          } catch {
            state.phrase = 'ERROR DE SISTEMA';
          }

          runBtn.disabled = false;
          runBtn.innerText = 'Traducir Estado';
          update();
        };

        // Arreglo de fuentes y primer render
        document.fonts.ready.then(update);
        window.addEventListener('resize', update);
      }

      // Evitamos el choque con Astro
      if (document.readyState === 'complete') init();
      else window.addEventListener('load', init);
      document.addEventListener('astro:after-swap', init);
    })();
  </script>
</Layout>
