---
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'ANTONOV',
};
---

<Layout metadata={metadata}>
 <style>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@900&family=JetBrains+Mono:wght@700&display=swap');

  /* Eliminamos los estilos globales agresivos */
  
  .container {
    display: grid;
    grid-template-columns: 400px 1fr;
    width: 100%;
    height: 90vh; /* Ajustado para que no choque con headers del layout */
    background: #000;
    color: #fff;
    font-family: 'Inter', sans-serif;
    border: 1px solid #222;
    overflow: hidden; /* Mantiene el scroll solo dentro de la app */
  }

  /* Si quieres que ocupe TODA la pantalla sin márgenes del Layout, 
     lo ideal es usar un layout vacío o específico para apps. 
     Pero si te obligan a usar PageLayout, usa esto: */
  :global(.main-container) { /* O la clase que use tu layout */
    max-width: none !important;
    padding: 0 !important;
  }

  .sidebar {
    background: #0a0a0a;
    border-right: 1px solid #222;
    display: flex;
    flex-direction: column;
    height: 100%;
  }

  /* ... resto de tus estilos igual ... */

  .canvas-area {
    display: flex;
    align-items: center;
    justify-content: center;
    padding: 20px;
    background: #050505;
    overflow: hidden;
  }

  canvas {
    max-width: 100%;
    max-height: 100%;
    height: auto; /* Importante para mantener proporción */
    border: 1px solid #222;
    background: #000;
  }
</style>

  <div class="container">
    <aside class="sidebar">
      <div class="header">
        <h1>ANTONOV</h1>
        <span class="tag">PROTOCOLO DE VERDAD</span>
      </div>

      <div class="states-wrapper">
        <span class="label">Selecciona un estado</span>
        <div class="grid" id="grid"></div>
      </div>

      <div class="controls">
        <div class="slider-box">
          <div class="slider-header">
            <span class="label">Tamaño</span>
            <span class="size-value" id="size">85px</span>
          </div>
          <input type="range" id="slider" min="50" max="150" value="85">
        </div>
        <button class="btn-main" id="btn">Traducir Estado</button>
      </div>
    </aside>

    <div class="canvas-area">
      <canvas id="canvas"></canvas>
    </div>
  </div>

  <script is:inline>
    (function () {
      function init() {
        const ESTADOS = [
          'CANSANCIO','SOLEDAD','ANSIEDAD','DUDA','RUPTURA','MIEDO',
          'RABIA','VACÍO','NOSTALGIA','CONFUSIÓN','TRISTEZA','CULPA',
          'AGOBIO','BLOQUEO','FRUSTRACIÓN','INSEGURIDAD'
        ];

        let selectedState = '';
        let responseText = 'SELECCIONA UN ESTADO';

        const canvas = document.getElementById('canvas');
        const ctx = canvas?.getContext('2d');
        const grid = document.getElementById('grid');
        const btn = document.getElementById('btn');
        const slider = document.getElementById('slider');
        const sizeDisplay = document.getElementById('size');

        if (!canvas || !ctx) return;

        function render() {
          canvas.width = 1080;
          canvas.height = 1080;

          ctx.fillStyle = '#000';
          ctx.fillRect(0,0,1080,1080);

          ctx.font = "700 24px 'JetBrains Mono'";
          ctx.fillStyle = '#ffd700';
          if (selectedState) ctx.fillText('> ' + selectedState, 80, 120);

          const fontSize = Number(slider.value);
          ctx.font = `900 ${fontSize}px Inter`;
          ctx.fillStyle = '#fff';
          ctx.textAlign = 'center';
          ctx.textBaseline = 'middle';

          const words = responseText.split(' ');
          let lines = [];
          let line = '';

          words.forEach(w => {
            const test = line + w + ' ';
            if (ctx.measureText(test).width > 900) {
              lines.push(line);
              line = w + ' ';
            } else {
              line = test;
            }
          });
          lines.push(line);

          let y = 540 - (lines.length - 1) * fontSize * 0.6;
          lines.forEach(l => {
            ctx.fillText(l.trim(), 540, y);
            y += fontSize * 1.15;
          });
        }

        ESTADOS.forEach(e => {
          const b = document.createElement('button');
          b.className = 'btn-state';
          b.textContent = e;
          b.onclick = () => {
            document.querySelectorAll('.btn-state').forEach(x => x.classList.remove('active'));
            b.classList.add('active');
            selectedState = e;
            render();
          };
          grid.appendChild(b);
        });

        slider.oninput = () => {
          sizeDisplay.textContent = slider.value + 'px';
          render();
        };

        btn.onclick = async () => {
          if (!selectedState) return;

          btn.disabled = true;
          btn.textContent = 'PROCESANDO...';

          try {
            const res = await fetch('https://mis-frases.poderparatriunfar.workers.dev/', {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({
                prompt: `ANTONOV OBSERVA SIN JUZGAR.
UNA SOLA FRASE.
MÁXIMO 12 PALABRAS.
TODO EN MAYÚSCULAS.
ESTADO: "${selectedState}"`
              })
            });

            const data = await res.json();
            responseText = data.text || 'SILENCIO';
          } catch {
            responseText = 'ERROR DE CONEXIÓN';
          }

          btn.disabled = false;
          btn.textContent = 'TRADUCIR ESTADO';
          render();
        };

        render();
      }

      window.addEventListener('DOMContentLoaded', init);
    })();
  </script>
</Layout>
