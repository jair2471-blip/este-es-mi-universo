---
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'ANTONOV | SISTEMA DE CONSCIENCIA',
};
---

<Layout metadata={metadata}>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;700;900&family=JetBrains+Mono:wght@500;700&display=swap');

    * { margin: 0; padding: 0; box-sizing: border-box; }

    :root {
      --gold: #ffd700;
      --gold-dim: rgba(255, 215, 0, 0.15);
      --dark: #000000;
      --charcoal: #0a0a0a;
      --gray-1: #111111;
      --gray-2: #1a1a1a;
      --gray-3: #222222;
      --text-dim: #666666;
      --text-mid: #999999;
    }

    :global(main) { 
      width: 100% !important; 
      max-width: 100% !important; 
      padding: 0 !important; 
      margin: 0 !important; 
    }

    body {
      font-family: 'Inter', -apple-system, sans-serif;
      background: var(--dark);
      color: white;
      overflow: hidden;
    }

    .master-wrapper {
      width: 100vw;
      height: 100vh;
      display: grid;
      grid-template-columns: 420px 1fr;
      background: var(--dark);
    }

    /* ============================================
       SIDEBAR - PANEL DE CONTROL
       ============================================ */
    .sidebar {
      background: var(--charcoal);
      border-right: 1px solid var(--gray-2);
      display: flex;
      flex-direction: column;
      overflow: hidden;
      box-shadow: 4px 0 24px rgba(0, 0, 0, 0.6);
    }

    .brand {
      padding: 50px 40px 30px;
      border-bottom: 1px solid var(--gray-2);
    }

    .brand h1 {
      font-size: 3rem;
      font-weight: 900;
      letter-spacing: -3px;
      margin-bottom: 8px;
      background: linear-gradient(135deg, #fff 0%, #ccc 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
      background-clip: text;
    }

    .brand-tag {
      font-family: 'JetBrains Mono', monospace;
      font-size: 9px;
      letter-spacing: 3px;
      color: var(--gold);
      text-transform: uppercase;
      opacity: 0.9;
    }

    /* Estados */
    .states-container {
      flex: 1;
      padding: 40px;
      overflow-y: auto;
      min-height: 0;
    }

    .states-container::-webkit-scrollbar { width: 3px; }
    .states-container::-webkit-scrollbar-track { background: var(--gray-1); }
    .states-container::-webkit-scrollbar-thumb { background: var(--gray-3); border-radius: 2px; }

    .section-title {
      font-family: 'JetBrains Mono', monospace;
      font-size: 10px;
      color: var(--text-dim);
      letter-spacing: 2px;
      text-transform: uppercase;
      margin-bottom: 24px;
      display: block;
    }

    .states-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 10px;
    }

    .state-btn {
      background: transparent;
      border: 1px solid var(--gray-3);
      color: var(--text-mid);
      padding: 16px 12px;
      font-family: 'JetBrains Mono', monospace;
      font-size: 10px;
      font-weight: 700;
      letter-spacing: 0.5px;
      text-transform: uppercase;
      text-align: left;
      cursor: pointer;
      transition: all 0.25s cubic-bezier(0.4, 0, 0.2, 1);
      position: relative;
      overflow: hidden;
    }

    .state-btn::before {
      content: '';
      position: absolute;
      top: 0;
      left: -100%;
      width: 100%;
      height: 100%;
      background: linear-gradient(90deg, transparent, var(--gold-dim), transparent);
      transition: left 0.5s;
    }

    .state-btn:hover::before {
      left: 100%;
    }

    .state-btn:hover {
      border-color: var(--text-mid);
      color: white;
      background: var(--gray-1);
    }

    .state-btn.active {
      background: white;
      color: var(--dark);
      border-color: white;
      font-weight: 700;
      box-shadow: 0 4px 16px rgba(255, 255, 255, 0.15);
    }

    /* Controles */
    .controls {
      padding: 30px 40px;
      border-top: 1px solid var(--gray-2);
      background: var(--charcoal);
    }

    .slider-wrapper {
      margin-bottom: 24px;
    }

    .slider-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 12px;
    }

    .slider-label {
      font-family: 'JetBrains Mono', monospace;
      font-size: 9px;
      color: var(--text-dim);
      letter-spacing: 2px;
      text-transform: uppercase;
    }

    .slider-value {
      font-family: 'JetBrains Mono', monospace;
      font-size: 11px;
      color: var(--gold);
      font-weight: 700;
    }

    input[type="range"] {
      width: 100%;
      height: 2px;
      background: var(--gray-3);
      outline: none;
      cursor: pointer;
      -webkit-appearance: none;
    }

    input[type="range"]::-webkit-slider-thumb {
      -webkit-appearance: none;
      width: 16px;
      height: 16px;
      background: var(--gold);
      cursor: pointer;
      border-radius: 50%;
      box-shadow: 0 2px 8px rgba(255, 215, 0, 0.4);
    }

    .btn-main {
      width: 100%;
      padding: 22px;
      background: white;
      color: var(--dark);
      border: none;
      font-family: 'Inter', sans-serif;
      font-size: 13px;
      font-weight: 900;
      letter-spacing: 2px;
      text-transform: uppercase;
      cursor: pointer;
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }

    .btn-main::before {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      width: 0;
      height: 0;
      background: var(--gold);
      border-radius: 50%;
      transform: translate(-50%, -50%);
      transition: width 0.6s, height 0.6s;
    }

    .btn-main:hover::before {
      width: 400px;
      height: 400px;
    }

    .btn-main:hover {
      box-shadow: 0 8px 24px rgba(255, 215, 0, 0.3);
    }

    .btn-main span {
      position: relative;
      z-index: 1;
    }

    .btn-main:disabled {
      opacity: 0.4;
      cursor: not-allowed;
    }

    .btn-main:disabled::before {
      display: none;
    }

    /* ============================================
       CANVAS VIEWPORT
       ============================================ */
    .viewport {
      background: var(--dark);
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 80px;
      position: relative;
    }

    .canvas-wrapper {
      position: relative;
      max-width: 100%;
      max-height: 100%;
      filter: drop-shadow(0 20px 60px rgba(0, 0, 0, 0.8));
    }

    canvas {
      display: block;
      max-width: 100%;
      max-height: 100%;
      border: 1px solid var(--gray-2);
    }

    /* ============================================
       RESPONSIVE
       ============================================ */
    @media (max-width: 1200px) {
      .master-wrapper {
        grid-template-columns: 1fr;
        grid-template-rows: auto 1fr;
      }

      .sidebar {
        border-right: none;
        border-bottom: 1px solid var(--gray-2);
        max-height: 50vh;
      }

      .states-container {
        max-height: 30vh;
      }

      .viewport {
        padding: 40px;
      }
    }

    /* Animación de entrada */
    @keyframes fadeIn {
      from { opacity: 0; transform: translateY(10px); }
      to { opacity: 1; transform: translateY(0); }
    }

    .state-btn {
      animation: fadeIn 0.4s ease forwards;
    }

    .state-btn:nth-child(1) { animation-delay: 0.02s; }
    .state-btn:nth-child(2) { animation-delay: 0.04s; }
    .state-btn:nth-child(3) { animation-delay: 0.06s; }
    .state-btn:nth-child(4) { animation-delay: 0.08s; }
    .state-btn:nth-child(5) { animation-delay: 0.10s; }
  </style>

  <div class="master-wrapper">
    <!-- SIDEBAR -->
    <aside class="sidebar">
      <div class="brand">
        <h1>ANTONOV</h1>
        <span class="brand-tag">Sistema de Consciencia v6.0</span>
      </div>

      <div class="states-container">
        <span class="section-title">Selecciona tu estado interno</span>
        <div class="states-grid" id="statesGrid"></div>
      </div>

      <div class="controls">
        <div class="slider-wrapper">
          <div class="slider-header">
            <span class="slider-label">Escala Visual</span>
            <span class="slider-value" id="sizeDisplay">85px</span>
          </div>
          <input type="range" id="sizeSlider" min="50" max="150" value="85" step="1">
        </div>
        <button id="translateBtn" class="btn-main">
          <span id="btnText">Traducir Estado</span>
        </button>
      </div>
    </aside>

    <!-- VIEWPORT -->
    <main class="viewport">
      <div class="canvas-wrapper">
        <canvas id="mainCanvas"></canvas>
      </div>
    </main>
  </div>

  <script is:inline>
    (function() {
      'use strict';

      // Lista de estados emocionales
      const ESTADOS = [
        'CANSANCIO', 'SOLEDAD', 'ANSIEDAD', 'DUDA', 'RUPTURA', 'DESEO',
        'MIEDO', 'RABIA', 'VACÍO', 'NOSTALGIA', 'CONFUSIÓN', 'TRISTEZA',
        'PÉRDIDA', 'HASTÍO', 'CULPA', 'ENVIDIA', 'DESAMOR', 'AGOBIO',
        'BLOQUEO', 'INQUIETUD', 'ARREPENTIMIENTO', 'FRUSTRACIÓN',
        'INSEGURIDAD', 'DESCONEXIÓN'
      ];

      // Prompt de ANTONOV - Filosofía Core
      const ANTONOV_PROMPT = `ANTONOV ES UN TRADUCTOR DE ESTADOS HUMANOS.
NO RESPONDE PREGUNTAS.
NO DA CONSEJOS.
NO JUZGA.
NO MOTIVA.
OBSERVA Y NOMBRA CON SABIDURÍA DE CALLE.

LENGUAJE:
- SIMPLE, CERCANO, DE CALLE TRANQUILA
- SABIDURÍA ADQUIRIDA CON EXPERIENCIA
- NO SUENA A LIBRO NI A COACH
- NO SUENA A INTELIGENTE
- SUENA A ALGUIEN QUE YA VIVIÓ

UNA SOLA FRASE.
MÁXIMO 12 PALABRAS.
TODO EN MAYÚSCULAS.`;

      // Estado global
      let selectedState = '';
      let currentResponse = 'SELECCIONA UN ESTADO PARA COMENZAR';

      function initializeApp() {
        const canvas = document.getElementById('mainCanvas');
        const ctx = canvas?.getContext('2d');
        const grid = document.getElementById('statesGrid');
        const btn = document.getElementById('translateBtn');
        const btnText = document.getElementById('btnText');
        const slider = document.getElementById('sizeSlider');
        const sizeDisplay = document.getElementById('sizeDisplay');

        if (!canvas || !ctx || !grid) return;

        // Renderizar canvas
        function render() {
          const w = 1080;
          const h = 1080;
          canvas.width = w;
          canvas.height = h;

          // Fondo negro
          ctx.fillStyle = '#000000';
          ctx.fillRect(0, 0, w, h);

          // Grid sutil de fondo
          ctx.strokeStyle = '#0a0a0a';
          ctx.lineWidth = 1;
          const gridSize = 54;
          for (let i = 0; i <= w; i += gridSize) {
            ctx.beginPath();
            ctx.moveTo(i, 0);
            ctx.lineTo(i, h);
            ctx.stroke();
            
            ctx.beginPath();
            ctx.moveTo(0, i);
            ctx.lineTo(w, i);
            ctx.stroke();
          }

          // Estado seleccionado (superior)
          if (selectedState) {
            ctx.font = "700 22px 'JetBrains Mono'";
            ctx.fillStyle = 'rgba(255, 215, 0, 0.6)';
            ctx.textAlign = 'center';
            ctx.fillText(`> ${selectedState}`, w / 2, 120);
          }

          // Respuesta central (texto principal)
          const fontSize = parseInt(slider.value);
          ctx.font = `900 ${fontSize}px 'Inter'`;
          ctx.fillStyle = '#ffffff';
          ctx.textAlign = 'center';
          ctx.textBaseline = 'middle';

          // Dividir en líneas
          const words = currentResponse.toUpperCase().split(' ');
          const lines = [];
          let currentLine = '';

          words.forEach(word => {
            const testLine = currentLine + word + ' ';
            if (ctx.measureText(testLine).width > 900) {
              lines.push(currentLine.trim());
              currentLine = word + ' ';
            } else {
              currentLine = testLine;
            }
          });
          lines.push(currentLine.trim());

          // Centrar verticalmente
          const lineHeight = fontSize * 1.15;
          let startY = (h / 2) - ((lines.length - 1) * lineHeight / 2);

          lines.forEach(line => {
            ctx.fillText(line, w / 2, startY);
            startY += lineHeight;
          });

          // Firma inferior
          ctx.font = "700 18px 'JetBrains Mono'";
          ctx.fillStyle = '#ffd700';
          ctx.textAlign = 'center';
          ctx.fillText('ANTONOV // PROTOCOLO DE VERDAD', w / 2, 960);

          // Línea dorada
          ctx.strokeStyle = '#ffd700';
          ctx.lineWidth = 2;
          ctx.beginPath();
          ctx.moveTo(400, 985);
          ctx.lineTo(680, 985);
          ctx.stroke();
        }

        // Crear botones de estados
        grid.innerHTML = '';
        ESTADOS.forEach(estado => {
          const button = document.createElement('button');
          button.className = 'state-btn';
          button.textContent = estado;
          button.addEventListener('click', () => {
            // Desactivar todos
            document.querySelectorAll('.state-btn').forEach(b => {
              b.classList.remove('active');
            });
            // Activar este
            button.classList.add('active');
            selectedState = estado;
            render();
          });
          grid.appendChild(button);
        });

        // Slider de tamaño
        slider.addEventListener('input', () => {
          sizeDisplay.textContent = slider.value + 'px';
          render();
        });

        // Botón de traducción
        btn.addEventListener('click', async () => {
          if (!selectedState) {
            alert('Por favor selecciona un estado primero');
            return;
          }

          btnText.textContent = 'PROCESANDO...';
          btn.disabled = true;

          try {
            const response = await fetch('https://mis-frases.poderparatriunfar.workers.dev/', {
              method: 'POST',
              headers: {
                'Content-Type': 'application/json'
              },
              body: JSON.stringify({
                prompt: `${ANTONOV_PROMPT}

EL ESTADO ES: "${selectedState}"

ANTONOV LO TRADUCE EN PALABRAS CON CALLE Y SABIDURÍA.`
              })
            });

            const data = await response.json();
            currentResponse = data.text || 'SILENCIO DEL SISTEMA';

          } catch (error) {
            console.error('Error:', error);
            currentResponse = 'ERROR DE CONEXIÓN';
          } finally {
            btnText.textContent = 'TRADUCIR ESTADO';
            btn.disabled = false;
            render();
          }
        });

        // Render inicial
        render();
      }

      // Inicialización
      if (document.readyState === 'loading') {
        document.addEventListener('DOMContentLoaded', initializeApp);
      } else {
        initializeApp();
      }

      // Para Astro
      document.addEventListener('astro:page-load', initializeApp);
    })();
  </script>
</Layout>
