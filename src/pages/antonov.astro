      </div>

      <div class="viewport">
        <canvas id="mainCanvas"></canvas>
      </div>
    </main>
  </div>

  <script>
    (function() {
      'use strict';

      // Part칤culas
      const particlesCanvas = document.getElementById('particles');
      const pCtx = particlesCanvas.getContext('2d');
      
      function resizeParticles() {
        particlesCanvas.width = window.innerWidth;
        particlesCanvas.height = window.innerHeight;
      }
      resizeParticles();
      window.addEventListener('resize', resizeParticles);

      const particles = [];
      for (let i = 0; i < 100; i++) {
        particles.push({
          x: Math.random() * particlesCanvas.width,
          y: Math.random() * particlesCanvas.height,
          vx: (Math.random() - 0.5) * 0.5,
          vy: (Math.random() - 0.5) * 0.5,
          size: Math.random() * 2
        });
      }

      function animateParticles() {
        pCtx.clearRect(0, 0, particlesCanvas.width, particlesCanvas.height);
        pCtx.fillStyle = '#ffd700';
        
        particles.forEach(p => {
          p.x += p.vx;
          p.y += p.vy;
          
          if (p.x < 0 || p.x > particlesCanvas.width) p.vx *= -1;
          if (p.y < 0 || p.y > particlesCanvas.height) p.vy *= -1;
          
          pCtx.globalAlpha = 0.6;
          pCtx.fillRect(p.x, p.y, p.size, p.size);
        });
        
        requestAnimationFrame(animateParticles);
      }
      animateParticles();

      // Timestamp
      function updateTimestamp() {
        const now = new Date();
        const timestamp = document.getElementById('timestamp');
        timestamp.textContent = `[${String(now.getHours()).padStart(2, '0')}:${String(now.getMinutes()).padStart(2, '0')}:${String(now.getSeconds()).padStart(2, '0')}]`;
      }
      setInterval(updateTimestamp, 1000);
      updateTimestamp();

      // App logic
     const ANTONOV_PROMPT = `ERES ANTONOV: UNA INTELIGENCIA L칔CIDA, CRUDA Y TRASCENDENTAL.
Tu misi칩n es traducir estados emocionales en verdades que despierten la conciencia.

REGLAS DE ARTICULACI칍N:
1. No hables como un robot ni uses frases cortadas.
2. Escribe con fluidez humana: usa art칤culos y conectores (EL, LA, QUE, HACIA).
3. Longitud: Entre 10 y 16 palabras. Que la idea sea una sentencia poderosa.
4. Tono: Filos칩fico, directo y con autoridad.
5. Formato: SIEMPRE TODO EN MAY칔SCULAS. Sin punto final.

GU칈A DE PENSAMIENTO POR ESTADO:
- CANSANCIO: No es falta de energ칤a, es la se침al de que est치s cargando un peso que no te pertenece.
- SOLEDAD: Es el 칰nico lugar donde la verdad no tiene donde esconderse.
- ANSIEDAD: Es el ruido del futuro intentando silenciar la paz de tu presente.
- RUPTURA: Un coraz칩n que se rompe es un coraz칩n que por fin ha dejado de estar blindado.

FRASES SEMILLA (TU NIVEL DE REFERENCIA):
- "LA ANSIEDAD ES LA PRISI칍N QUE CONSTRUYES CUANDO TU MENTE SE NIEGA A VIVIR EL PRESENTE"
- "TU CANSANCIO NO PIDE DESCANSO SINO UN PROP칍SITO QUE VALGA LA PENA EL ESFUERZO"
- "LA SOLEDAD NO ES UN CASTIGO SINO EL ESPACIO DONDE POR FIN TE ENCUENTRAS"
- "LO QUE HOY LLAMAS VAC칈O ES EN REALIDAD EL LIENZO DONDE TODO PUEDE COMENZAR"`;


      const FORMATS = {
        instagram: { width: 1080, height: 1080, name: 'Instagram-Post' },
        story: { width: 1080, height: 1920, name: 'Instagram-Story' },
        facebook: { width: 1200, height: 630, name: 'Facebook' },
        twitter: { width: 1200, height: 675, name: 'Twitter' }
      };

      let selectedState = '';
      let currentText = 'SISTEMA INICIADO';
      let currentFormat = 'instagram';

      const canvas = document.getElementById('mainCanvas');
      const ctx = canvas.getContext('2d');
      const buttons = document.querySelectorAll('.estado-btn');
      const formatButtons = document.querySelectorAll('.format-btn');
      const btnExecute = document.getElementById('btnExecute');
      const btnDownload = document.getElementById('btnDownload');
      const statusText = document.getElementById('statusText');

      // Render canvas
      function renderCanvas() {
        const format = FORMATS[currentFormat];
        const w = format.width;
        const h = format.height;
        canvas.width = w;
        canvas.height = h;

        // Fondo con gradiente
        const gradient = ctx.createLinearGradient(0, 0, 0, h);
        gradient.addColorStop(0, '#000000');
        gradient.addColorStop(0.5, '#0a0a0a');
        gradient.addColorStop(1, '#000000');
        ctx.fillStyle = gradient;
        ctx.fillRect(0, 0, w, h);

        // Grid sutil
        ctx.strokeStyle = 'rgba(255, 215, 0, 0.05)';
        ctx.lineWidth = 1;
        const gridSize = Math.min(w, h) / 20;
        for (let i = 0; i <= w; i += gridSize) {
          ctx.beginPath();
          ctx.moveTo(i, 0);
          ctx.lineTo(i, h);
          ctx.stroke();
        }
        for (let i = 0; i <= h; i += gridSize) {
          ctx.beginPath();
          ctx.moveTo(0, i);
          ctx.lineTo(w, i);
          ctx.stroke();
        }

        // Estado arriba
        if (selectedState) {
          const stateSize = Math.max(w, h) * 0.025;
          ctx.font = `700 ${stateSize}px 'Space Mono'`;
          ctx.fillStyle = 'rgba(255, 215, 0, 0.6)';
          ctx.textAlign = 'center';
          ctx.fillText(`> ${selectedState}`, w / 2, h * 0.12);
        }

        // Texto principal
        const baseFontSize = Math.min(w, h) * 0.08;
        ctx.font = `900 ${baseFontSize}px 'Orbitron'`;
        ctx.fillStyle = '#ffd700';
        ctx.textAlign = 'center';
        ctx.textBaseline = 'middle';

        // Glow
        ctx.shadowColor = '#ffd700';
        ctx.shadowBlur = baseFontSize * 0.4;

        const words = currentText.toUpperCase().split(' ');
        const lines = [];
        let line = '';
        const maxWidth = w * 0.85;

        words.forEach(word => {
          const test = line + word + ' ';
          if (ctx.measureText(test).width > maxWidth) {
            lines.push(line.trim());
            line = word + ' ';
          } else {
            line = test;
          }
        });
        lines.push(line.trim());

        const lineHeight = baseFontSize * 1.15;
        let startY = (h / 2) - ((lines.length - 1) * lineHeight / 2);

        lines.forEach(l => {
          ctx.fillText(l, w / 2, startY);
          startY += lineHeight;
        });

        ctx.shadowBlur = 0;

        // Firma
        const signSize = Math.max(w, h) * 0.022;
        ctx.font = `700 ${signSize}px 'Space Mono'`;
        ctx.fillStyle = '#ffd700';
        ctx.fillText('ANTONOV // NEURAL INTERFACE', w / 2, h * 0.88);

        // L칤nea
        ctx.strokeStyle = '#ffd700';
        ctx.lineWidth = 3;
        ctx.beginPath();
        ctx.moveTo(w * 0.35, h * 0.91);
        ctx.lineTo(w * 0.65, h * 0.91);
        ctx.stroke();
      }

      // Botones de estado
      buttons.forEach(btn => {
        btn.addEventListener('click', function() {
          buttons.forEach(b => b.classList.remove('active'));
          btn.classList.add('active');
          selectedState = btn.dataset.estado;
          btnExecute.disabled = false;
          statusText.textContent = `ESTADO_CARGADO: ${selectedState}`;
          renderCanvas();
        });
      });

      // Botones de formato
      formatButtons.forEach(btn => {
        btn.addEventListener('click', function() {
          formatButtons.forEach(b => b.classList.remove('active'));
          btn.classList.add('active');
          currentFormat = btn.dataset.format;
          renderCanvas();
        });
      });

      // Ejecutar
      btnExecute.addEventListener('click', async function() {
        if (!selectedState) return;

        btnExecute.textContent = 'PROCESANDO...';
        btnExecute.disabled = true;
        btnDownload.disabled = true;
        statusText.textContent = 'ACCEDIENDO_MATRIZ_NEURAL...';

        try {
          const response = await fetch('https://mis-frases.poderparatriunfar.workers.dev/', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
              prompt: `${ANTONOV_PROMPT}

EL ESTADO ES: "${selectedState}"

ANTONOV LO TRADUCE.`
            })
          });

          const data = await response.json();
          currentText = data.text || 'SILENCIO';
          statusText.textContent = 'AN츼LISIS_COMPLETO';
          btnDownload.disabled = false;
        } catch (error) {
          currentText = 'ERROR DE CONEXI칍N';
          statusText.textContent = 'ERROR_SISTEMA';
        } finally {
          btnExecute.textContent = 'EJECUTAR AN츼LISIS';
          btnExecute.disabled = false;
          renderCanvas();
        }
      });

      // Descargar
      btnDownload.addEventListener('click', function() {
        const format = FORMATS[currentFormat];
        const link = document.createElement('a');
        const fileName = `antonov-${selectedState.toLowerCase()}-${format.name}-${Date.now()}.png`;
        link.download = fileName;
        link.href = canvas.toDataURL('image/png');
        link.click();
        
        statusText.textContent = `IMAGEN_DESCARGADA: ${format.name}`;
      });

      // Init
      renderCanvas();
      document.fonts.ready.then(renderCanvas);
      window.addEventListener('resize', renderCanvas);
    })();
  </script>
