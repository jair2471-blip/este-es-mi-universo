---
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'ANTONOV | EL NÚCLEO',
};
---

<Layout metadata={metadata}>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;900&family=JetBrains+Mono:wght@500;800&display=swap');

    :root {
      --accent: #ffd700;
      --bg-dark: #050505;
      --sidebar-bg: #0a0a0a;
      --border: rgba(255, 215, 0, 0.1);
    }

    :global(main) { width: 100% !important; max-width: 100% !important; padding: 0 !important; margin: 0 !important; }

    .master-wrapper {
      width: 100%;
      height: 100vh;
      background: #000;
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-family: 'Inter', sans-serif;
    }

    .app-container {
      display: grid;
      grid-template-columns: 400px 1fr;
      width: 100%;
      height: 100vh;
      background: var(--bg-dark);
      overflow: hidden;
    }

    /* SIDEBAR MEJORADO */
    .sidebar {
      background: var(--sidebar-bg);
      padding: 40px;
      border-right: 1px solid #1a1a1a;
      display: flex;
      flex-direction: column;
      box-shadow: 10px 0 30px rgba(0,0,0,0.5);
      z-index: 10;
    }

    .brand h1 { 
      font-weight: 900; font-size: 2.5rem; margin: 0; letter-spacing: -2px; color: #fff;
    }

    .tagline {
      color: var(--accent); font-family: 'JetBrains Mono'; font-size: 10px; 
      letter-spacing: 4px; margin-top: 5px; opacity: 0.8;
    }

    .states-section {
      margin: 40px 0;
      flex-grow: 1;
      display: flex;
      flex-direction: column;
    }

    .section-label {
      font-family: 'JetBrains Mono'; font-size: 9px; color: #555; 
      margin-bottom: 20px; letter-spacing: 2px; text-transform: uppercase;
    }

    .states-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 12px;
      overflow-y: auto;
      padding-right: 15px;
    }

    /* Botones con Sensibilidad Visual */
    .state-btn {
      background: transparent;
      border: 1px solid #222;
      color: #666;
      padding: 14px 10px;
      font-size: 10px;
      text-transform: uppercase;
      cursor: pointer;
      transition: all 0.3s ease;
      font-family: 'JetBrains Mono';
      text-align: left;
      border-radius: 2px;
    }

    .state-btn:hover {
      border-color: #444;
      color: #fff;
      background: #111;
    }

    .state-btn.active {
      background: #fff;
      color: #000;
      border-color: #fff;
      font-weight: 800;
      box-shadow: 0 0 15px rgba(255,255,255,0.1);
    }

    /* ACCIONES */
    .controls {
      padding-top: 20px;
      border-top: 1px solid #1a1a1a;
    }

    .slider-group { margin-bottom: 20px; }
    
    input[type=range] {
      width: 100%;
      height: 4px;
      background: #222;
      accent-color: var(--accent);
      cursor: pointer;
    }

    .btn-main {
      background: #fff; color: #000; border: none; padding: 20px;
      font-weight: 900; text-transform: uppercase; cursor: pointer; width: 100%;
      font-size: 13px; letter-spacing: 1px; transition: 0.2s;
    }
    .btn-main:hover:not(:disabled) { background: var(--accent); }
    .btn-main:disabled { opacity: 0.3; cursor: wait; }

    /* VIEWPORT DEL CANVAS */
    .viewport {
      background: #000;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 60px;
      position: relative;
    }

    canvas {
      max-width: 100%;
      max-height: 100%;
      box-shadow: 0 0 100px rgba(0,0,0,0.8);
    }

    /* Scrollbar minimalista */
    .states-grid::-webkit-scrollbar { width: 2px; }
    .states-grid::-webkit-scrollbar-thumb { background: #333; }
  </style>

  <div class="master-wrapper">
    <div class="app-container">
      <aside class="sidebar">
        <div class="brand">
          <h1>ANTONOV</h1>
          <p class="tagline">PROTOCOLO DE VERDAD</p>
        </div>

        <div class="states-section">
          <span class="section-label">Selecciona tu núcleo:</span>
          <div class="states-grid" id="statesGrid"></div>
        </div>

        <div class="controls">
          <div class="slider-group">
            <div style="display:flex; justify-content:space-between; margin-bottom:8px;">
              <label class="section-label" style="margin:0">Escala de Verdad</label>
              <span id="zoomText" style="font-size: 9px; color: var(--accent)">85px</span>
            </div>
            <input type="range" id="sizeSlider" min="50" max="150" value="85">
          </div>
          <button id="generateBtn" class="btn-main">Analizar Realidad</button>
        </div>
      </aside>

      <main class="viewport">
        <canvas id="mainCanvas"></canvas>
      </main>
    </div>
  </div>

  <script is:inline>
    (function() {
      const ESTADOS = [
        'CANSANCIO', 'SOLEDAD', 'ANSIEDAD', 'DUDA', 'RUPTURA', 'DESEO', 
        'MIEDO', 'RABIA', 'VACÍO', 'NOSTALGIA', 'CONFUSIÓN', 'TRISTEZA', 
        'PÉRDIDA', 'HASTÍO', 'CULPA', 'ENVIDIA', 'DESAMOR', 'AGOBIO', 
        'BLOQUEO', 'INQUIETUD', 'ARREPENTIMIENTO', 'FRUSTRACIÓN', 
        'INSEGURIDAD', 'DESCONEXIÓN'
      ];

      function start() {
        const canvas = document.getElementById('mainCanvas');
        const ctx = canvas?.getContext('2d');
        const grid = document.getElementById('statesGrid');
        const btn = document.getElementById('generateBtn');
        const slider = document.getElementById('sizeSlider');
        const zoomText = document.getElementById('zoomText');

        let activeState = "";
        let response = "LA VERDAD NO NECESITA ADORNOS";

        const draw = () => {
          canvas.width = 1080;
          canvas.height = 1080;
          ctx.fillStyle = '#000';
          ctx.fillRect(0, 0, 1080, 1080);

          // Grid técnico de fondo
          ctx.strokeStyle = '#080808';
          ctx.lineWidth = 1;
          for(let i=0; i<=1080; i+=54) {
            ctx.beginPath(); ctx.moveTo(i,0); ctx.lineTo(i,1080); ctx.stroke();
            ctx.beginPath(); ctx.moveTo(0,i); ctx.lineTo(1080,i); ctx.stroke();
          }

          // Estado seleccionado (Arriba)
          if(activeState) {
            ctx.font = "700 24px 'JetBrains Mono'";
            ctx.fillStyle = 'rgba(255, 215, 0, 0.5)';
            ctx.textAlign = "center";
            ctx.fillText("> ESTADO DETECTADO: " + activeState, 540, 120);
          }

          // Respuesta Central
          const size = parseInt(slider.value);
          zoomText.innerText = size + "px";
          ctx.font = `900 ${size}px 'Inter'`;
          ctx.fillStyle = "#fff";
          ctx.textAlign = "center";
          ctx.textBaseline = "middle";

          const words = response.toUpperCase().split(' ');
          let lines = [], line = '';
          words.forEach(w => {
            if(ctx.measureText(line + w).width < 900) line += w + ' ';
            else { lines.push(line); line = w + ' '; }
          });
          lines.push(line);

          let y = 540 - ((lines.length - 1) * size * 0.6);
          lines.forEach(l => {
            ctx.fillText(l.trim(), 540, y);
            y += size * 1.15;
          });

          // Firma base
          ctx.font = "700 20px 'JetBrains Mono'";
          ctx.fillStyle = "#ffd700";
          ctx.textAlign = "center";
          ctx.fillText("ANTONOV // SISTEMA DE CONSCIENCIA", 540, 960);
          
          ctx.strokeStyle = '#ffd700';
          ctx.lineWidth = 2;
          ctx.beginPath(); ctx.moveTo(400, 985); ctx.lineTo(680, 985); ctx.stroke();
        };

        // Poblar botones
        grid.innerHTML = '';
        ESTADOS.forEach(e => {
          const b = document.createElement('button');
          b.className = 'state-btn';
          b.innerText = e;
          b.onclick = () => {
            document.querySelectorAll('.state-btn').forEach(x => x.classList.remove('active'));
            b.classList.add('active');
            activeState = e;
            draw();
          };
          grid.appendChild(b);
        });

        slider.oninput = draw;

        btn.onclick = async () => {
          if(!activeState) return;
          btn.innerText = "PROCESANDO REALIDAD...";
          btn.disabled = true;

          try {
            const res = await fetch('https://mis-frases.poderparatriunfar.workers.dev/', {
              method: 'POST',
              body: JSON.stringify({ prompt: `Antonov, mentor radical. Traduce "${activeState}" en una verdad cruda de máximo 10 palabras. TODO MAYÚSCULAS.` })
            });
            const data = await res.json();
            response = data.text;
          } catch { response = "ERROR DE CONEXIÓN"; }
          
          btn.innerText = "Analizar Realidad";
          btn.disabled = false;
          draw();
        };

        draw();
      }

      document.addEventListener('astro:page-load', start);
      window.onload = start;
    })();
  </script>
</Layout>
