---
import Layout from '~/layouts/PageLayout.astro';
const metadata = { title: 'ANTONOV | PROTOCOLO' };
const ESTADOS = [
  'CANSANCIO','SOLEDAD','ANSIEDAD','DUDA','RUPTURA','MIEDO',
  'RABIA','VACÍO','NOSTALGIA','CONFUSIÓN','TRISTEZA','CULPA',
  'AGOBIO','BLOQUEO','FRUSTRACIÓN','INSEGURIDAD'
];
---

<Layout metadata={metadata}>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@900&family=JetBrains+Mono:wght@700&display=swap');

    :global(body) { margin: 0; padding: 0; background: #000; overflow: hidden; height: 100vh; }
    :global(main) { margin: 0 !important; padding: 0 !important; height: 100vh; max-width: 100% !important; }

    .antonov-app {
      display: grid;
      grid-template-columns: 380px 1fr;
      height: 100vh;
      background: #000;
      overflow: hidden;
    }

    .sidebar {
      background: #0a0a0a;
      border-right: 1px solid #222;
      display: flex;
      flex-direction: column;
      overflow: hidden;
    }

    .sidebar-content {
      flex: 1;
      overflow-y: auto;
      display: flex;
      flex-direction: column;
    }

    .header-box {
      padding: 40px 30px;
      border-bottom: 1px solid #222;
    }

    h1 { font-size: 2.8rem; font-weight: 900; margin: 0; letter-spacing: -2px; }
    .tag { font-family: 'JetBrains Mono'; color: #ffd700; font-size: 10px; letter-spacing: 3px; }

    .states-container { padding: 30px; padding-top: 0; }
    .grid { display: grid; grid-template-columns: 1fr 1fr; gap: 8px; }

    .btn-state {
      background: #111;
      border: 1px solid #222;
      color: #666;
      padding: 14px;
      font-family: 'JetBrains Mono';
      font-size: 10px;
      cursor: pointer;
      text-transform: uppercase;
      transition: all 0.2s;
    }

    .btn-state:hover { border-color: #ffd700; color: #ffd700; }
    .btn-state.active { background: #ffd700; color: #000; border-color: #ffd700; }

    .controls-box {
      padding: 30px;
      border-top: 1px solid #222;
      background: #050505;
    }

    .size-label { display: flex; justify-content: space-between; font-size: 10px; color: #777; margin-bottom: 10px; }
    input[type="range"] { width: 100%; accent-color: #ffd700; height: 5px; }

    .btn-main {
      width: 100%;
      padding: 20px;
      background: #ffd700;
      color: #000;
      font-weight: 900;
      border: none;
      cursor: pointer;
      text-transform: uppercase;
      margin: 10px 0;
      border-radius: 4px;
    }

    .btn-download { background: #222; color: #ffd700; border: 1px solid #ffd700; }

    .canvas-area {
      display: flex;
      align-items: center;
      justify-content: center;
      background: #000;
      padding: 20px;  /* reducido para llenar más */
    }

    canvas {
      width: 100% !important;
      max-width: none !important;  /* quita el límite para llenar todo */
      height: auto;
      max-height: 95vh;
      border: none;  /* quita borde si quieres full inmersivo */
      box-shadow: 0 0 100px rgba(0,0,0,0.8);
    }

    @media (max-width: 900px) {
      .antonov-app { grid-template-columns: 1fr; grid-template-rows: auto 1fr; }
      .sidebar { border-right: none; border-bottom: 1px solid #222; max-height: 50vh; }
      .canvas-area { padding: 10px; }
    }
  </style>

  <div class="antonov-app">
    <aside class="sidebar">
      <div class="sidebar-content">
        <div class="header-box">
          <h1>ANTONOV</h1>
          <div class="tag">PROTOCOLO DE VERDAD</div>
        </div>

        <div class="states-container">
          <p style="font-size: 10px; color: #555; margin-bottom: 15px;">ESTADO ACTUAL</p>
          <div class="grid">
            {ESTADOS.map((e) => (
              <button class="btn-state" data-state={e}>{e}</button>
            ))}
          </div>
        </div>

        <div class="controls-box">
          <div class="size-label">
            <span>TAMAÑO</span>
            <span id="sizeVal">90 PX</span>
          </div>
          <input type="range" id="slider" min="50" max="180" value="90" />
          <button id="btn-traducir" class="btn-main">TRADUCIR ESTADO</button>
          <button id="btn-descargar" class="btn-main btn-download">DESCARGAR</button>
        </div>
      </div>
    </aside>

    <div class="canvas-area">
      <canvas id="mainCanvas"></canvas>
    </div>
  </div>

  <script is:inline>
    async function startAntonov() {
      const canvas = document.getElementById('mainCanvas');
      if (!canvas) return;
      const ctx = canvas.getContext('2d');
      if (!ctx) return;

      await document.fonts.ready;

      const buttons = document.querySelectorAll('.btn-state');
      const btnTraducir = document.getElementById('btn-traducir');
      const btnDescargar = document.getElementById('btn-descargar');
      const slider = document.getElementById('slider');
      const sizeVal = document.getElementById('sizeVal');

      let selectedState = '';
      let currentText = 'EL SILENCIO ES LA ÚNICA RESPUESTA';

      function draw() {
        const container = canvas.parentElement.getBoundingClientRect();
        const size = Math.min(container.width, container.height * 1.0);  // cuadrado, llena lo que pueda

        canvas.width = size;
        canvas.height = size;

        ctx.fillStyle = '#000';
        ctx.fillRect(0, 0, size, size);

        // Grano sutil
        for (let i = 0; i < 300; i++) {
          ctx.fillStyle = `rgba(255,255,255,${Math.random() * 0.03})`;
          ctx.fillRect(Math.random() * size, Math.random() * size, 1.5, 1.5);
        }

        if (selectedState) {
          ctx.fillStyle = '#ffd700';
          ctx.font = '700 28px "JetBrains Mono"';
          ctx.fillText(`// ${selectedState}`, 60, 90);
          ctx.fillRect(60, 105, 220, 2);
        }

        ctx.fillStyle = '#fff';
        ctx.textAlign = 'center';
        ctx.textBaseline = 'middle';

        let fontSize = parseInt(slider.value) || 90;
        const words = currentText.toUpperCase().split(' ');
        if (words.length > 5) fontSize *= 0.9;
        ctx.font = `900 ${fontSize}px Inter`;

        const lineHeight = fontSize * 0.95;
        const totalH = words.length * lineHeight;
        let y = size / 2 - totalH / 2 + lineHeight / 2;

        ctx.shadowColor = 'rgba(255,215,0,0.4)';
        ctx.shadowBlur = 35;

        words.forEach((word, i) => ctx.fillText(word, size / 2, y + i * lineHeight));

        ctx.shadowBlur = 0;
      }

      buttons.forEach(btn => btn.onclick = () => {
        buttons.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        selectedState = btn.dataset.state;
        draw();
      });

      slider.oninput = () => {
        sizeVal.textContent = `${slider.value} PX`;
        draw();
      };

      btnTraducir.onclick = async () => {
        if (!selectedState) return;
        btnTraducir.disabled = true;
        btnTraducir.textContent = 'EXTRAYENDO...';

        try {
          const res = await fetch('https://mis-frases.poderparatriunfar.workers.dev/', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
              prompt: `ACTÚA COMO UN ORÁCULO BRUTALISTA. ESTADO: ${selectedState}. ESCRIBE UNA SENTENCIA DE MÁXIMO 8 PALABRAS QUE SEA UN GOLPE DE REALIDAD. SIN PIEDAD. TODO MAYÚSCULAS.`
            })
          });
          const data = await res.json();
          currentText = data.text?.trim() || 'NO RESPUESTA';
        } catch {
          currentText = 'ERROR';
        }

        btnTraducir.disabled = false;
        btnTraducir.textContent = 'TRADUCIR ESTADO';
        draw();
      };

      btnDescargar.onclick = () => {
        const link = document.createElement('a');
        link.download = `antonov-${selectedState || 'silencio'}.png`;
        link.href = canvas.toDataURL();
        link.click();
      };

      setTimeout(draw, 200); // delay para layout
      window.addEventListener('resize', draw);
      draw();
    }

    if (document.readyState !== 'loading') startAntonov();
    document.addEventListener('DOMContentLoaded', startAntonov);
    window.addEventListener('load', startAntonov);
  </script>
</Layout>
