// GeneradorVersiculos.astro - Componente para generar im√°genes de vers√≠culos b√≠blicos
---

<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Generador de Vers√≠culos B√≠blicos</title>
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Playfair+Display:wght@400;700&family=Montserrat:wght@400;600;700&display=swap" rel="stylesheet">
    
    <style>
        * {
            margin: 0;
            padding: 0;
            box-sizing: border-box;
        }
        
        body {
            margin: 0;
            background: #e5e7eb;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            font-family: 'Montserrat', sans-serif;
        }

        /* CONTENEDOR M√ìVIL - Esto evita que en PC se vea gigante */
        .mobile-wrapper {
            width: 100%;
            max-width: 420px;
            background: white;
            border-radius: 24px;
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            margin: 15px;
        }

        .app-content {
            padding: 20px;
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .app-header {
            text-align: center;
        }

        .app-header h1 {
            font-family: 'Playfair Display', serif;
            font-size: 1.5rem;
            margin: 0;
            color: #111827;
            font-weight: 600;
        }

        .divider {
            width: 60px;
            height: 3px;
            background: linear-gradient(135deg, #D4AF37 0%, #E8D4A0 100%);
            margin: 10px auto;
            border-radius: 10px;
        }

        .subtitle {
            color: #6b7280;
            font-size: 0.75rem;
            margin-top: 5px;
        }

        .canvas-area {
            position: relative;
            width: 100%;
            aspect-ratio: 4/5;
            background: #f3f4f6;
            border-radius: 16px;
            overflow: hidden;
            box-shadow: 0 10px 30px rgba(0, 0, 0, 0.15);
        }

        #versiculo-canvas {
            width: 100%;
            height: 100%;
            display: block;
            object-fit: contain;
        }

        .controls {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .field {
            display: flex;
            flex-direction: column;
            gap: 5px;
        }

        label {
            font-size: 0.7rem;
            font-weight: 700;
            color: #6b7280;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        textarea, input {
            padding: 12px;
            border: 2px solid #e5e7eb;
            border-radius: 12px;
            font-family: inherit;
            font-size: 0.9rem;
            background: #f9fafb;
            transition: all 0.2s;
        }

        textarea:focus, input:focus {
            outline: none;
            border-color: #D4AF37;
            background: white;
        }

        .actions {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 10px;
        }

        button {
            padding: 14px;
            border: none;
            border-radius: 12px;
            font-weight: 700;
            font-size: 0.8rem;
            cursor: pointer;
            transition: all 0.2s;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        button:active {
            transform: scale(0.95);
        }

        .btn-primary {
            background: linear-gradient(135deg, #D4AF37 0%, #8B7355 100%);
            color: white;
            box-shadow: 0 4px 15px rgba(212, 175, 55, 0.3);
        }

        .btn-primary:hover {
            box-shadow: 0 6px 20px rgba(212, 175, 55, 0.4);
            transform: translateY(-2px);
        }

        .btn-secondary {
            background: #111827;
            color: white;
        }

        .btn-secondary:hover {
            background: #1f2937;
            transform: translateY(-2px);
        }

        .info-card {
            background: linear-gradient(to bottom right, #fef3c7, #fde68a);
            padding: 15px;
            border-radius: 12px;
            border: 1px solid #fbbf24;
        }

        .info-card h3 {
            font-size: 0.8rem;
            font-weight: 700;
            color: #92400e;
            margin-bottom: 8px;
        }

        .info-card ul {
            list-style: none;
            font-size: 0.75rem;
            color: #78350f;
        }

        .info-card li {
            margin: 3px 0;
        }
    </style>
</head>
<body>
    <div class="mobile-wrapper">
        <div class="app-content">
            <!-- Header -->
            <header class="app-header">
                <h1>Generador de Vers√≠culos</h1>
                <div class="divider"></div>
                <p class="subtitle">Crea im√°genes hermosas para compartir la Palabra</p>
            </header>

            <!-- Canvas -->
            <div class="canvas-area">
                <canvas id="versiculo-canvas" width="1080" height="1350"></canvas>
            </div>

            <!-- Controles -->
            <div class="controls">
                <div class="field">
                    <label>Vers√≠culo</label>
                    <textarea id="versiculo-text" rows="4">Porque de tal manera am√≥ Dios al mundo, que ha dado a su Hijo unig√©nito, para que todo aquel que en √©l cree no se pierda, mas tenga vida eterna.</textarea>
                </div>
                
                <div class="field">
                    <label>Referencia B√≠blica</label>
                    <input type="text" id="cita-text" value="Juan 3:16">
                </div>

                <div class="actions">
                    <button id="actualizar-btn" class="btn-primary">‚ú® Actualizar</button>
                    <button id="descargar-btn" class="btn-secondary">‚¨áÔ∏è Descargar</button>
                </div>

                <div class="info-card">
                    <h3>üí° Consejos</h3>
                    <ul>
                        <li>‚Ä¢ El texto se ajusta autom√°ticamente</li>
                        <li>‚Ä¢ Optimizado para Instagram y WhatsApp</li>
                        <li>‚Ä¢ Resoluci√≥n: 1080x1350px (4:5)</li>
                    </ul>
                </div>
            </div>
        </div>
    </div>

    <script>
        // Configuraci√≥n del Canvas
        const canvas = document.getElementById('versiculo-canvas');
        const ctx = canvas.getContext('2d');
        const versiculoInput = document.getElementById('versiculo-text');
        const citaInput = document.getElementById('cita-text');
        const actualizarBtn = document.getElementById('actualizar-btn');
        const descargarBtn = document.getElementById('descargar-btn');

        // Imagen de fondo
        const backgroundImage = new Image();
        backgroundImage.crossOrigin = 'anonymous';
        backgroundImage.src = 'https://images.unsplash.com/photo-1470252649378-9c29740c9fa8?w=1080&h=1350&fit=crop&q=80';

        // Funci√≥n para ajustar texto (word wrap)
        function wrapText(text, maxWidth, fontSize) {
            ctx.font = `${fontSize}px 'Playfair Display', serif`;
            const words = text.split(' ');
            const lines = [];
            let currentLine = '';

            for (let word of words) {
                const testLine = currentLine + (currentLine ? ' ' : '') + word;
                const metrics = ctx.measureText(testLine);
                
                if (metrics.width > maxWidth && currentLine) {
                    lines.push(currentLine);
                    currentLine = word;
                } else {
                    currentLine = testLine;
                }
            }
            
            if (currentLine) {
                lines.push(currentLine);
            }
            
            return lines;
        }

        // Funci√≥n para calcular el tama√±o de fuente √≥ptimo
        function calculateOptimalFontSize(text, maxWidth, maxHeight) {
            let fontSize = 72;
            let lines;
            
            do {
                lines = wrapText(text, maxWidth, fontSize);
                const totalHeight = lines.length * fontSize * 1.4; // 1.4 es el line-height
                
                if (totalHeight <= maxHeight && lines.every(line => {
                    ctx.font = `${fontSize}px 'Playfair Display', serif`;
                    return ctx.measureText(line).width <= maxWidth;
                })) {
                    break;
                }
                
                fontSize -= 2;
            } while (fontSize > 24);
            
            return { fontSize, lines };
        }

        // Funci√≥n principal para dibujar el canvas
        function dibujarCanvas() {
            const versiculo = versiculoInput.value.trim() || 'Escribe tu vers√≠culo aqu√≠';
            const cita = citaInput.value.trim() || 'Cita B√≠blica';

            // Limpiar canvas
            ctx.clearRect(0, 0, canvas.width, canvas.height);

            // Dibujar imagen de fondo
            ctx.drawImage(backgroundImage, 0, 0, canvas.width, canvas.height);

            // Overlay oscuro para legibilidad
            ctx.fillStyle = 'rgba(0, 0, 0, 0.5)';
            ctx.fillRect(0, 0, canvas.width, canvas.height);

            // Calcular tama√±o de fuente y l√≠neas para el vers√≠culo
            const maxWidth = canvas.width - 160; // Margen de 80px a cada lado
            const maxHeight = canvas.height - 400; // Espacio para cita y marca de agua
            const { fontSize, lines } = calculateOptimalFontSize(versiculo, maxWidth, maxHeight);

            // Dibujar vers√≠culo (centrado verticalmente y horizontalmente)
            ctx.fillStyle = '#FFFFFF';
            ctx.font = `${fontSize}px 'Playfair Display', serif`;
            ctx.textAlign = 'center';
            ctx.textBaseline = 'middle';

            const lineHeight = fontSize * 1.4;
            const totalTextHeight = lines.length * lineHeight;
            let startY = (canvas.height - totalTextHeight) / 2;

            // Sombra sutil para el texto
            ctx.shadowColor = 'rgba(0, 0, 0, 0.8)';
            ctx.shadowBlur = 15;
            ctx.shadowOffsetX = 3;
            ctx.shadowOffsetY = 3;

            lines.forEach((line, index) => {
                const y = startY + (index * lineHeight);
                ctx.fillText(line, canvas.width / 2, y);
            });

            // Reset shadow
            ctx.shadowColor = 'transparent';
            ctx.shadowBlur = 0;
            ctx.shadowOffsetX = 0;
            ctx.shadowOffsetY = 0;

            // L√≠nea decorativa dorada arriba de la cita
            const lineY = startY + totalTextHeight + 60;
            const lineWidth = 200;
            const gradient = ctx.createLinearGradient(
                canvas.width / 2 - lineWidth / 2, 
                lineY,
                canvas.width / 2 + lineWidth / 2,
                lineY
            );
            gradient.addColorStop(0, 'rgba(212, 175, 55, 0)');
            gradient.addColorStop(0.5, 'rgba(212, 175, 55, 1)');
            gradient.addColorStop(1, 'rgba(212, 175, 55, 0)');
            
            ctx.strokeStyle = gradient;
            ctx.lineWidth = 2;
            ctx.beginPath();
            ctx.moveTo(canvas.width / 2 - lineWidth / 2, lineY);
            ctx.lineTo(canvas.width / 2 + lineWidth / 2, lineY);
            ctx.stroke();

            // Dibujar cita b√≠blica
            ctx.fillStyle = '#D4AF37'; // Color dorado
            ctx.font = 'bold 48px Montserrat, sans-serif';
            ctx.textAlign = 'center';
            ctx.fillText(cita, canvas.width / 2, lineY + 60);

            // Marca de agua en la parte inferior
            ctx.fillStyle = 'rgba(255, 255, 255, 0.6)';
            ctx.font = '24px Montserrat, sans-serif';
            ctx.textAlign = 'center';
            ctx.fillText('Generado por Mi App Biblia', canvas.width / 2, canvas.height - 40);
        }

        // Event Listeners
        backgroundImage.onload = () => {
            dibujarCanvas();
        };

        actualizarBtn.addEventListener('click', () => {
            dibujarCanvas();
            
            // Feedback visual
            actualizarBtn.textContent = '‚úì Listo';
            setTimeout(() => {
                actualizarBtn.textContent = '‚ú® Actualizar';
            }, 1500);
        });

        descargarBtn.addEventListener('click', () => {
            // Convertir canvas a imagen y descargar
            canvas.toBlob((blob) => {
                const url = URL.createObjectURL(blob);
                const link = document.createElement('a');
                link.download = 'versiculo-dia.png';
                link.href = url;
                link.click();
                URL.revokeObjectURL(url);
                
                // Feedback visual
                descargarBtn.textContent = '‚úì Descargado';
                setTimeout(() => {
                    descargarBtn.textContent = '‚¨áÔ∏è Descargar';
                }, 1500);
            }, 'image/png', 1.0);
        });

        // Actualizar en tiempo real (opcional, puedes comentar si prefieres solo con el bot√≥n)
        versiculoInput.addEventListener('input', () => {
            // Debounce para no redibujar en cada tecla
            clearTimeout(window.updateTimeout);
            window.updateTimeout = setTimeout(dibujarCanvas, 500);
        });

        citaInput.addEventListener('input', () => {
            clearTimeout(window.updateTimeout);
            window.updateTimeout = setTimeout(dibujarCanvas, 500);
        });
    </script>
</body>
</html>
