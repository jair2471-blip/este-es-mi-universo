---
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'ANTONOV PRO | Elite Mindset',
  description: 'La conciencia artificial de los líderes.',
};
---

<Layout metadata={metadata}>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Inter:wght@400;600;700;900&display=swap');

    * { box-sizing: border-box; margin: 0; padding: 0; }

    body {
      background: #000;
      font-family: 'Inter', sans-serif;
    }

    .app-container {
      min-height: 100vh;
      background: radial-gradient(ellipse at center, #0a0a0a 0%, #000000 100%);
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 30px 20px;
      position: relative;
      overflow: hidden;
    }

    /* Partículas de fondo */
    .app-container::before {
      content: '';
      position: absolute;
      top: 0;
      left: 0;
      right: 0;
      bottom: 0;
      background-image: 
        radial-gradient(2px 2px at 20% 30%, rgba(255, 215, 0, 0.1), transparent),
        radial-gradient(2px 2px at 60% 70%, rgba(255, 255, 255, 0.05), transparent),
        radial-gradient(1px 1px at 50% 50%, rgba(255, 215, 0, 0.08), transparent);
      background-size: 200px 200px, 300px 300px, 150px 150px;
      animation: particleFloat 20s linear infinite;
      pointer-events: none;
    }

    @keyframes particleFloat {
      from { background-position: 0 0, 0 0, 0 0; }
      to { background-position: 200px 200px, -300px 300px, 150px -150px; }
    }

    .desktop-layout {
      width: 100%;
      max-width: 1400px;
      display: grid;
      grid-template-columns: 400px 1fr;
      gap: 30px;
      position: relative;
      z-index: 1;
    }

    /* Panel lateral de controles */
    .control-panel {
      background: linear-gradient(135deg, #0d0d0d 0%, #0a0a0a 100%);
      border: 1px solid rgba(255, 215, 0, 0.2);
      border-radius: 20px;
      padding: 35px;
      display: flex;
      flex-direction: column;
      gap: 25px;
      box-shadow: 
        0 30px 60px rgba(0,0,0,0.7),
        inset 0 1px 0 rgba(255, 255, 255, 0.05);
      height: fit-content;
      position: sticky;
      top: 30px;
    }

    .brand {
      text-align: center;
      padding-bottom: 20px;
      border-bottom: 2px solid rgba(255, 215, 0, 0.2);
    }

    .brand h1 {
      font-family: 'Bebas Neue', cursive;
      font-size: 3.8rem;
      color: #fff;
      letter-spacing: 4px;
      text-shadow: 0 0 40px rgba(255, 215, 0, 0.4);
      margin-bottom: 8px;
    }

    .brand p {
      color: #ffd700;
      font-size: 0.7rem;
      letter-spacing: 3px;
      font-weight: 700;
      text-shadow: 0 0 15px rgba(255, 215, 0, 0.5);
    }

    .input-section {
      display: flex;
      flex-direction: column;
      gap: 10px;
    }

    .input-section label {
      color: #888;
      font-size: 0.65rem;
      font-weight: 800;
      text-transform: uppercase;
      letter-spacing: 2px;
    }

    textarea {
      background: linear-gradient(to bottom, #0a0a0a, #080808);
      border: 1px solid rgba(255, 215, 0, 0.25);
      border-radius: 12px;
      color: #fff;
      padding: 16px;
      font-size: 0.95rem;
      font-family: 'Inter', sans-serif;
      resize: none;
      transition: all 0.3s ease;
      min-height: 100px;
      box-shadow: inset 0 2px 8px rgba(0, 0, 0, 0.5);
    }

    textarea:focus {
      outline: none;
      border-color: rgba(255, 215, 0, 0.5);
      box-shadow: 
        inset 0 2px 8px rgba(0, 0, 0, 0.5),
        0 0 25px rgba(255, 215, 0, 0.2);
    }

    textarea::placeholder {
      color: #444;
    }

    .controls-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 15px;
    }

    .control-item {
      display: flex;
      flex-direction: column;
      gap: 8px;
    }

    .control-item label {
      color: #888;
      font-size: 0.6rem;
      font-weight: 800;
      text-transform: uppercase;
      letter-spacing: 1.5px;
    }

    select {
      background: linear-gradient(to bottom, #0a0a0a, #080808);
      border: 1px solid rgba(255, 215, 0, 0.25);
      border-radius: 10px;
      color: #fff;
      padding: 12px;
      font-size: 0.85rem;
      cursor: pointer;
      transition: all 0.3s ease;
    }

    select:focus {
      outline: none;
      border-color: rgba(255, 215, 0, 0.5);
      box-shadow: 0 0 20px rgba(255, 215, 0, 0.2);
    }

    .size-control {
      display: flex;
      flex-direction: column;
      gap: 12px;
    }

    .size-display {
      display: flex;
      justify-content: space-between;
      align-items: center;
      padding: 12px 15px;
      background: #0a0a0a;
      border: 1px solid rgba(255, 215, 0, 0.2);
      border-radius: 10px;
    }

    .size-display span:first-child {
      color: #888;
      font-size: 0.75rem;
      font-weight: 700;
    }

    .size-display span:last-child {
      color: #ffd700;
      font-size: 1.2rem;
      font-weight: 900;
    }

    input[type="range"] {
      -webkit-appearance: none;
      background: transparent;
      height: 6px;
      border-radius: 3px;
      background: linear-gradient(to right, rgba(255, 215, 0, 0.3), rgba(255, 215, 0, 0.1));
      outline: none;
    }

    input[type="range"]::-webkit-slider-thumb {
      -webkit-appearance: none;
      width: 20px;
      height: 20px;
      border-radius: 50%;
      background: linear-gradient(135deg, #ffd700, #ffed4e);
      cursor: pointer;
      box-shadow: 0 0 15px rgba(255, 215, 0, 0.7);
      transition: all 0.2s ease;
    }

    input[type="range"]::-webkit-slider-thumb:hover {
      transform: scale(1.2);
      box-shadow: 0 0 25px rgba(255, 215, 0, 0.9);
    }

    .action-buttons {
      display: flex;
      flex-direction: column;
      gap: 12px;
      padding-top: 10px;
      border-top: 1px solid rgba(255, 215, 0, 0.15);
    }

    button {
      background: linear-gradient(135deg, #fff, #f0f0f0);
      color: #000;
      border: none;
      padding: 16px;
      border-radius: 12px;
      font-weight: 800;
      font-size: 0.85rem;
      text-transform: uppercase;
      letter-spacing: 1.5px;
      cursor: pointer;
      transition: all 0.3s ease;
      position: relative;
      overflow: hidden;
    }

    button::before {
      content: '';
      position: absolute;
      top: 50%;
      left: 50%;
      width: 0;
      height: 0;
      border-radius: 50%;
      background: rgba(255, 215, 0, 0.3);
      transform: translate(-50%, -50%);
      transition: width 0.6s, height 0.6s;
    }

    button:hover::before {
      width: 300px;
      height: 300px;
    }

    button:disabled {
      opacity: 0.5;
      cursor: not-allowed;
    }

    button:hover:not(:disabled) {
      background: linear-gradient(135deg, #ffd700, #ffed4e);
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(255, 215, 0, 0.4);
    }

    .btn-primary {
      background: linear-gradient(135deg, #ffd700, #ffed4e);
      font-weight: 900;
      font-size: 0.95rem;
      padding: 18px;
      animation: pulse 2s ease-in-out infinite;
    }

    @keyframes pulse {
      0%, 100% { box-shadow: 0 4px 20px rgba(255, 215, 0, 0.3); }
      50% { box-shadow: 0 8px 35px rgba(255, 215, 0, 0.6); }
    }

    .btn-primary:hover:not(:disabled) {
      background: linear-gradient(135deg, #ffed4e, #ffd700);
    }

    .btn-variant {
      background: linear-gradient(135deg, #444, #333);
      color: #fff;
    }

    .btn-variant:hover:not(:disabled) {
      background: linear-gradient(135deg, #666, #555);
    }

    .secondary-actions {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 10px;
    }

    /* Panel de visualización */
    .preview-panel {
      background: #000;
      border: 1px solid rgba(255, 215, 0, 0.2);
      border-radius: 20px;
      padding: 40px;
      display: flex;
      flex-direction: column;
      align-items: center;
      justify-content: center;
      min-height: 600px;
      box-shadow: 
        0 30px 60px rgba(0,0,0,0.7),
        inset 0 1px 0 rgba(255, 255, 255, 0.02);
      position: relative;
    }

    .preview-panel::before {
      content: '';
      position: absolute;
      top: 25px;
      left: 25px;
      right: 25px;
      bottom: 25px;
      border: 1px solid rgba(255, 215, 0, 0.1);
      border-radius: 12px;
      pointer-events: none;
    }

    canvas {
      max-width: 100%;
      height: auto;
      border-radius: 12px;
      box-shadow: 
        0 25px 70px rgba(0, 0, 0, 0.9),
        0 0 0 1px rgba(255, 215, 0, 0.2);
      position: relative;
      z-index: 1;
    }

    /* Responsive */
    @media (max-width: 1200px) {
      .desktop-layout {
        grid-template-columns: 1fr;
        max-width: 700px;
      }

      .control-panel {
        position: static;
      }

      .brand h1 {
        font-size: 3rem;
      }
    }

    @media (max-width: 768px) {
      .app-container {
        padding: 20px 15px;
      }

      .brand h1 {
        font-size: 2.5rem;
      }

      .controls-grid {
        grid-template-columns: 1fr;
      }

      .secondary-actions {
        grid-template-columns: 1fr;
      }
    }
  </style>

  <div class="app-container">
    <div class="desktop-layout">
      <!-- Panel de control -->
      <aside class="control-panel">
        <div class="brand">
          <h1>ANTONOV</h1>
          <p>SISTEMA DE EXCELENCIA</p>
        </div>

        <div class="input-section">
          <label>Tu Situación</label>
          <textarea id="userInput" placeholder="Escribe lo que te detiene..."></textarea>
        </div>

        <div class="controls-grid">
          <div class="control-item">
            <label>Formato</label>
            <select id="formatSelect">
              <option value="post">Cuadrado (Feed)</option>
              <option value="story">Vertical (Story)</option>
            </select>
          </div>

          <div class="control-item size-control">
            <label>Tamaño Texto</label>
            <div class="size-display">
              <span>Size</span>
              <span id="sizeValue">100</span>
            </div>
            <input type="range" id="sizeSlider" min="60" max="160" value="100">
          </div>
        </div>

        <div class="action-buttons">
          <button id="generateBtn" class="btn-primary">Generar Sentencia</button>
          <button id="variantBtn" class="btn-variant" style="display:none;">Nueva Variación</button>
          
          <div class="secondary-actions">
            <button id="shareBtn">Compartir</button>
            <button id="downloadBtn">Descargar</button>
          </div>
        </div>
      </aside>

      <!-- Panel de visualización -->
      <main class="preview-panel">
        <canvas id="mainCanvas"></canvas>
      </main>
    </div>
  </div>

  <script is:inline>
    function initApp() {
      const canvas = document.getElementById('mainCanvas');
      const ctx = canvas.getContext('2d');
      
      const ui = {
        input: document.getElementById('userInput'),
        format: document.getElementById('formatSelect'),
        size: document.getElementById('sizeSlider'),
        sizeValue: document.getElementById('sizeValue'),
        generateBtn: document.getElementById('generateBtn'),
        variantBtn: document.getElementById('variantBtn'),
        shareBtn: document.getElementById('shareBtn'),
        downloadBtn: document.getElementById('downloadBtn')
      };

      let generatedText = '';
      let lastUserInput = '';

      function wrapText(context, text, x, y, maxWidth, lineHeight, centerVertical) {
        const words = text.split(' ');
        let lines = [];
        let currentLine = '';

        words.forEach(word => {
          const testLine = currentLine + word + ' ';
          const metrics = context.measureText(testLine);
          
          if (metrics.width > maxWidth && currentLine.length > 0) {
            lines.push(currentLine);
            currentLine = word + ' ';
          } else {
            currentLine = testLine;
          }
        });
        lines.push(currentLine);

        let startY = centerVertical ? y - ((lines.length - 1) * lineHeight) / 2 : y;

        lines.forEach(line => {
          context.fillText(line.trim(), x, startY);
          startY += lineHeight;
        });
      }

      function renderCanvas() {
        const isStory = ui.format.value === 'story';
        const w = 1080;
        const h = isStory ? 1920 : 1080;

        canvas.width = w;
        canvas.height = h;

        // Fondo con gradiente
        const bgGradient = ctx.createLinearGradient(0, 0, 0, h);
        bgGradient.addColorStop(0, '#000000');
        bgGradient.addColorStop(0.5, '#0a0a0a');
        bgGradient.addColorStop(1, '#000000');
        ctx.fillStyle = bgGradient;
        ctx.fillRect(0, 0, w, h);

        // Efecto de viñeta
        const vignette = ctx.createRadialGradient(w/2, h/2, 0, w/2, h/2, w*0.7);
        vignette.addColorStop(0, 'rgba(0,0,0,0)');
        vignette.addColorStop(1, 'rgba(0,0,0,0.5)');
        ctx.fillStyle = vignette;
        ctx.fillRect(0, 0, w, h);

        // Pregunta del usuario (arriba)
        if (ui.input.value.trim()) {
          const questionSize = 28;
          ctx.font = `italic 600 ${questionSize}px 'Inter'`;
          ctx.fillStyle = "rgba(255,255,255,0.35)";
          ctx.textAlign = "center";
          ctx.shadowColor = 'rgba(255, 215, 0, 0.3)';
          ctx.shadowBlur = 20;
          wrapText(ctx, ui.input.value.toUpperCase(), w/2, 130, w*0.85, 42, false);
          ctx.shadowBlur = 0;
        }

        // Texto principal (sentencia)
        const mainText = (generatedText || 'ESPERANDO SENTENCIA...').toUpperCase();
        const fontSize = parseInt(ui.size.value);
        
        ctx.font = `900 ${fontSize}px 'Bebas Neue'`;
        ctx.fillStyle = '#fff';
        ctx.textAlign = 'center';
        ctx.shadowColor = 'rgba(255, 215, 0, 0.5)';
        ctx.shadowBlur = 35;
        
        // Más espacio entre líneas (1.5 en lugar de 1.3)
        const lineSpacing = fontSize * 1.5;
        wrapText(ctx, mainText, w/2, h/2, w*0.85, lineSpacing, true);
        
        ctx.shadowBlur = 0;

        // Firma (abajo)
        ctx.font = "700 24px 'Inter'";
        const brandGradient = ctx.createLinearGradient(0, h - 75, w, h - 75);
        brandGradient.addColorStop(0, '#ffd700');
        brandGradient.addColorStop(0.5, '#ffed4e');
        brandGradient.addColorStop(1, '#ffd700');
        ctx.fillStyle = brandGradient;
        ctx.shadowColor = 'rgba(255, 215, 0, 0.6)';
        ctx.shadowBlur = 20;
        ctx.fillText('EL UNIVERSO DE LA MENTE', w/2, h - 75);
        ctx.shadowBlur = 0;
      }

      async function generateSentence(isVariation = false) {
        const userText = ui.input.value.trim();
        
        if (!userText) {
          alert('Escribe algo primero, líder.');
          return;
        }

        const activeBtn = isVariation ? ui.variantBtn : ui.generateBtn;
        activeBtn.textContent = 'GENERANDO...';
        activeBtn.disabled = true;

        try {
          lastUserInput = userText;
          
          console.log('=== DEBUG INFO ===');
          console.log('Método: POST');
          console.log('URL:', 'https://mis-frases.poderparatriunfar.workers.dev/');
          console.log('Prompt:', userText);
          
          const requestBody = {
            prompt: `Eres Antonov, un mentor de elite que combina la disciplina de Jocko Willink con la sabiduría de Simon Sinek. 

Contexto del usuario: "${userText}"

Responde con 2 FRASES PODEROSAS en MAYÚSCULAS que:
- Sean DIRECTAS y ACCIONABLES (estilo Jocko: "GOOD. Ahora actúa")
- Enfoquen en RESPONSABILIDAD PERSONAL sin victimización
- Inspiren PROPÓSITO y CLARIDAD (estilo Sinek: "Empieza con el por qué")
- Sean FIRMES pero RESPETUOSAS - sin insultos, sin agresión
- Transformen el obstáculo en OPORTUNIDAD
- Generen EMPODERAMIENTO, no culpa

Tono: Comandante que cree en su equipo. Mentor exigente pero justo. Líder que inspira desde el ejemplo.${isVariation ? '\n\nDa una versión COMPLETAMENTE DIFERENTE a la anterior, con nuevo enfoque.' : ''}`
          };
          
          console.log('Body:', JSON.stringify(requestBody));
          
          const response = await fetch('https://mis-frases.poderparatriunfar.workers.dev/', {
            method: 'POST',
            mode: 'cors',
            headers: { 
              'Content-Type': 'application/json',
              'Accept': 'application/json'
            },
            body: JSON.stringify(requestBody)
          });

          console.log('Status:', response.status);
          console.log('Headers:', [...response.headers.entries()]);

          const responseText = await response.text();
          console.log('Response text:', responseText);

          if (!response.ok) {
            throw new Error(`HTTP ${response.status}: ${responseText}`);
          }

          const data = JSON.parse(responseText);
          console.log('Parsed data:', data);
          
          if (data && data.text) {
            generatedText = data.text.replace(/\*\*/g, '').replace(/\*/g, '');
            renderCanvas();
            ui.variantBtn.style.display = 'block';
          } else if (data && data.error) {
            throw new Error(data.error);
          } else {
            throw new Error('Respuesta sin texto válido');
          }

        } catch (error) {
          console.error('=== ERROR COMPLETO ===');
          console.error(error);
          alert(`Error: ${error.message}`);
        } finally {
          activeBtn.textContent = isVariation ? 'NUEVA VARIACIÓN' : 'GENERAR SENTENCIA';
          activeBtn.disabled = false;
        }
      }

      // Event listeners
      ui.generateBtn.onclick = () => generateSentence(false);
      ui.variantBtn.onclick = () => generateSentence(true);

      ui.downloadBtn.onclick = () => {
        const link = document.createElement('a');
        link.download = `antonov-${Date.now()}.png`;
        link.href = canvas.toDataURL('image/png');
        link.click();
      };

      ui.shareBtn.onclick = async () => {
        try {
          const blob = await (await fetch(canvas.toDataURL())).blob();
          const file = new File([blob], 'antonov.png', { type: 'image/png' });
          
          if (navigator.share) {
            await navigator.share({ files: [file] });
          } else {
            alert('Descarga la imagen para compartir.');
          }
        } catch (error) {
          console.error('Error al compartir:', error);
        }
      };

      ui.size.oninput = () => {
        ui.sizeValue.textContent = ui.size.value;
        renderCanvas();
      };

      ui.format.onchange = renderCanvas;

      // Preview en tiempo real
      let typingTimer;
      ui.input.oninput = () => {
        clearTimeout(typingTimer);
        typingTimer = setTimeout(() => {
          renderCanvas();
        }, 400);
      };

      // Enter para generar
      ui.input.onkeydown = (e) => {
        if (e.key === 'Enter' && e.ctrlKey) {
          e.preventDefault();
          ui.generateBtn.click();
        }
      };

      // Render inicial
      renderCanvas();
    }

    document.addEventListener('astro:page-load', initApp);
    if (document.readyState === 'loading') {
      document.addEventListener('DOMContentLoaded', initApp);
    } else {
      initApp();
    }
  </script>
</Layout>