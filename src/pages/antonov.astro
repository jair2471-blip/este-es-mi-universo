---
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'ANTONOV | Frecuencia de Consciencia',
  description: 'Interfaz de mentoría disruptiva para mentes de alto impacto.',
};
---

<Layout metadata={metadata}>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Space+Mono:wght@400;700&family=Inter:wght@900&display=swap');

    :root {
      --gold: #ffd700;
      --deep-black: #050505;
    }

    body { background: #000; font-family: 'Space Mono', monospace; color: white; margin: 0; overflow-x: hidden; }

    .master-container {
      min-height: 100vh;
      display: grid;
      grid-template-columns: 450px 1fr;
      background: black;
      position: relative;
    }

    /* Efecto de Scanline CRT */
    .master-container::after {
      content: " ";
      position: absolute; top: 0; left: 0; bottom: 0; right: 0;
      background: linear-gradient(rgba(18, 16, 16, 0) 50%, rgba(0, 0, 0, 0.25) 50%), 
                  linear-gradient(90deg, rgba(255, 0, 0, 0.06), rgba(0, 255, 0, 0.02), rgba(0, 0, 255, 0.06));
      background-size: 100% 4px, 3px 100%;
      pointer-events: none; z-index: 10;
    }

    /* Sidebar futurista */
    .sidebar {
      padding: 60px 40px;
      border-right: 1px solid rgba(255, 215, 0, 0.1);
      display: flex; flex-direction: column; gap: 40px;
      background: rgba(5, 5, 5, 0.5);
      backdrop-filter: blur(10px);
      z-index: 20;
    }

    .status-bar { font-size: 10px; color: var(--gold); letter-spacing: 2px; display: flex; align-items: center; gap: 10px; }
    .status-dot { width: 6px; height: 6px; background: var(--gold); border-radius: 50%; animation: pulse 1s infinite; }

    .brand h1 { font-family: 'Bebas Neue', cursive; font-size: 5rem; line-height: 0.8; margin: 0; letter-spacing: -2px; }
    .brand p { font-size: 11px; letter-spacing: 5px; color: var(--gold); margin-top: 10px; font-weight: bold; }

    .input-group label { font-size: 10px; text-transform: uppercase; color: #444; margin-bottom: 10px; display: block; }
    
    textarea {
      background: transparent; border: 1px solid #222; border-radius: 4px;
      color: #fff; padding: 20px; font-size: 14px; resize: none; width: 100%; height: 120px;
      transition: 0.4s; font-family: 'Space Mono', monospace;
    }
    textarea:focus { border-color: var(--gold); outline: none; background: rgba(255, 215, 0, 0.02); }

    .action-btn {
      background: var(--gold); color: black; border: none; padding: 20px;
      font-weight: bold; cursor: pointer; text-transform: uppercase; letter-spacing: 2px;
      transition: 0.3s; clip-path: polygon(0 0, 100% 0, 100% 70%, 90% 100%, 0 100%);
    }
    .action-btn:hover { background: white; transform: scale(1.02); }

    .canvas-container {
      display: flex; align-items: center; justify-content: center;
      padding: 40px; background: #000; position: relative;
    }

    #mainCanvas {
      max-width: 90%; max-height: 85vh;
      box-shadow: 0 0 100px rgba(255, 215, 0, 0.05);
      background: #000;
    }

    @keyframes pulse { 0% { opacity: 1; } 50% { opacity: 0.3; } 100% { opacity: 1; } }

    @media (max-width: 1100px) {
      .master-container { grid-template-columns: 1fr; }
      .sidebar { border-right: none; border-bottom: 1px solid rgba(255,215,0,0.1); }
    }
  </style>

  <div class="master-container">
    <aside class="sidebar">
      <div class="status-bar">
        <div class="status-dot"></div> SYSTEM ONLINE • V.4.0_CORE
      </div>
      
      <div class="brand">
        <h1>ANTONOV</h1>
        <p>CONSCIENCIA SINTÉTICA</p>
      </div>

      <div class="input-group">
        <label>Transmisión de pensamiento</label>
        <textarea id="userInput" placeholder="Escribe tu duda o bloqueo..."></textarea>
      </div>

      <div style="display:grid; grid-template-columns: 1fr 1fr; gap:10px;">
        <div class="input-group">
          <label>Aspecto</label>
          <select id="formatSelect" style="width:100%; background:black; color:white; border:1px solid #222; padding:10px;">
            <option value="post">SQ_1080</option>
            <option value="story">VT_1920</option>
          </select>
        </div>
        <div class="input-group">
          <label>Zoom</label>
          <input type="range" id="sizeSlider" min="70" max="180" value="100" style="width:100%; accent-color:var(--gold);">
        </div>
      </div>

      <button id="generateBtn" class="action-btn">EJECUTAR ANÁLISIS</button>
      <button id="downloadBtn" style="background:none; color:white; border:1px solid #333; padding:15px; cursor:pointer; font-size:10px; letter-spacing:2px;">GUARDAR DATA_LOG</button>
    </aside>

    <main class="canvas-container">
      <canvas id="mainCanvas"></canvas>
    </main>
  </div>

  <script is:inline>
    function initApp() {
      const canvas = document.getElementById('mainCanvas');
      const ctx = canvas?.getContext('2d', { alpha: false });
      if (!canvas || !ctx) return;

      const ui = {
        input: document.getElementById('userInput'),
        format: document.getElementById('formatSelect'),
        size: document.getElementById('sizeSlider'),
        generateBtn: document.getElementById('generateBtn'),
        downloadBtn: document.getElementById('downloadBtn')
      };

      let currentText = "INICIA LA SECUENCIA PARA OBTENER CLARIDAD";
      let isAnalysing = false;

      function drawGrain() {
        const w = canvas.width;
        const h = canvas.height;
        const imageData = ctx.getImageData(0, 0, w, h);
        const data = imageData.data;
        for (let i = 0; i < data.length; i += 4) {
          const noise = Math.random() * 15;
          data[i] += noise;
          data[i+1] += noise;
          data[i+2] += noise;
        }
        ctx.putImageData(imageData, 0, 0);
      }

      function wrapText(context, text, x, y, maxWidth, lineHeight) {
        const words = text.split(' ');
        const lines = [];
        let currentLine = '';

        words.forEach(word => {
          const testLine = currentLine + word + ' ';
          if (context.measureText(testLine).width > maxWidth) {
            lines.push(currentLine);
            currentLine = word + ' ';
          } else {
            currentLine = testLine;
          }
        });
        lines.push(currentLine);

        let startY = y - ((lines.length - 1) * lineHeight) / 2;
        lines.forEach(line => {
          // Efecto Glitch en el texto
          context.fillText(line.trim(), x, startY);
          startY += lineHeight;
        });
      }

      function render() {
        const isStory = ui.format.value === 'story';
        const w = 1080;
        const h = isStory ? 1920 : 1080;
        canvas.width = w; canvas.height = h;

        // Fondo Deep Space
        ctx.fillStyle = '#000';
        ctx.fillRect(0, 0, w, h);

        // Grid sutil
        ctx.strokeStyle = 'rgba(255, 215, 0, 0.03)';
        ctx.lineWidth = 1;
        for(let i=0; i<w; i+=50) { ctx.beginPath(); ctx.moveTo(i,0); ctx.lineTo(i,h); ctx.stroke(); }
        for(let j=0; j<h; j+=50) { ctx.beginPath(); ctx.moveTo(0,j); ctx.lineTo(w,j); ctx.stroke(); }

        // Texto Principal
        const fontSize = parseInt(ui.size.value);
        ctx.font = `900 ${fontSize}px 'Inter'`;
        ctx.textAlign = 'center';
        ctx.textBaseline = 'middle';
        
        // Sombra cromática
        ctx.shadowColor = 'rgba(255, 0, 0, 0.5)';
        ctx.shadowOffsetX = 2;
        ctx.fillStyle = '#fff';
        
        wrapText(ctx, currentText.toUpperCase(), w/2, h/2, w * 0.85, fontSize * 1);

        // Decoraciones de Interfaz
        ctx.shadowOffsetX = 0;
        ctx.font = "700 12px 'Space Mono'";
        ctx.fillStyle = "#ffd700";
        ctx.letterSpacing = "10px";
        ctx.fillText("• ANALYTICAL_MINDSET •", w/2, 80);
        
        // Círculos de enfoque
        ctx.strokeStyle = "#ffd700";
        ctx.lineWidth = 2;
        ctx.strokeRect(40, 40, 40, 40); // Top Left
        ctx.strokeRect(w-80, h-80, 40, 40); // Bottom Right

        drawGrain();
      }

      async function triggerAnalysis() {
        const prompt = ui.input.value.trim();
        if (!prompt || isAnalysing) return;

        isAnalysing = true;
        ui.generateBtn.textContent = "DECODIFICANDO...";
        ui.generateBtn.style.opacity = "0.5";

        try {
          const res = await fetch('https://mis-frases.poderparatriunfar.workers.dev/', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
              prompt: `Antonov, actúa como una IA de consciencia pura. El usuario dice: "${prompt}". 
              Dile la verdad cruda, en 10 palabras o menos, sin rodeos, lenguaje directo y potente. 
              Como si hackearas su mente. MAYÚSCULAS.`
            })
          });
          const data = await res.json();
          if (data.text) {
            currentText = data.text;
            render();
          }
        } catch {
          currentText = "ERROR_DE_CONEXIÓN_REINTENTA";
          render();
        } finally {
          isAnalysing = false;
          ui.generateBtn.textContent = "EJECUTAR ANÁLISIS";
          ui.generateBtn.style.opacity = "1";
        }
      }

      ui.generateBtn.onclick = triggerAnalysis;
      ui.size.oninput = render;
      ui.format.onchange = render;
      ui.downloadBtn.onclick = () => {
        const a = document.createElement('a');
        a.download = `LOG_${Date.now()}.png`;
        a.href = canvas.toDataURL('image/png');
        a.click();
      };

      render();
    }

    document.addEventListener('DOMContentLoaded', initApp);
    document.addEventListener('astro:page-load', initApp);
  </script>
</Layout>
