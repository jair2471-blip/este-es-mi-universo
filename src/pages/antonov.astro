---
import Layout from '~/layouts/PageLayout.astro';
const metadata = { title: 'ANTONOV | PROTOCOLO' };
const ESTADOS = [
  'CANSANCIO','SOLEDAD','ANSIEDAD','DUDA','RUPTURA','MIEDO',
  'RABIA','VACÍO','NOSTALGIA','CONFUSIÓN','TRISTEZA','CULPA',
  'AGOBIO','BLOQUEO','FRUSTRACIÓN','INSEGURIDAD'
];
---

<Layout metadata={metadata}>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@700;900&family=JetBrains+Mono:wght@500;700&display=swap');

    :global(body) { margin: 0; padding: 0; background: #000; overflow: hidden; }
    :global(main) { max-width: 100% !important; padding: 0 !important; margin: 0 !important; height: 100vh; }

    .antonov-app {
      display: grid;
      grid-template-columns: minmax(320px, 380px) 1fr;
      height: 100vh;
      background: #000;
      color: #f5f5f5;
      overflow: hidden;
    }

    .sidebar {
      background: rgba(10,10,10,0.95);
      backdrop-filter: blur(8px);
      border-right: 1px solid rgba(255,215,0,0.08);
      display: flex;
      flex-direction: column;
      padding: 0;
      overflow: hidden;
    }

    .header-box {
      padding: 48px 32px 32px;
      border-bottom: 1px solid rgba(255,215,0,0.08);
    }

    h1 {
      font-size: 3.2rem;
      font-weight: 900;
      letter-spacing: -3px;
      margin: 0;
      color: #fff;
    }

    .tag {
      font-family: 'JetBrains Mono';
      color: #ffd700;
      font-size: 10px;
      letter-spacing: 4px;
      margin-top: 8px;
      opacity: 0.7;
    }

    .states-container {
      flex: 1;
      overflow-y: auto;
      padding: 32px;
    }

    .grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 10px;
    }

    .btn-state {
      background: rgba(30,30,30,0.8);
      border: 1px solid rgba(255,215,0,0.1);
      color: #aaa;
      padding: 16px 12px;
      font-family: 'JetBrains Mono';
      font-size: 11px;
      font-weight: 500;
      cursor: pointer;
      text-transform: uppercase;
      letter-spacing: 1px;
      transition: all 0.3s ease;
      border-radius: 4px;
    }

    .btn-state:hover {
      border-color: #ffd700;
      color: #ffd700;
      background: rgba(255,215,0,0.05);
    }

    .btn-state.active {
      background: #ffd700;
      color: #000;
      border-color: #ffd700;
      font-weight: 700;
      box-shadow: 0 0 20px rgba(255,215,0,0.3);
    }

    .controls-box {
      padding: 32px;
      border-top: 1px solid rgba(255,215,0,0.08);
      background: rgba(5,5,5,0.9);
    }

    .size-label {
      display: flex;
      justify-content: space-between;
      font-size: 10px;
      color: #777;
      margin-bottom: 12px;
      letter-spacing: 1px;
    }

    input[type="range"] {
      width: 100%;
      height: 5px;
      background: rgba(255,215,0,0.1);
      border-radius: 5px;
      accent-color: #ffd700;
      margin-bottom: 24px;
    }

    .btn-main {
      width: 100%;
      padding: 18px;
      background: #ffd700;
      color: #000;
      font-weight: 900;
      border: none;
      cursor: pointer;
      text-transform: uppercase;
      letter-spacing: 2px;
      border-radius: 6px;
      transition: all 0.3s ease;
      box-shadow: 0 4px 15px rgba(255,215,0,0.2);
    }

    .btn-main:hover {
      transform: translateY(-2px);
      box-shadow: 0 8px 25px rgba(255,215,0,0.35);
    }

    .btn-download {
      background: transparent;
      border: 1px solid #ffd700;
      color: #ffd700;
      margin-top: 12px;
    }

    .btn-download:hover {
      background: #ffd700;
      color: #000;
    }

    .canvas-area {
      display: flex;
      align-items: center;
      justify-content: center;
      background: #000;
      padding: 40px;
    }

    canvas {
      width: 100%;
      max-width: 950px;
      height: auto;
      max-height: 90vh;
      border-radius: 8px;
      border: 1px solid rgba(255,255,255,0.04);
      box-shadow: 0 20px 80px rgba(0,0,0,0.8), inset 0 0 60px rgba(255,215,0,0.03);
    }

    @media (max-width: 950px) {
      .antonov-app { grid-template-columns: 1fr; }
      .sidebar { border-right: none; border-bottom: 1px solid rgba(255,215,0,0.08); }
      .states-container { padding: 24px; }
      .controls-box { padding: 24px; }
      .canvas-area { padding: 20px; }
    }
  </style>

  <div class="antonov-app">
    <aside class="sidebar">
      <div class="sidebar-content">
        <div class="header-box">
          <h1>ANTONOV</h1>
          <div class="tag">PROTOCOLO DE VERDAD</div>
        </div>

        <div class="states-container">
          <p style="font-size: 10px; color: #666; margin-bottom: 20px; letter-spacing: 2px;">
            ESTADO ACTUAL
          </p>
          <div class="grid">
            {ESTADOS.map((e) => (
              <button class="btn-state" data-state={e}>{e}</button>
            ))}
          </div>
        </div>

        <div class="controls-box">
          <div class="size-label">
            <span>TAMAÑO</span>
            <span id="sizeVal">90 PX</span>
          </div>
          <input type="range" id="slider" min="50" max="180" value="90" />
          <button id="btn-traducir" class="btn-main">TRADUCIR ESTADO</button>
          <button id="btn-descargar" class="btn-main btn-download">DESCARGAR</button>
        </div>
      </div>
    </aside>

    <div class="canvas-area">
      <canvas id="mainCanvas"></canvas>
    </div>
  </div>

  <script is:inline>
    async function initAntonov() {
      const canvas = document.getElementById('mainCanvas');
      if (!canvas) return;
      const ctx = canvas.getContext('2d');
      if (!ctx) return;

      await document.fonts.ready.catch(() => {});

      const buttons = document.querySelectorAll('.btn-state');
      const btnTraducir = document.getElementById('btn-traducir');
      const btnDescargar = document.getElementById('btn-descargar');
      const slider = document.getElementById('slider');
      const sizeVal = document.getElementById('sizeVal');

      let selectedState = '';
      let currentText = 'EL SILENCIO ES LA ÚNICA RESPUESTA';

      function draw() {
        const rect = canvas.getBoundingClientRect();
        const size = Math.min(rect.width * 0.96, rect.height * 0.9, 1000);

        canvas.width = size;
        canvas.height = size;

        ctx.fillStyle = '#000';
        ctx.fillRect(0, 0, size, size);

        // Grano muy sutil
        ctx.globalAlpha = 0.4;
        for (let i = 0; i < 180; i++) {
          ctx.fillStyle = `rgba(255,255,255,${Math.random() * 0.015})`;
          ctx.fillRect(Math.random() * size, Math.random() * size, 1, 1);
        }
        ctx.globalAlpha = 1;

        // Header
        if (selectedState) {
          ctx.fillStyle = '#ffd700';
          ctx.font = '700 26px "JetBrains Mono", monospace';
          ctx.textAlign = 'left';
          ctx.fillText(`// ${selectedState}`, 50, 80);
          ctx.fillRect(50, 95, 200, 2);
        }

        // Texto central
        ctx.fillStyle = '#ffffff';
        ctx.textAlign = 'center';
        ctx.textBaseline = 'middle';

        let fontSize = parseInt(slider.value) || 90;
        fontSize = Math.min(fontSize, size * 0.14);

        const words = currentText.toUpperCase().split(' ');
        if (words.length > 6) fontSize *= 0.85;
        if (words.length > 9) fontSize *= 0.75;

        ctx.font = `900 ${fontSize}px Inter, sans-serif`;

        const lineHeight = fontSize * 0.94;
        const totalHeight = words.length * lineHeight;
        let y = size / 2 - totalHeight / 2 + lineHeight / 2;

        ctx.shadowColor = 'rgba(255,215,0,0.35)';
        ctx.shadowBlur = 30;
        ctx.shadowOffsetY = 4;

        words.forEach((word, i) => {
          ctx.fillText(word, size / 2, y + i * lineHeight);
        });

        ctx.shadowBlur = 0;
      }

      buttons.forEach(btn => {
        btn.addEventListener('click', () => {
          buttons.forEach(b => b.classList.remove('active'));
          btn.classList.add('active');
          selectedState = btn.dataset.state;
          draw();
        });
      });

      slider.addEventListener('input', () => {
        sizeVal.textContent = `${slider.value} PX`;
        draw();
      });

      btnTraducir.addEventListener('click', async () => {
        if (!selectedState) return alert('Selecciona un estado primero');
        btnTraducir.disabled = true;
        btnTraducir.textContent = 'EXTRAYENDO...';

        try {
          const res = await fetch('https://mis-frases.poderparatriunfar.workers.dev/', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
              prompt: `ACTÚA COMO UN ORÁCULO BRUTALISTA. ESTADO: ${selectedState}. ESCRIBE UNA SENTENCIA DE MÁXIMO 8 PALABRAS QUE SEA UN GOLPE DE REALIDAD. SIN PIEDAD. TODO MAYÚSCULAS.`
            })
          });
          const data = await res.json();
          currentText = data.text?.trim() || 'SIN RESPUESTA';
        } catch {
          currentText = 'ERROR';
        }

        btnTraducir.disabled = false;
        btnTraducir.textContent = 'TRADUCIR ESTADO';
        draw();
      });

      btnDescargar.addEventListener('click', () => {
        const link = document.createElement('a');
        link.download = `antonov_${selectedState || 'verdad'}.png`;
        link.href = canvas.toDataURL('image/png');
        link.click();
      });

      // Lanzar dibujo con delay para que el layout se asiente
      setTimeout(draw, 100);
      window.addEventListener('resize', draw);
      draw();
    }

    // Intentos múltiples de inicio
    if (document.readyState !== 'loading') initAntonov();
    document.addEventListener('DOMContentLoaded', initAntonov);
    window.addEventListener('load', initAntonov);
    document.addEventListener('astro:after-swap', initAntonov);
  </script>
</Layout>
