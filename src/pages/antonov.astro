<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>ORÁCULO SAGRADO | INTERFAZ NEURAL</title>
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700&family=Space+Mono&display=swap" rel="stylesheet">
    
    <style>
        :root {
            --neon-gold: #FFD700;
            --dark-bg: #0a0a0a;
            --glass: rgba(255, 255, 255, 0.05);
        }

        body {
            margin: 0;
            background: var(--dark-bg);
            color: white;
            font-family: 'Space Mono', monospace;
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            overflow-x: hidden;
        }

        /* EL LIMITADOR MÁGICO PARA QUE NO SE VEA GIGANTE EN PC */
        .app-shell {
            width: 100%;
            max-width: 400px; /* Tamaño celular en PC */
            height: 90vh;
            max-height: 800px;
            background: #111;
            border: 1px solid rgba(255, 215, 0, 0.2);
            border-radius: 20px;
            display: flex;
            flex-direction: column;
            position: relative;
            box-shadow: 0 0 40px rgba(0,0,0,1);
            margin: 20px;
        }

        .header {
            padding: 20px;
            text-align: center;
            border-bottom: 1px solid var(--glass);
        }

        .header h1 {
            font-family: 'Orbitron', sans-serif;
            font-size: 1.2rem;
            margin: 0;
            letter-spacing: 2px;
            color: var(--neon-gold);
        }

        .canvas-container {
            flex: 1;
            padding: 15px;
            display: flex;
            justify-content: center;
            align-items: center;
        }

        #mainCanvas {
            width: 100%;
            height: auto;
            aspect-ratio: 4/5;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0,0,0,0.5);
            background: #222;
        }

        .controls {
            padding: 20px;
            background: var(--glass);
            border-radius: 20px 20px 0 0;
            display: flex;
            flex-direction: column;
            gap: 12px;
        }

        label {
            font-size: 10px;
            color: var(--neon-gold);
            opacity: 0.8;
        }

        textarea, input {
            background: rgba(0,0,0,0.3);
            border: 1px solid rgba(255,215,0,0.1);
            color: white;
            padding: 10px;
            border-radius: 8px;
            font-family: 'Space Mono', monospace;
            font-size: 12px;
            width: 100%;
            box-sizing: border-box;
        }

        .btn-group {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 10px;
            margin-top: 10px;
        }

        button {
            background: transparent;
            border: 1px solid var(--neon-gold);
            color: var(--neon-gold);
            padding: 12px;
            border-radius: 8px;
            cursor: pointer;
            font-family: 'Orbitron', sans-serif;
            font-size: 10px;
            transition: all 0.3s;
        }

        button:hover {
            background: var(--neon-gold);
            color: black;
        }

        .status-bar {
            padding: 10px;
            font-size: 8px;
            text-align: center;
            color: #444;
        }
    </style>
</head>
<body>

    <div class="app-shell">
        <div class="header">
            <h1>NEURAL BIBLE v1.0</h1>
            <div style="font-size: 8px; color: #666;">ESTADO ACTUAL: {ESTADOS[2]}</div>
        </div>

        <div class="canvas-container">
            <canvas id="mainCanvas" width="1080" height="1350"></canvas>
        </div>

        <div class="controls">
            <div>
                <label>> INGRESE_TEXTO</label>
                <textarea id="txtVersiculo" rows="3">Todo lo puedo en Cristo que me fortalece.</textarea>
            </div>
            
            <div>
                <label>> REFERENCIA_DATA</label>
                <input type="text" id="txtCita" value="Filipenses 4:13">
            </div>

            <div class="btn-group">
                <button id="btnRandom">NEW_BG</button>
                <button id="btnDownload">SAVE_DATA</button>
            </div>
        </div>

        <div class="status-bar">
            SYSTEM_OK // CONNECTION_STABLE // 2026
        </div>
    </div>

    <script>
        const canvas = document.getElementById('mainCanvas');
        const ctx = canvas.getContext('2d');
        const textInput = document.getElementById('txtVersiculo');
        const citaInput = document.getElementById('txtCita');

        const fondos = [
            'https://images.unsplash.com/photo-1470252649378-9c29740c9fa8?w=1080&h=1350&fit=crop',
            'https://images.unsplash.com/photo-1501854140801-50d01698950b?w=1080&h=1350&fit=crop',
            'https://images.unsplash.com/photo-1441974231531-c6227db76b6e?w=1080&h=1350&fit=crop'
        ];

        let bgImg = new Image();
        bgImg.crossOrigin = "anonymous";
        bgImg.src = fondos[0];

        function draw() {
            // Dibujar fondo
            ctx.drawImage(bgImg, 0, 0, 1080, 1350);
            
            // Overlay estilo terminal
            ctx.fillStyle = 'rgba(0,0,0,0.6)';
            ctx.fillRect(0, 0, 1080, 1350);

            // Texto
            ctx.fillStyle = "white";
            ctx.textAlign = "center";
            ctx.font = "italic 700 85px Georgia";
            
            const words = textInput.value.split(' ');
            let line = '';
            let y = 600;
            
            words.forEach(word => {
                let testLine = line + word + ' ';
                if (ctx.measureText(testLine).width > 850) {
                    ctx.fillText(line, 540, y);
                    line = word + ' ';
                    y += 110;
                } else { line = testLine; }
            });
            ctx.fillText(line, 540, y);

            // Cita Neón
            ctx.fillStyle = "#FFD700";
            ctx.font = "bold 55px 'Orbitron'";
            ctx.fillText(citaInput.value.toUpperCase(), 540, y + 140);
        }

        bgImg.onload = draw;
        textInput.oninput = draw;
        citaInput.oninput = draw;
        document.getElementById('btnRandom').onclick = () => {
            bgImg.src = fondos[Math.floor(Math.random() * fondos.length)];
        };
        document.getElementById('btnDownload').onclick = () => {
            const link = document.createElement('a');
            link.download = 'versiculo_neural.png';
            link.href = canvas.toDataURL();
            link.click();
        };
    </script>
</body>
</html>
