---
import Layout from '~/layouts/PageLayout.astro';
const metadata = { title: 'ANTONOV | PROTOCOLO' };
const ESTADOS = [
  'CANSANCIO','SOLEDAD','ANSIEDAD','DUDA','RUPTURA','MIEDO',
  'RABIA','VACÍO','NOSTALGIA','CONFUSIÓN','TRISTEZA','CULPA',
  'AGOBIO','BLOQUEO','FRUSTRACIÓN','INSEGURIDAD'
];
---

<Layout metadata={metadata}>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@900&family=JetBrains+Mono:wght@700&display=swap');

    :global(body) { margin: 0; padding: 0; overflow: hidden; background: #000; }
    :global(main) { max-width: 100% !important; padding: 0 !important; margin: 0 !important; }

    .antonov-app {
      display: grid;
      grid-template-columns: 360px 1fr;
      height: 100vh;
      background: #000;
      color: #fff;
      font-family: 'Inter', sans-serif;
      overflow: hidden;
    }

    .sidebar {
      background: #0a0a0a;
      border-right: 1px solid #1a1a1a;
      display: flex;
      flex-direction: column;
      overflow: hidden;
    }

    .sidebar-content {
      flex: 1;
      overflow-y: auto;
      display: flex;
      flex-direction: column;
    }

    .header-box {
      padding: 32px 24px;
      border-bottom: 1px solid #222;
    }

    h1 { font-size: 2.5rem; font-weight: 900; margin: 0; letter-spacing: -1px; }
    .tag { font-family: 'JetBrains Mono'; color: #ffd700; font-size: 9px; letter-spacing: 3px; text-transform: uppercase; }

    .states-container { padding: 24px; padding-bottom: 0; }
    .grid { display: grid; grid-template-columns: 1fr 1fr; gap: 8px; }

    .btn-state {
      background: #111;
      border: 1px solid #222;
      color: #666;
      padding: 12px 8px;
      font-family: 'JetBrains Mono';
      font-size: 9px;
      cursor: pointer;
      text-transform: uppercase;
      transition: all 0.2s;
    }

    .btn-state:hover { border-color: #ffd700; color: #ffd700; }
    .btn-state.active { background: #ffd700; color: #000; border-color: #ffd700; font-weight: bold; }

    .controls-box {
      padding: 24px;
      border-top: 1px solid #222;
      background: #050505;
    }

    .btn-main {
      width: 100%;
      padding: 16px;
      background: #fff;
      color: #000;
      font-weight: 900;
      border: none;
      cursor: pointer;
      text-transform: uppercase;
      letter-spacing: 1px;
      transition: all 0.3s;
      margin-bottom: 10px;
    }

    .btn-main:hover { background: #ffd700; transform: translateY(-1px); }
    .btn-main:disabled { opacity: 0.3; cursor: not-allowed; }

    .btn-download { background: #222; color: #ffd700; border: 1px solid #ffd700; }
    .btn-download:hover { background: #ffd700; color: #000; }

    .canvas-area {
      display: flex;
      align-items: center;
      justify-content: center;
      background: #000;
      padding: 40px;
    }

    canvas {
      width: 100%;
      max-width: 900px;
      height: auto;
      max-height: 85vh;
      border: 1px solid #222;
      box-shadow: 0 0 40px rgba(0,0,0,0.9);
    }

    @media (max-width: 900px) {
      .antonov-app { grid-template-columns: 1fr; grid-template-rows: auto 1fr; }
      .sidebar { border-right: none; border-bottom: 1px solid #222; }
      .sidebar-content { max-height: 45vh; }
      .canvas-area { padding: 20px; }
    }
  </style>

  <div class="antonov-app">
    <aside class="sidebar">
      <div class="sidebar-content">
        <div class="header-box">
          <h1>ANTONOV</h1>
          <div class="tag">PROTOCOLO DE VERDAD</div>
        </div>

        <div class="states-container">
          <p style="font-size: 9px; color: #555; margin-bottom: 16px; letter-spacing: 1.5px;">ESTADO ACTUAL</p>
          <div class="grid">
            {ESTADOS.map((e) => (
              <button class="btn-state" data-state={e}>{e}</button>
            ))}
          </div>
        </div>

        <div class="controls-box">
          <div style="display:flex; justify-content:space-between; margin-bottom:10px; font-size:9px;">
            <span style="color:#555">TAMAÑO</span>
            <span id="sizeVal">90PX</span>
          </div>
          <input type="range" id="slider" min="50" max="200" value="90" style="width:100%; accent-color:#ffd700;" />
          <button id="btn-traducir" class="btn-main">TRADUCIR ESTADO</button>
          <button id="btn-descargar" class="btn-main btn-download">DESCARGAR</button>
        </div>
      </div>
    </aside>

    <div class="canvas-area">
      <canvas id="mainCanvas"></canvas>
    </div>
  </div>

  <script is:inline>
    function startAntonov() {
      const canvas = document.getElementById('mainCanvas');
      if (!canvas) return console.error('Canvas perdido');
      const ctx = canvas.getContext('2d');
      if (!ctx) return console.error('Contexto 2D muerto');

      const buttons = document.querySelectorAll('.btn-state');
      const btnTraducir = document.getElementById('btn-traducir');
      const btnDescargar = document.getElementById('btn-descargar');
      const slider = document.getElementById('slider');
      const sizeVal = document.getElementById('sizeVal');

      let selectedState = '';
      let currentText = 'EL SILENCIO ES LA ÚNICA RESPUESTA';

      function draw() {
        // Forzamos redraw completo cada vez
        const rect = canvas.getBoundingClientRect();
        const size = Math.min(rect.width * 0.92, rect.height * 0.92, 1000);

        canvas.width = size;
        canvas.height = size;

        ctx.fillStyle = '#000';
        ctx.fillRect(0, 0, size, size);

        // Grano mínimo
        for (let i = 0; i < 200; i++) {
          ctx.fillStyle = `rgba(255,255,255,${Math.random()*0.02})`;
          ctx.fillRect(Math.random()*size, Math.random()*size, 1, 1);
        }

        // Header
        if (selectedState) {
          ctx.fillStyle = '#ffd700';
          ctx.font = 'bold 22px "JetBrains Mono", monospace';
          ctx.textAlign = 'left';
          ctx.fillText(`// ${selectedState}`, 40, 60);
          ctx.fillRect(40, 70, 160, 2);
        }

        // Texto principal
        ctx.fillStyle = '#fff';
        ctx.textAlign = 'center';
        ctx.textBaseline = 'middle';

        let fontSize = parseInt(slider.value) || 90;
        fontSize = Math.min(fontSize, size * 0.12); // límite superior para no salirse
        if (currentText.split(' ').length > 6) fontSize *= 0.85;

        ctx.font = `900 ${fontSize}px Inter, sans-serif`;

        const words = currentText.toUpperCase().split(' ');
        const lineHeight = fontSize * 0.95;
        const totalH = words.length * lineHeight;
        let y = size / 2 - totalH / 2 + lineHeight / 2;

        ctx.shadowColor = 'rgba(255,215,0,0.3)';
        ctx.shadowBlur = 20;

        words.forEach((word, i) => {
          ctx.fillText(word, size / 2, y + i * lineHeight);
        });

        ctx.shadowBlur = 0;
      }

      // Eventos
      buttons.forEach(btn => {
        btn.addEventListener('click', () => {
          buttons.forEach(b => b.classList.remove('active'));
          btn.classList.add('active');
          selectedState = btn.dataset.state;
          draw();
        });
      });

      slider.addEventListener('input', () => {
        sizeVal.textContent = `${slider.value}PX`;
        draw();
      });

      btnTraducir.addEventListener('click', async () => {
        if (!selectedState) return;
        btnTraducir.disabled = true;
        btnTraducir.textContent = 'EXTRAYENDO...';

        try {
          const res = await fetch('https://mis-frases.poderparatriunfar.workers.dev/', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
              prompt: `ACTÚA COMO UN ORÁCULO BRUTALISTA. ESTADO: ${selectedState}. ESCRIBE UNA SENTENCIA DE MÁXIMO 8 PALABRAS QUE SEA UN GOLPE DE REALIDAD. SIN PIEDAD. TODO MAYÚSCULAS.`
            })
          });
          const data = await res.json();
          currentText = data.text?.trim() || 'NO HAY RESPUESTA';
        } catch {
          currentText = 'ERROR';
        }

        btnTraducir.disabled = false;
        btnTraducir.textContent = 'TRADUCIR ESTADO';
        draw();
      });

      btnDescargar.addEventListener('click', () => {
        const a = document.createElement('a');
        a.download = `antonov-${selectedState || 'silencio'}.png`;
        a.href = canvas.toDataURL();
        a.click();
      });

      // Dibujar inicial + resize seguro
      setTimeout(draw, 300); // pequeño delay para que el DOM se asiente
      window.addEventListener('resize', draw);
      draw(); // doble por si acaso
    }

    // Lanzar cuando esté listo (múltiples intentos)
    if (document.readyState !== 'loading') {
      startAntonov();
    } else {
      document.addEventListener('DOMContentLoaded', startAntonov);
    }
    window.addEventListener('load', startAntonov);
    document.addEventListener('astro:after-swap', startAntonov);
  </script>
</Layout>
