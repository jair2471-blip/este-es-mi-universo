---
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'ANTONOV PRO | Tu Mentor de Confianza',
  description: 'Sabiduría humana potenciada por IA para líderes reales.',
};
---

<Layout metadata={metadata}>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Bebas+Neue&family=Inter:wght@400;600;800;900&display=swap');

    body { background: #000; font-family: 'Inter', sans-serif; color: white; margin: 0; }

    .app-container {
      min-height: 100vh;
      background: radial-gradient(circle at top, #111 0%, #000 100%);
      display: flex; align-items: center; justify-content: center;
      padding: 20px;
    }

    /* Efecto de luz dorada ambiental */
    .glow-aura {
      position: absolute; width: 600px; height: 600px;
      background: radial-gradient(circle, rgba(255, 215, 0, 0.05) 0%, transparent 70%);
      pointer-events: none; z-index: 0;
    }

    .desktop-layout {
      width: 100%; max-width: 1250px;
      display: grid; grid-template-columns: 380px 1fr; gap: 30px;
      position: relative; z-index: 1;
    }

    .control-panel {
      background: rgba(10, 10, 10, 0.8); border: 1px solid rgba(255, 215, 0, 0.15);
      border-radius: 28px; padding: 35px; display: flex; flex-direction: column; gap: 20px;
      backdrop-filter: blur(20px); box-shadow: 0 50px 100px rgba(0,0,0,0.8);
    }

    .brand h1 { font-family: 'Bebas Neue', cursive; font-size: 4rem; letter-spacing: 6px; color: #fff; margin: 0; line-height: 1; }
    .brand p { color: #ffd700; font-size: 0.65rem; letter-spacing: 4px; font-weight: 800; margin-top: 5px; }

    textarea {
      background: #080808; border: 1px solid rgba(255, 255, 255, 0.1); border-radius: 18px;
      color: #fff; padding: 18px; font-size: 1rem; resize: none; min-height: 120px; width: 100%;
      transition: all 0.3s ease;
    }
    textarea:focus { outline: none; border-color: #ffd700; background: #0c0c0c; }

    .btn-main {
      background: #fff; color: #000; border: none; padding: 18px; border-radius: 16px;
      font-weight: 800; font-size: 1rem; cursor: pointer; text-transform: uppercase;
      letter-spacing: 1px; transition: 0.3s;
    }
    .btn-main:hover { background: #ffd700; transform: translateY(-2px); }
    .btn-main:disabled { opacity: 0.5; cursor: not-allowed; }

    .preview-panel { 
      background: #050505; border-radius: 32px; padding: 20px; 
      display: flex; align-items: center; justify-content: center;
      position: relative; overflow: hidden; border: 1px solid rgba(255,255,255,0.03);
    }
    
    canvas { max-width: 100%; height: auto; border-radius: 12px; }

    /* Animación de escaneo */
    .scan-line {
      position: absolute; width: 100%; height: 2px; background: rgba(255, 215, 0, 0.2);
      top: 0; left: 0; animation: scan 4s linear infinite; display: none;
    }
    @keyframes scan { 0% { top: 0; } 100% { top: 100%; } }

    @media (max-width: 1000px) { .desktop-layout { grid-template-columns: 1fr; } }
  </style>

  <div class="app-container">
    <div class="glow-aura"></div>
    <div class="desktop-layout">
      <aside class="control-panel">
        <div class="brand">
          <h1>ANTONOV</h1>
          <p>MANTRA DE PODER</p>
        </div>

        <div>
          <label style="font-size: 0.7rem; color: #666; text-transform: uppercase; letter-spacing: 2px; display: block; margin-bottom: 10px;">¿Qué traes en mente, compa?</label>
          <textarea id="userInput" placeholder="Escribe aquí tu duda o bloqueo..."></textarea>
        </div>

        <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 15px;">
          <select id="formatSelect" style="background: #080808; color: #fff; border: 1px solid #222; padding: 12px; border-radius: 12px;">
            <option value="post">FEED (CUADRADO)</option>
            <option value="story">STORY (VERTICAL)</option>
          </select>
          <input type="range" id="sizeSlider" min="60" max="150" value="90" style="accent-color: #ffd700;">
        </div>

        <button id="generateBtn" class="btn-main">OBTENER CLARIDAD</button>
        <button id="downloadBtn" style="background: transparent; color: #888; border: 1px solid #222; padding: 12px; border-radius: 12px; cursor: pointer; font-size: 0.8rem;">DESCARGAR IMAGEN</button>
      </aside>

      <main class="preview-panel">
        <div id="scanLine" class="scan-line"></div>
        <canvas id="mainCanvas"></canvas>
      </main>
    </div>
  </div>

  <script is:inline>
    function initApp() {
      const canvas = document.getElementById('mainCanvas');
      if (!canvas) return;
      const ctx = canvas.getContext('2d');
      const scanLine = document.getElementById('scanLine');
      
      const ui = {
        input: document.getElementById('userInput'),
        format: document.getElementById('formatSelect'),
        size: document.getElementById('sizeSlider'),
        generateBtn: document.getElementById('generateBtn'),
        downloadBtn: document.getElementById('downloadBtn')
      };

      let currentText = "SUELTA LO QUE TE PESA PARA DARTE UNA RESPUESTA";

      function wrapText(context, text, x, y, maxWidth, lineHeight) {
        const words = text.split(' ');
        const lines = [];
        let currentLine = '';

        words.forEach(word => {
          const testLine = currentLine + word + ' ';
          if (context.measureText(testLine).width > maxWidth) {
            lines.push(currentLine);
            currentLine = word + ' ';
          } else {
            currentLine = testLine;
          }
        });
        lines.push(currentLine);

        let startY = y - ((lines.length - 1) * lineHeight) / 2;
        lines.forEach(line => {
          context.fillText(line.trim(), x, startY);
          startY += lineHeight;
        });
      }

      function render() {
        const isStory = ui.format.value === 'story';
        const w = 1080;
        const h = isStory ? 1920 : 1080;
        canvas.width = w; canvas.height = h;

        // Fondo elegante
        ctx.fillStyle = '#000';
        ctx.fillRect(0, 0, w, h);
        
        const grad = ctx.createRadialGradient(w/2, h/2, 0, w/2, h/2, w);
        grad.addColorStop(0, '#0a0a0a');
        grad.addColorStop(1, '#000');
        ctx.fillStyle = grad;
        ctx.fillRect(0, 0, w, h);

        // Texto
        const fontSize = parseInt(ui.size.value);
        ctx.font = `900 ${fontSize}px 'Bebas Neue'`;
        ctx.textAlign = 'center';
        ctx.fillStyle = '#fff';
        ctx.shadowColor = 'rgba(255, 215, 0, 0.2)';
        ctx.shadowBlur = 30;
        
        wrapText(ctx, currentText.toUpperCase(), w/2, h/2, w * 0.85, fontSize * 1.15);

        // Branding Minimal
        ctx.shadowBlur = 0;
        ctx.font = "800 24px 'Inter'";
        ctx.fillStyle = "#ffd700";
        ctx.letterSpacing = "6px";
        ctx.fillText("ANTONOV PRO", w/2, h - 100);
      }

      async function getWisdom() {
        const val = ui.input.value.trim();
        if (!val) return;

        ui.generateBtn.disabled = true;
        ui.generateBtn.textContent = "ESCUCHÁNDOTE...";
        scanLine.style.display = "block";

        try {
          const response = await fetch('https://mis-frases.poderparatriunfar.workers.dev/', {
            method: 'POST',
            headers: { 'Content-Type': 'application/json' },
            body: JSON.stringify({
              prompt: `Eres un mentor sabio y un amigo cercano. El usuario te confiesa esto: "${val}". 
              Responde con una sola frase corta (máx 12 palabras), directa, sin adornos, pero con mucha empatía. 
              Que suene a sabiduría de la calle y psicología real. EN MAYÚSCULAS.`
            })
          });
          
          const data = await response.json();
          if (data.text) {
            currentText = data.text;
            render();
          }
        } catch {
          alert("Hubo un hipo en la red, compa. Prueba de nuevo.");
        } finally {
          ui.generateBtn.disabled = false;
          ui.generateBtn.textContent = "OBTENER CLARIDAD";
          scanLine.style.display = "none";
        }
      }

      ui.generateBtn.onclick = getWisdom;
      ui.size.oninput = render;
      ui.format.onchange = render;
      ui.downloadBtn.onclick = () => {
        const link = document.createElement('a');
        link.download = 'antonov-mantra.png';
        link.href = canvas.toDataURL();
        link.click();
      };

      render();
    }

    document.addEventListener('DOMContentLoaded', initApp);
    document.addEventListener('astro:page-load', initApp);
  </script>
</Layout>
