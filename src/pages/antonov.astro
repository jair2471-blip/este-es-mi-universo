---
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'ANTONOV | SISTEMA DE CONSCIENCIA',
};
---

<Layout metadata={metadata}>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;700;900&family=JetBrains+Mono:wght@500;700&display=swap');

    :root {
      --gold: #ffd700;
      --gold-glow: rgba(255, 215, 0, 0.3);
      --dark: #000000;
      --gray-panel: #0a0a0a;
      --border-color: #1a1a1a;
    }

    :global(main) { width: 100% !important; max-width: 100% !important; padding: 0 !important; margin: 0 !important; }

    .master-wrapper {
      width: 100vw;
      height: 100vh;
      display: grid;
      grid-template-columns: 450px 1fr; /* Sidebar un poco más ancho */
      background: var(--dark);
      color: white;
      overflow: hidden;
    }

    /* SIDEBAR */
    .sidebar {
      background: var(--gray-panel);
      border-right: 1px solid var(--border-color);
      display: flex;
      flex-direction: column;
      box-shadow: 10px 0 50px rgba(0,0,0,1);
      z-index: 10;
    }

    .brand {
      padding: 60px 45px 30px;
      border-bottom: 1px solid var(--border-color);
    }

    .brand h1 {
      font-size: 3.5rem;
      font-weight: 900;
      letter-spacing: -4px;
      line-height: 0.8;
      background: linear-gradient(to bottom, #fff 30%, #444 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    .brand-tag {
      font-family: 'JetBrains Mono', monospace;
      font-size: 10px;
      color: var(--gold);
      letter-spacing: 5px;
      text-transform: uppercase;
      margin-top: 15px;
      display: block;
    }

    .states-container {
      flex: 1;
      padding: 40px 45px;
      overflow-y: auto;
    }

    .states-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 12px;
    }

    .state-btn {
      background: transparent;
      border: 1px solid #222;
      color: #555;
      padding: 15px 10px;
      font-family: 'JetBrains Mono', monospace;
      font-size: 10px;
      text-transform: uppercase;
      cursor: pointer;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
    }

    .state-btn:hover { color: #fff; border-color: #555; background: #111; }
    
    .state-btn.active {
      background: #fff;
      color: #000;
      border-color: #fff;
      font-weight: 700;
      box-shadow: 0 0 20px rgba(255,255,255,0.1);
    }

    /* CONTROLES */
    .controls {
      padding: 40px 45px;
      background: #050505;
      border-top: 1px solid var(--border-color);
    }

    .slider-header {
      display: flex;
      justify-content: space-between;
      margin-bottom: 15px;
      font-family: 'JetBrains Mono';
      font-size: 10px;
      color: #444;
    }

    input[type="range"] {
      width: 100%;
      height: 2px;
      background: #222;
      accent-color: var(--gold);
      margin-bottom: 30px;
    }

    .btn-main {
      width: 100%;
      padding: 25px;
      background: white;
      color: black;
      border: none;
      font-weight: 900;
      text-transform: uppercase;
      letter-spacing: 2px;
      cursor: pointer;
      transition: 0.3s;
    }

    .btn-main:hover:not(:disabled) {
      background: var(--gold);
      transform: translateY(-2px);
    }

    .btn-main:disabled { opacity: 0.2; cursor: wait; }

    /* VIEWPORT */
    .viewport {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 60px;
      background: radial-gradient(circle at center, #111 0%, #000 100%);
    }

    canvas {
      max-width: 100%;
      max-height: 100%;
      border: 1px solid #111;
      box-shadow: 0 0 100px rgba(0,0,0,0.5);
    }

    @media (max-width: 1100px) {
      .master-wrapper { grid-template-columns: 1fr; height: auto; }
      .sidebar { height: auto; border-right: none; }
      .viewport { height: 70vh; }
    }
  </style>

  <div class="master-wrapper">
    <aside class="sidebar">
      <div class="brand">
        <h1>ANTONOV</h1>
        <span class="brand-tag">NÚCLEO_DE_REALIDAD_v.6.0</span>
      </div>

      <div class="states-container">
        <p style="font-size: 9px; color: #444; margin-bottom: 20px; font-family: 'JetBrains Mono';">IDENTIFICA TU NÚCLEO ACTUAL:</p>
        <div class="states-grid" id="statesGrid"></div>
      </div>

      <div class="controls">
        <div class="slider-header">
          <span>ESCALA_VISUAL</span>
          <span id="zoomVal" style="color: var(--gold)">85px</span>
        </div>
        <input type="range" id="sizeSlider" min="50" max="150" value="85">
        <button id="translateBtn" class="btn-main">Analizar Realidad</button>
      </div>
    </aside>

    <main class="viewport">
      <canvas id="mainCanvas"></canvas>
    </main>
  </div>

  <script is:inline>
    (function() {
      const ESTADOS = [
        'CANSANCIO', 'SOLEDAD', 'ANSIEDAD', 'DUDA', 'RUPTURA', 'DESEO',
        'MIEDO', 'RABIA', 'VACÍO', 'NOSTALGIA', 'CONFUSIÓN', 'TRISTEZA',
        'PÉRDIDA', 'HASTÍO', 'CULPA', 'ENVIDIA', 'DESAMOR', 'AGOBIO',
        'BLOQUEO', 'INQUIETUD', 'ARREPENTIMIENTO', 'FRUSTRACIÓN',
        'INSEGURIDAD', 'DESCONEXIÓN'
      ];

      let selectedState = '';
      let currentText = 'EL SILENCIO TAMBIÉN HABLA';

      function init() {
        const canvas = document.getElementById('mainCanvas');
        if (!canvas) return;
        const ctx = canvas.getContext('2d');
        const grid = document.getElementById('statesGrid');
        const btn = document.getElementById('translateBtn');
        const slider = document.getElementById('sizeSlider');
        const zoomText = document.getElementById('zoomVal');

        const render = () => {
          canvas.width = 1080;
          canvas.height = 1080;
          ctx.fillStyle = '#000';
          ctx.fillRect(0, 0, 1080, 1080);

          // Grid técnico
          ctx.strokeStyle = '#0a0a0a';
          for(let i=0; i<=1080; i+=54) {
            ctx.beginPath(); ctx.moveTo(i,0); ctx.lineTo(i,1080); ctx.stroke();
            ctx.beginPath(); ctx.moveTo(0,i); ctx.lineTo(1080,i); ctx.stroke();
          }

          if(selectedState) {
            ctx.font = "700 24px 'JetBrains Mono'";
            ctx.fillStyle = 'rgba(255, 215, 0, 0.4)';
            ctx.textAlign = 'center';
            ctx.fillText(`ANÁLISIS_ESTADO: ${selectedState}`, 540, 120);
          }

          const size = parseInt(slider.value);
          zoomText.innerText = size + 'px';
          ctx.font = `900 ${size}px 'Inter'`;
          ctx.fillStyle = '#fff';
          ctx.textAlign = 'center';
          ctx.textBaseline = 'middle';

          const words = currentText.toUpperCase().split(' ');
          let lines = [], line = '';
          words.forEach(w => {
            if (ctx.measureText(line + w).width < 900) line += w + ' ';
            else { lines.push(line); line = w + ' '; }
          });
          lines.push(line);

          let y = 540 - ((lines.length - 1) * size * 0.6);
          lines.forEach(l => {
            ctx.fillText(l.trim(), 540, y);
            y += size * 1.15;
          });

          ctx.font = "700 20px 'JetBrains Mono'";
          ctx.fillStyle = '#ffd700';
          ctx.fillText('ANTONOV // PROTOCOLO DE VERDAD', 540, 960);
        };

        grid.innerHTML = '';
        ESTADOS.forEach(e => {
          const b = document.createElement('button');
          b.className = 'state-btn';
          b.innerText = e;
          b.onclick = () => {
            document.querySelectorAll('.state-btn').forEach(x => x.classList.remove('active'));
            b.classList.add('active');
            selectedState = e;
            render();
          };
          grid.appendChild(b);
        });

        slider.oninput = render;

        btn.onclick = async () => {
          if(!selectedState) return alert('Selecciona un núcleo');
          btn.innerText = 'PROCESANDO...';
          btn.disabled = true;

          try {
            const res = await fetch('https://mis-frases.poderparatriunfar.workers.dev/', {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({ prompt: `ANTONOV, sabio de calle. Traduce "${selectedState}" en una verdad cruda de máximo 12 palabras. TODO MAYÚSCULAS.` })
            });
            const data = await res.json();
            currentText = data.text || 'EL NÚCLEO NO RESPONDE';
          } catch (e) {
            currentText = 'ERROR DE CONEXIÓN AL NÚCLEO';
          } finally {
            btn.innerText = 'Analizar Realidad';
            btn.disabled = false;
            render();
          }
        };

        render();
      }

      // Asegurar que corra en Astro con View Transitions
      document.addEventListener('astro:page-load', init);
      if (document.readyState === 'complete') init();
      else window.addEventListener('load', init);
    })();
  </script>
</Layout>
