---
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'ANTONOV | EL NÚCLEO',
};
---

<Layout metadata={metadata}>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;900&family=JetBrains+Mono:wght@500;800&display=swap');

    :root {
      --accent: #ffd700;
      --bg-dark: #020202;
      --card-bg: rgba(20, 20, 20, 0.6);
    }

    :global(main) { width: 100% !important; max-width: 100% !important; padding: 0 !important; margin: 0 !important; }

    .master-wrapper {
      width: 100%;
      height: 100vh;
      background: radial-gradient(circle at center, #111 0%, #000 100%);
      display: flex;
      align-items: center;
      justify-content: center;
      color: white;
      font-family: 'Inter', sans-serif;
    }

    .app-container {
      display: grid;
      grid-template-columns: 420px 1fr;
      width: 98%;
      max-width: 1600px;
      height: 90vh;
      background: var(--bg-dark);
      border: 1px solid #222;
      box-shadow: 0 0 100px rgba(0,0,0,0.8);
      border-radius: 4px;
      overflow: hidden;
    }

    /* SIDEBAR SENSORIAL */
    .sidebar {
      background: linear-gradient(180deg, #080808 0%, #000 100%);
      padding: 40px;
      border-right: 1px solid #222;
      display: flex;
      flex-direction: column;
    }

    .header-brand h1 { 
      font-weight: 900; font-size: 3.2rem; margin: 0; letter-spacing: -3px; 
      background: linear-gradient(to bottom, #fff, #666);
      -webkit-background-clip: text; -webkit-text-fill-color: transparent;
    }

    .states-container {
      flex-grow: 1;
      margin: 30px 0;
      display: flex;
      flex-direction: column;
      overflow: hidden;
    }

    .states-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 10px;
      overflow-y: auto;
      padding-right: 10px;
      mask-image: linear-gradient(to bottom, black 80%, transparent 100%);
    }

    /* Botones con Sensibilidad */
    .state-btn {
      background: var(--card-bg);
      border: 1px solid #333;
      color: #777;
      padding: 16px 10px;
      font-size: 11px;
      text-transform: uppercase;
      cursor: pointer;
      transition: all 0.4s cubic-bezier(0.165, 0.84, 0.44, 1);
      font-family: 'JetBrains Mono';
      font-weight: 500;
      text-align: center;
      letter-spacing: 1px;
      border-radius: 2px;
    }

    .state-btn:hover {
      border-color: var(--accent);
      color: #fff;
      background: rgba(255, 215, 0, 0.05);
      transform: translateY(-2px);
      box-shadow: 0 4px 15px rgba(0,0,0,0.4);
    }

    .state-btn.active {
      background: var(--accent);
      color: #000;
      border-color: var(--accent);
      font-weight: 800;
      box-shadow: 0 0 20px rgba(255, 215, 0, 0.3);
    }

    /* ÁREA DE ACCIÓN */
    .action-zone {
      border-top: 1px solid #222;
      padding-top: 25px;
    }

    .btn-main {
      background: #fff; color: #000; border: none; padding: 22px;
      font-weight: 900; text-transform: uppercase; cursor: pointer; width: 100%;
      font-size: 14px; letter-spacing: 2px;
      transition: 0.3s ease;
    }
    .btn-main:hover { background: var(--accent); transform: scale(1.02); }

    .canvas-viewport {
      background: #000;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 40px;
      position: relative;
    }

    canvas {
      box-shadow: 0 0 60px rgba(0,0,0,0.5);
      border: 1px solid #111;
      max-width: 100%;
      height: auto;
    }

    /* Custom Scrollbar */
    .states-grid::-webkit-scrollbar { width: 3px; }
    .states-grid::-webkit-scrollbar-thumb { background: #444; }
  </style>

  <div class="master-wrapper">
    <div class="app-container">
      <aside class="sidebar">
        <div class="header-brand">
          <h1>ANTONOV</h1>
          <p style="color: var(--accent); font-family: 'JetBrains Mono'; font-size: 10px; letter-spacing: 4px; margin-top: 5px;">DECODIFICADOR SENSORIAL</p>
        </div>

        <div class="states-container">
          <span style="font-family: 'JetBrains Mono'; font-size: 9px; color: #444; margin-bottom: 15px; letter-spacing: 2px;">IDENTIFICA TU NÚCLEO ACTUAL:</span>
          <div class="states-grid" id="statesGrid"></div>
        </div>

        <div class="action-zone">
          <div style="margin-bottom: 20px;">
            <div style="display:flex; justify-content:space-between; margin-bottom:10px;">
              <label style="font-size: 9px; color: #666; font-family:'JetBrains Mono'">ESCALA_VISUAL</label>
              <span id="zoomVal" style="font-size: 9px; color: var(--accent)">85px</span>
            </div>
            <input type="range" id="sizeSlider" min="50" max="150" value="85" style="width:100%; accent-color:var(--accent);">
          </div>
          <button id="generateBtn" class="btn-main">Traducir Silencio</button>
        </div>
      </aside>

      <main class="canvas-viewport">
        <canvas id="mainCanvas"></canvas>
      </main>
    </div>
  </div>

  <script is:inline>
    (function() {
      const ESTADOS = [
        'CANSANCIO', 'SOLEDAD', 'ANSIEDAD', 'DUDA', 'RUPTURA', 'DESEO', 
        'MIEDO', 'RABIA', 'VACÍO', 'NOSTALGIA', 'CONFUSIÓN', 'TRISTEZA', 
        'PÉRDIDA', 'HASTÍO', 'CULPA', 'ENVIDIA', 'DESAMOR', 'AGOBIO', 
        'BLOQUEO', 'INQUIETUD', 'ARREPENTIMIENTO', 'FRUSTRACIÓN', 
        'INSEGURIDAD', 'DESCONEXIÓN'
      ];

      function init() {
        const canvas = document.getElementById('mainCanvas');
        const ctx = canvas?.getContext('2d');
        const btn = document.getElementById('generateBtn');
        const slider = document.getElementById('sizeSlider');
        const zoomVal = document.getElementById('zoomVal');
        const grid = document.getElementById('statesGrid');

        let selectedState = "";
        let response = "EL SILENCIO TAMBIÉN HABLA";

        const draw = () => {
          canvas.width = 1080;
          canvas.height = 1080;
          ctx.fillStyle = '#000';
          ctx.fillRect(0,0,1080,1080);

          // Grid muy sutil
          ctx.strokeStyle = '#0a0a0a';
          for(let i=0; i<1080; i+=54) {
            ctx.beginPath(); ctx.moveTo(i,0); ctx.lineTo(i,1080); ctx.stroke();
            ctx.beginPath(); ctx.moveTo(0,i); ctx.lineTo(1080,i); ctx.stroke();
          }

          // Pregunta/Estado arriba
          if(selectedState) {
            ctx.font = "800 22px 'JetBrains Mono'";
            ctx.fillStyle = 'rgba(255, 215, 0, 0.4)';
            ctx.textAlign = "center";
            ctx.fillText(`ANÁLISIS DE ESTADO: ${selectedState}`, 540, 100);
          }

          // Texto Central
          const size = parseInt(slider.value);
          zoomVal.innerText = size + "px";
          ctx.font = `900 ${size}px 'Inter'`;
          ctx.fillStyle = "#fff";
          ctx.textAlign = "center";
          ctx.textBaseline = "middle";

          const words = response.toUpperCase().split(' ');
          let lines = [], line = '';
          words.forEach(w => {
            if(ctx.measureText(line + w).width < 900) line += w + ' ';
            else { lines.push(line); line = w + ' '; }
          });
          lines.push(line);

          let y = 540 - ((lines.length - 1) * size * 0.6);
          lines.forEach(l => {
            ctx.fillText(l.trim(), 540, y);
            y += size * 1.15;
          });

          // Firma fija abajo
          ctx.font = "700 22px 'JetBrains Mono'";
          ctx.fillStyle = "#ffd700";
          ctx.letterSpacing = "10px";
          ctx.fillText("ANTONOV // PROTOCOLO DE VERDAD", 540, 960);
        };

        // Generar botones con efecto activo
        grid.innerHTML = '';
        ESTADOS.forEach(e => {
          const b = document.createElement('button');
          b.className = 'state-btn';
          b.innerText = e;
          b.onclick = () => {
            document.querySelectorAll('.state-btn').forEach(x => x.classList.remove('active'));
            b.classList.add('active');
            selectedState = e;
            draw();
          };
          grid.appendChild(b);
        });

        slider.oninput = draw;

        btn.onclick = async () => {
          if(!selectedState) return;
          btn.innerText = "EXTRAYENDO VERDAD...";
          btn.disabled = true;

          try {
            const res = await fetch('https://mis-frases.poderparatriunfar.workers.dev/', {
              method: 'POST',
              body: JSON.stringify({ prompt: `Antonov, sabio de calle. Traduce el estado "${selectedState}" en una frase cruda y real de max 12 palabras. TODO MAYÚSCULAS.` })
            });
            const data = await res.json();
            response = data.text;
          } catch { response = "ERROR DE CONEXIÓN"; }
          
          btn.innerText = "Traducir Silencio";
          btn.disabled = false;
          draw();
        };

        draw();
      }

      document.addEventListener('astro:page-load', init);
      window.onload = init;
    })();
  </script>
</Layout>
