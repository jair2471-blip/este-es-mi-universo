---
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'ANTONOV',
};
---

<Layout metadata={metadata}>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@900&family=JetBrains+Mono:wght@700&display=swap');

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    :global(main) {
      width: 100% !important;
      max-width: 100% !important;
      padding: 0 !important;
      margin: 0 !important;
    }

    body {
      background: #000;
      color: #fff;
      font-family: 'Inter', sans-serif;
    }

    .container {
      display: grid;
      grid-template-columns: 400px 1fr;
      height: 100vh;
      width: 100vw;
    }

    .sidebar {
      background: #0a0a0a;
      padding: 40px;
      border-right: 1px solid #222;
      overflow-y: auto;
    }

    h1 {
      font-size: 3rem;
      font-weight: 900;
      margin-bottom: 10px;
    }

    .tag {
      font-family: 'JetBrains Mono';
      font-size: 10px;
      color: #ffd700;
      margin-bottom: 40px;
      display: block;
    }

    .label {
      font-family: 'JetBrains Mono';
      font-size: 10px;
      color: #666;
      margin-bottom: 20px;
      display: block;
    }

    .grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 10px;
      margin-bottom: 40px;
    }

    .btn-state {
      background: #111;
      border: 1px solid #222;
      color: #888;
      padding: 15px;
      font-family: 'JetBrains Mono';
      font-size: 10px;
      cursor: pointer;
    }

    .btn-state:hover {
      background: #1a1a1a;
      color: #fff;
    }

    .btn-state.active {
      background: #fff;
      color: #000;
      border-color: #fff;
    }

    .slider-box {
      margin-bottom: 20px;
    }

    .slider-box input {
      width: 100%;
      margin-top: 10px;
    }

    .btn-main {
      width: 100%;
      padding: 20px;
      background: #fff;
      color: #000;
      border: none;
      font-size: 14px;
      font-weight: 900;
      cursor: pointer;
    }

    .btn-main:hover {
      background: #ffd700;
    }

    .btn-main:disabled {
      opacity: 0.3;
    }

    .canvas-area {
      background: #000;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 40px;
    }

    canvas {
      max-width: 100%;
      max-height: 100%;
      border: 1px solid #222;
    }
  </style>

  <div class="container">
    <div class="sidebar">
      <h1>ANTONOV</h1>
      <span class="tag">PROTOCOLO DE VERDAD</span>

      <span class="label">SELECCIONA TU ESTADO:</span>
      <div class="grid" id="grid"></div>

      <div class="slider-box">
        <span class="label">TAMAÑO: <span id="size">85</span>px</span>
        <input type="range" id="slider" min="50" max="150" value="85">
      </div>

      <button class="btn-main" id="btn">TRADUCIR ESTADO</button>
    </div>

    <div class="canvas-area">
      <canvas id="canvas"></canvas>
    </div>
  </div>

  <script>
    const ESTADOS = [
      'CANSANCIO', 'SOLEDAD', 'ANSIEDAD', 'DUDA', 'RUPTURA', 'DESEO',
      'MIEDO', 'RABIA', 'VACÍO', 'NOSTALGIA', 'CONFUSIÓN', 'TRISTEZA',
      'PÉRDIDA', 'HASTÍO', 'CULPA', 'ENVIDIA', 'DESAMOR', 'AGOBIO',
      'BLOQUEO', 'INQUIETUD', 'ARREPENTIMIENTO', 'FRUSTRACIÓN',
      'INSEGURIDAD', 'DESCONEXIÓN'
    ];

    let state = '';
    let text = 'SELECCIONA UN ESTADO';

    const canvas = document.getElementById('canvas');
    const ctx = canvas.getContext('2d');
    const grid = document.getElementById('grid');
    const btn = document.getElementById('btn');
    const slider = document.getElementById('slider');
    const sizeText = document.getElementById('size');

    function draw() {
      canvas.width = 1080;
      canvas.height = 1080;

      // Fondo
      ctx.fillStyle = '#000';
      ctx.fillRect(0, 0, 1080, 1080);

      // Grid
      ctx.strokeStyle = '#0a0a0a';
      ctx.lineWidth = 1;
      for (let i = 0; i <= 1080; i += 54) {
        ctx.beginPath();
        ctx.moveTo(i, 0);
        ctx.lineTo(i, 1080);
        ctx.stroke();
        ctx.beginPath();
        ctx.moveTo(0, i);
        ctx.lineTo(1080, i);
        ctx.stroke();
      }

      // Estado arriba
      if (state) {
        ctx.font = "700 24px 'JetBrains Mono'";
        ctx.fillStyle = 'rgba(255, 215, 0, 0.6)';
        ctx.textAlign = 'center';
        ctx.fillText('> ' + state, 540, 120);
      }

      // Texto central
      const size = parseInt(slider.value);
      ctx.font = `900 ${size}px 'Inter'`;
      ctx.fillStyle = '#fff';
      ctx.textAlign = 'center';
      ctx.textBaseline = 'middle';

      const words = text.toUpperCase().split(' ');
      let lines = [];
      let line = '';

      words.forEach(w => {
        const test = line + w + ' ';
        if (ctx.measureText(test).width > 900) {
          lines.push(line);
          line = w + ' ';
        } else {
          line = test;
        }
      });
      lines.push(line);

      let y = 540 - ((lines.length - 1) * size * 0.6);
      lines.forEach(l => {
        ctx.fillText(l.trim(), 540, y);
        y += size * 1.15;
      });

      // Firma
      ctx.font = "700 20px 'JetBrains Mono'";
      ctx.fillStyle = '#ffd700';
      ctx.fillText('ANTONOV // PROTOCOLO DE VERDAD', 540, 960);

      ctx.strokeStyle = '#ffd700';
      ctx.lineWidth = 2;
      ctx.beginPath();
      ctx.moveTo(400, 985);
      ctx.lineTo(680, 985);
      ctx.stroke();
    }

    // Crear botones
    ESTADOS.forEach(e => {
      const b = document.createElement('button');
      b.className = 'btn-state';
      b.textContent = e;
      b.onclick = () => {
        document.querySelectorAll('.btn-state').forEach(x => x.classList.remove('active'));
        b.classList.add('active');
        state = e;
        draw();
      };
      grid.appendChild(b);
    });

    // Slider
    slider.oninput = () => {
      sizeText.textContent = slider.value;
      draw();
    };

    // Botón
    btn.onclick = async () => {
      if (!state) {
        alert('Selecciona un estado');
        return;
      }

      btn.textContent = 'PROCESANDO...';
      btn.disabled = true;

      try {
        const res = await fetch('https://mis-frases.poderparatriunfar.workers.dev/', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            prompt: `ANTONOV ES UN TRADUCTOR DE ESTADOS HUMANOS.
NO RESPONDE PREGUNTAS.
NO DA CONSEJOS.
NO JUZGA.
NO MOTIVA.
OBSERVA Y NOMBRA CON SABIDURÍA DE CALLE.

LENGUAJE:
- SIMPLE, CERCANO, DE CALLE TRANQUILA
- SABIDURÍA ADQUIRIDA CON EXPERIENCIA
- NO SUENA A LIBRO NI A COACH
- SUENA A ALGUIEN QUE YA VIVIÓ

UNA SOLA FRASE.
MÁXIMO 12 PALABRAS.
TODO EN MAYÚSCULAS.

EL ESTADO ES: "${state}"

ANTONOV LO TRADUCE.`
          })
        });

        const data = await res.json();
        text = data.text || 'ERROR';
      } catch (e) {
        text = 'ERROR DE CONEXIÓN';
      }

      btn.textContent = 'TRADUCIR ESTADO';
      btn.disabled = false;
      draw();
    };

    // Dibujar al inicio
    draw();
  </script>
</Layout>
