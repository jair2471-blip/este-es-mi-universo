---
import Layout from '~/layouts/PageLayout.astro';
const metadata = { title: 'ANTONOV | PROTOCOLO' };
const ESTADOS = [
  'CANSANCIO','SOLEDAD','ANSIEDAD','DUDA','RUPTURA','MIEDO',
  'RABIA','VACÍO','NOSTALGIA','CONFUSIÓN','TRISTEZA','CULPA',
  'AGOBIO','BLOQUEO','FRUSTRACIÓN','INSEGURIDAD'
];
---

<Layout metadata={metadata}>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@900&family=JetBrains+Mono:wght@700&display=swap');

    :global(body) { margin: 0; padding: 0; overflow: hidden; background: #000; }
    :global(main) { max-width: 100% !important; padding: 0 !important; margin: 0 !important; }

    .antonov-app {
      display: grid;
      grid-template-columns: 360px 1fr;
      height: 100vh;
      background: linear-gradient(135deg, #000 0%, #0a0a0a 100%);
      color: #fff;
      font-family: 'Inter', sans-serif;
      overflow: hidden;
    }

    .sidebar {
      background: #0a0a0a;
      border-right: 1px solid #1a1a1a;
      display: flex;
      flex-direction: column;
    }

    .header-box {
      padding: 40px 28px;
      border-bottom: 1px solid #222;
    }

    h1 {
      font-size: 2.6rem;
      font-weight: 900;
      margin: 0;
      letter-spacing: -1.5px;
    }

    .tag {
      font-family: 'JetBrains Mono';
      color: #ffd700;
      font-size: 9px;
      letter-spacing: 3px;
      text-transform: uppercase;
    }

    .states-container {
      flex: 1;
      overflow-y: auto;
      padding: 28px;
    }

    .grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 8px;
    }

    .btn-state {
      background: #111;
      border: 1px solid #222;
      color: #666;
      padding: 14px 8px;
      font-family: 'JetBrains Mono';
      font-size: 9.5px;
      cursor: pointer;
      text-transform: uppercase;
      transition: all 0.25s ease;
    }

    .btn-state:hover {
      border-color: #ffd700;
      color: #ffd700;
    }

    .btn-state.active {
      background: #ffd700;
      color: #000;
      border-color: #ffd700;
      font-weight: 700;
    }

    .controls-box {
      padding: 28px;
      border-top: 1px solid #222;
      background: #050505;
    }

    .btn-main {
      width: 100%;
      padding: 20px;
      background: #fff;
      color: #000;
      font-weight: 900;
      border: none;
      cursor: pointer;
      text-transform: uppercase;
      letter-spacing: 1.2px;
      transition: all 0.3s ease;
      border-radius: 0;
    }

    .btn-main:hover {
      background: #ffd700;
      transform: translateY(-2px);
    }

    .btn-main:disabled {
      opacity: 0.25;
      cursor: not-allowed;
    }

    .canvas-area {
      display: flex;
      align-items: center;
      justify-content: center;
      background: #000;
      padding: 20px;
      position: relative;
    }

    canvas {
      width: 92%;
      max-width: 1000px;
      height: auto;
      max-height: 92vh;
      border: 1px solid #1a1a1a;
      box-shadow: 
        0 10px 50px rgba(0,0,0,0.95),
        inset 0 0 80px rgba(255,215,0,0.04);
      border-radius: 3px;
    }

    .states-container::-webkit-scrollbar {
      width: 3px;
    }

    .states-container::-webkit-scrollbar-thumb {
      background: #222;
    }

    @media (max-width: 900px) {
      .antonov-app {
        grid-template-columns: 1fr;
      }
      .sidebar {
        max-height: 45vh;
        border-right: none;
        border-bottom: 1px solid #222;
      }
      .canvas-area {
        padding: 15px;
      }
    }
  </style>

  <div class="antonov-app">
    <aside class="sidebar">
      <div class="header-box">
        <h1>ANTONOV</h1>
        <div class="tag">PROTOCOLO DE VERDAD</div>
      </div>

      <div class="states-container">
        <p style="font-size: 9px; color: #555; margin-bottom: 18px; letter-spacing: 1.5px;">
          ESTADO ACTUAL
        </p>
        <div class="grid">
          {ESTADOS.map((e) => (
            <button class="btn-state" data-state={e}>{e}</button>
          ))}
        </div>
      </div>

      <div class="controls-box">
        <div style="display:flex; justify-content:space-between; margin-bottom:12px; font-size:9px;">
          <span class="tag" style="color:#555">TAMAÑO</span>
          <span id="sizeVal" class="tag">90PX</span>
        </div>
        <input
          type="range"
          id="slider"
          min="40"
          max="220"
          value="90"
          style="width:100%; accent-color:#ffd700; height:4px;"
        />
        <button id="btn-traducir" class="btn-main">TRADUCIR ESTADO</button>
      </div>
    </aside>

    <div class="canvas-area">
      <canvas id="mainCanvas"></canvas>
    </div>
  </div>

  <script is:inline>
  async function startAntonov() {
    const canvas = document.getElementById('mainCanvas');
    if (!canvas) return console.error("Canvas no encontrado");

    const ctx = canvas.getContext('2d');
    if (!ctx) return console.error("Contexto 2D falló");

    await document.fonts.ready;

    const buttons = document.querySelectorAll('.btn-state');
    const btnTraducir = document.getElementById('btn-traducir');
    const slider = document.getElementById('slider');
    const sizeVal = document.getElementById('sizeVal');

    let selectedState = "";
    let currentText = "EL SILENCIO ES LA ÚNICA RESPUESTA";

    function draw() {
      const container = canvas.parentElement;
      // Tamaño más elegante: deja breathing room
      const padding = Math.max(40, container.clientWidth * 0.04);
      const size = Math.min(
        container.clientWidth - padding * 2,
        container.clientHeight * 0.92,
        1100
      );

      canvas.width = size;
      canvas.height = size;

      ctx.fillStyle = "#000";
      ctx.fillRect(0, 0, size, size);

      // Grano ultra sutil (menos partículas, más clase)
      for (let i = 0; i < 280; i++) {
        ctx.fillStyle = `rgba(255,255,255,${Math.random() * 0.018 + 0.005})`;
        ctx.fillRect(Math.random() * size, Math.random() * size, 1, 1);
      }

      // Header con más espacio
      if (selectedState) {
        ctx.fillStyle = "#ffd700";
        ctx.font = "700 24px 'JetBrains Mono', monospace";
        ctx.textAlign = "left";
        ctx.fillText(`// ${selectedState}`, padding + 20, padding + 50);
        ctx.fillRect(padding + 20, padding + 65, 180, 2);
      }

      ctx.fillStyle = "#ffffff";
      ctx.textAlign = "center";
      ctx.textBaseline = "middle";

      const baseSize = parseInt(slider.value) || 90;
      let fontSize = Math.max(42, baseSize * (size / 1080));

      // Ajuste dinámico si la frase es muy larga
      const words = currentText.toUpperCase().split(' ');
      if (words.length > 6) fontSize *= 0.92; // reduce un poco para frases largas

      ctx.font = `900 ${fontSize}px 'Inter', system-ui, sans-serif`;

      const lineHeight = fontSize * 0.96; // más elegante y espaciado
      const totalHeight = words.length * lineHeight;
      let y = (size - totalHeight) / 2 + (lineHeight / 2);

      // Shadow refinada: más sutil, dorada leve
      ctx.shadowColor = "rgba(255, 215, 0, 0.22)";
      ctx.shadowBlur = 22;
      ctx.shadowOffsetY = 5;
      ctx.shadowOffsetX = 0;

      words.forEach((word, i) => {
        ctx.fillText(word, size / 2, y + i * lineHeight);
      });

      // Limpiar shadow
      ctx.shadowColor = "transparent";
      ctx.shadowBlur = 0;
    }

    buttons.forEach(btn => {
      btn.onclick = () => {
        buttons.forEach(b => b.classList.remove('active'));
        btn.classList.add('active');
        selectedState = btn.dataset.state;
        draw();
      };
    });

    slider.oninput = () => {
      sizeVal.innerText = `${slider.value}PX`;
      draw();
    };

    btnTraducir.onclick = async () => {
      if (!selectedState) return;
      btnTraducir.disabled = true;
      btnTraducir.innerText = "EXTRAYENDO...";

      try {
        const res = await fetch('https://mis-frases.poderparatriunfar.workers.dev/', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({
            prompt: `ACTÚA COMO UN ORÁCULO BRUTALISTA. ESTADO: ${selectedState}. ESCRIBE UNA SENTENCIA DE MÁXIMO 8 PALABRAS QUE SEA UN GOLPE DE REALIDAD. SIN PIEDAD. TODO MAYÚSCULAS.`
          })
        });

        const data = await res.json();
        currentText = data.text?.trim() || "NO HAY RESPUESTA";
      } catch (err) {
        currentText = "CONEXIÓN FALLIDA";
        console.error(err);
      }

      btnTraducir.disabled = false;
      btnTraducir.innerText = "TRADUCIR ESTADO";
      draw();
    };

    draw();
    window.addEventListener('resize', draw);
  }

  if (document.readyState === 'complete' || document.readyState === 'interactive') {
    startAntonov();
  } else {
    window.addEventListener('load', startAntonov);
  }

  document.addEventListener('astro:after-swap', startAntonov);
</script>
</Layout>
