<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Generador de Bendiciones</title>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@400;700&family=Playfair+Display:ital,wght@1,700&display=swap" rel="stylesheet">
    
    <style>
        body {
            margin: 0;
            background: #e5e7eb; /* Gris claro de fondo */
            display: flex;
            justify-content: center;
            align-items: center;
            min-height: 100vh;
            font-family: 'Montserrat', sans-serif;
        }

        /* EL CANDADO: Esto evita que en PC se vea gigante */
        .mobile-wrapper {
            width: 100%;
            max-width: 400px; /* Ancho de celular */
            background: white;
            border-radius: 32px;
            box-shadow: 0 20px 25px -5px rgba(0, 0, 0, 0.1);
            overflow: hidden;
            border: 8px solid #1f2937; /* Marco oscuro */
            margin: 15px;
        }

        .app-content {
            padding: 24px;
            display: flex;
            flex-direction: column;
            gap: 20px;
        }

        .app-header {
            text-align: center;
        }

        .app-header h1 {
            font-family: 'Playfair Display', serif;
            font-size: 1.5rem;
            margin: 0;
            color: #111827;
        }

        .canvas-area {
            position: relative;
            width: 100%;
            aspect-ratio: 4/5;
            background: #f3f4f6;
            border-radius: 16px;
            overflow: hidden;
        }

        #mainCanvas {
            width: 100%;
            height: 100%;
            display: block;
            object-fit: contain;
        }

        .controls {
            display: flex;
            flex-direction: column;
            gap: 15px;
        }

        .field {
            display: flex;
            flex-direction: column;
            gap: 5px;
        }

        label {
            font-size: 0.7rem;
            font-weight: 700;
            color: #6b7280;
            text-transform: uppercase;
            letter-spacing: 0.05em;
        }

        textarea, input {
            padding: 12px;
            border: 1px solid #d1d5db;
            border-radius: 12px;
            font-family: inherit;
            font-size: 0.9rem;
            background: #f9fafb;
        }

        .actions {
            display: grid;
            grid-template-columns: 1fr 1fr;
            gap: 10px;
        }

        button {
            padding: 14px;
            border: none;
            border-radius: 12px;
            font-weight: 700;
            font-size: 0.8rem;
            cursor: pointer;
            transition: transform 0.1s;
        }

        button:active { transform: scale(0.95); }

        .btn-main { background: #d97706; color: white; }
        .btn-sec { background: #111827; color: white; }
        
        #btnChangeBg {
            position: absolute;
            bottom: 12px;
            right: 12px;
            background: white;
            border-radius: 50%;
            width: 40px;
            height: 40px;
            display: flex;
            align-items: center;
            justify-content: center;
            box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        }
    </style>
</head>
<body>

    <div class="mobile-wrapper">
        <div class="app-content">
            <header class="app-header">
                <h1>Postales del Cielo</h1>
            </header>

            <div class="canvas-area">
                <canvas id="mainCanvas" width="1080" height="1350"></canvas>
                <button id="btnChangeBg" title="Cambiar Fondo">ðŸ”„</button>
            </div>

            <div class="controls">
                <div class="field">
                    <label>VersÃ­culo</label>
                    <textarea id="txtVersiculo" rows="3">Todo lo puedo en Cristo que me fortalece.</textarea>
                </div>
                
                <div class="field">
                    <label>Referencia</label>
                    <input type="text" id="txtCita" value="Filipenses 4:13">
                </div>

                <div class="actions">
                    <button id="btnDownload" class="btn-main">DESCARGAR</button>
                    <button id="btnShare" class="btn-sec">COMPARTIR</button>
                </div>
            </div>
        </div>
    </div>

    <script>
        const canvas = document.getElementById('mainCanvas');
        const ctx = canvas.getContext('2d');
        const textInput = document.getElementById('txtVersiculo');
        const citaInput = document.getElementById('txtCita');

        const fondos = [
            'https://images.unsplash.com/photo-1470252649378-9c29740c9fa8?w=1080&h=1350&fit=crop',
            'https://images.unsplash.com/photo-1501854140801-50d01698950b?w=1080&h=1350&fit=crop',
            'https://images.unsplash.com/photo-1441974231531-c6227db76b6e?w=1080&h=1350&fit=crop'
        ];

        let bgImg = new Image();
        bgImg.crossOrigin = "anonymous";
        bgImg.src = fondos[0];

        function draw() {
            if (!ctx) return;
            ctx.drawImage(bgImg, 0, 0, 1080, 1350);
            ctx.fillStyle = 'rgba(0,0,0,0.4)';
            ctx.fillRect(0, 0, 1080, 1350);

            ctx.fillStyle = "white";
            ctx.textAlign = "center";
            ctx.textBaseline = "middle";
            ctx.font = "italic 700 80px Georgia";
            
            // LÃ³gica simple de texto
            const words = textInput.value.split(' ');
            let line = '';
            let y = 600;
            words.forEach(word => {
                let testLine = line + word + ' ';
                if (ctx.measureText(testLine).width > 800) {
                    ctx.fillText(line, 540, y);
                    line = word + ' ';
                    y += 100;
                } else { line = testLine; }
            });
            ctx.fillText(line, 540, y);

            ctx.font = "bold 50px Montserrat";
            ctx.fillStyle = "#fbbf24";
            ctx.fillText(citaInput.value.toUpperCase(), 540, y + 120);
        }

        bgImg.onload = draw;
        textInput.oninput = draw;
        citaInput.oninput = draw;
        
        document.getElementById('btnChangeBg').onclick = () => {
            bgImg.src = fondos[Math.floor(Math.random() * fondos.length)];
        };

        document.getElementById('btnDownload').onclick = () => {
            const link = document.createElement('a');
            link.download = 'postal-bendicion.png';
            link.href = canvas.toDataURL();
            link.click();
        };

        document.getElementById('btnShare').onclick = async () => {
            const blob = await new Promise(res => canvas.toBlob(res, 'image/png'));
            const file = new File([blob], 'postal.png', { type: 'image/png' });
            if (navigator.share) navigator.share({ files: [file] });
        };
    </script>
</body>
</html>
