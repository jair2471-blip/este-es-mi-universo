---
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'ANTONOV | SISTEMA DE CONSCIENCIA',
};
---

<Layout metadata={metadata}>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@400;700;900&family=JetBrains+Mono:wght@500;700&display=swap');

    :root {
      --gold: #ffd700;
      --gold-dim: rgba(255, 215, 0, 0.1);
      --bg-side: #080808;
      --bg-main: #020202;
      --border: #1a1a1a;
      --text-muted: #555;
    }

    :global(main) { width: 100% !important; max-width: 100% !important; padding: 0 !important; margin: 0 !important; }

    .master-wrapper {
      width: 100vw;
      height: 100vh;
      display: grid;
      grid-template-columns: 420px 1fr;
      background: var(--bg-main);
      color: white;
      font-family: 'Inter', sans-serif;
      overflow: hidden;
    }

    /* --- SIDEBAR SENSORIAL --- */
    .sidebar {
      background: var(--bg-side);
      border-right: 1px solid var(--border);
      display: flex;
      flex-direction: column;
      box-shadow: 20px 0 50px rgba(0,0,0,0.5);
      z-index: 10;
    }

    .brand {
      padding: 50px 40px 30px;
      border-bottom: 1px solid var(--border);
    }

    .brand h1 {
      font-size: 3rem;
      font-weight: 900;
      letter-spacing: -3px;
      line-height: 0.9;
      background: linear-gradient(180deg, #fff 0%, #444 100%);
      -webkit-background-clip: text;
      -webkit-text-fill-color: transparent;
    }

    .brand span {
      font-family: 'JetBrains Mono';
      font-size: 9px;
      color: var(--gold);
      letter-spacing: 4px;
      text-transform: uppercase;
      display: block;
      margin-top: 10px;
    }

    /* Contenedor de Estados con Scroll elegante */
    .states-area {
      flex: 1;
      padding: 30px 40px;
      overflow-y: auto;
    }

    .states-area::-webkit-scrollbar { width: 2px; }
    .states-area::-webkit-scrollbar-thumb { background: #222; }

    .grid-label {
      font-family: 'JetBrains Mono';
      font-size: 9px;
      color: var(--text-muted);
      margin-bottom: 20px;
      display: block;
      letter-spacing: 2px;
    }

    .states-grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 10px;
    }

    /* BOTONES CON SENSIBILIDAD */
    .state-btn {
      background: transparent;
      border: 1px solid #1a1a1a;
      color: var(--text-muted);
      padding: 14px 10px;
      font-family: 'JetBrains Mono';
      font-size: 10px;
      text-align: left;
      cursor: pointer;
      transition: all 0.3s cubic-bezier(0.4, 0, 0.2, 1);
      border-radius: 2px;
    }

    .state-btn:hover {
      border-color: #444;
      color: #fff;
      background: #111;
    }

    .state-btn.active {
      background: #fff;
      color: #000;
      border-color: #fff;
      font-weight: 800;
      box-shadow: 0 0 20px rgba(255,255,255,0.1);
    }

    /* CONTROLES INFERIORES */
    .bottom-panel {
      padding: 30px 40px;
      background: #050505;
      border-top: 1px solid var(--border);
    }

    .slider-info {
      display: flex;
      justify-content: space-between;
      margin-bottom: 10px;
      font-family: 'JetBrains Mono';
      font-size: 9px;
      color: #444;
    }

    input[type="range"] {
      width: 100%;
      height: 2px;
      background: #222;
      accent-color: var(--gold);
      margin-bottom: 25px;
      cursor: pointer;
    }

    .btn-action {
      width: 100%;
      padding: 22px;
      background: white;
      color: black;
      border: none;
      font-weight: 900;
      font-size: 13px;
      text-transform: uppercase;
      letter-spacing: 2px;
      cursor: pointer;
      transition: 0.2s;
    }

    .btn-action:hover:not(:disabled) {
      background: var(--gold);
    }

    .btn-action:disabled {
      opacity: 0.2;
      cursor: wait;
    }

    /* --- VIEWPORT DEL CANVAS --- */
    .viewport {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 60px;
      background: radial-gradient(circle at center, #111 0%, #000 100%);
    }

    .canvas-container {
      position: relative;
      box-shadow: 0 0 100px rgba(0,0,0,0.8);
      border: 1px solid #111;
    }

    canvas {
      display: block;
      max-width: 100%;
      max-height: 85vh;
    }

    @media (max-width: 1100px) {
      .master-wrapper { grid-template-columns: 1fr; }
      .sidebar { height: auto; }
      .viewport { padding: 20px; }
    }
  </style>

  <div class="master-wrapper">
    <aside class="sidebar">
      <div class="brand">
        <h1>ANTONOV</h1>
        <span>PROTOCOLO_DE_VERDAD_v6</span>
      </div>

      <div class="states-area">
        <span class="grid-label">SELECCIONA TU NÚCLEO ACTUAL:</span>
        <div class="states-grid" id="statesGrid"></div>
      </div>

      <div class="bottom-panel">
        <div class="slider-info">
          <span>ESCALA_VISUAL</span>
          <span id="valDisplay" style="color: var(--gold)">85px</span>
        </div>
        <input type="range" id="sizeSlider" min="40" max="160" value="85">
        <button id="mainBtn" class="btn-action">Traducir Silencio</button>
      </div>
    </aside>

    <main class="viewport">
      <div class="canvas-container">
        <canvas id="mainCanvas"></canvas>
      </div>
    </main>
  </div>

  <script is:inline>
    (function() {
      const ESTADOS = [
        'CANSANCIO', 'SOLEDAD', 'ANSIEDAD', 'DUDA', 'RUPTURA', 'DESEO',
        'MIEDO', 'RABIA', 'VACÍO', 'NOSTALGIA', 'CONFUSIÓN', 'TRISTEZA',
        'PÉRDIDA', 'HASTÍO', 'CULPA', 'ENVIDIA', 'DESAMOR', 'AGOBIO',
        'BLOQUEO', 'INQUIETUD', 'ARREPENTIMIENTO', 'FRUSTRACIÓN',
        'INSEGURIDAD', 'DESCONEXIÓN'
      ];

      function start() {
        const canvas = document.getElementById('mainCanvas');
        if (!canvas) return;
        const ctx = canvas.getContext('2d');
        const grid = document.getElementById('statesGrid');
        const btn = document.getElementById('mainBtn');
        const slider = document.getElementById('sizeSlider');
        const display = document.getElementById('valDisplay');

        let currentText = "EL SILENCIO TAMBIÉN HABLA";
        let activeState = "";

        const draw = () => {
          canvas.width = 1080;
          canvas.height = 1080;
          ctx.fillStyle = '#000';
          ctx.fillRect(0, 0, 1080, 1080);

          // Grid técnico de fondo (Sensibilidad Visual)
          ctx.strokeStyle = '#080808';
          ctx.lineWidth = 1;
          for(let i=0; i<=1080; i+=54) {
            ctx.beginPath(); ctx.moveTo(i, 0); ctx.lineTo(i, 1080); ctx.stroke();
            ctx.beginPath(); ctx.moveTo(0, i); ctx.lineTo(1080, i); ctx.stroke();
          }

          // Dibujar Estado superior
          if(activeState) {
            ctx.font = "700 24px 'JetBrains Mono'";
            ctx.fillStyle = 'rgba(255, 215, 0, 0.5)';
            ctx.textAlign = 'center';
            ctx.fillText(`DETECTADO: ${activeState}`, 540, 120);
          }

          // Texto Central
          const size = parseInt(slider.value);
          display.innerText = size + "px";
          ctx.font = `900 ${size}px 'Inter'`;
          ctx.fillStyle = '#fff';
          ctx.textAlign = 'center';
          ctx.textBaseline = 'middle';

          const words = currentText.toUpperCase().split(' ');
          let lines = [], line = '';
          words.forEach(w => {
            if (ctx.measureText(line + w).width < 900) line += w + ' ';
            else { lines.push(line); line = w + ' '; }
          });
          lines.push(line);

          let y = 540 - ((lines.length - 1) * size * 0.6);
          lines.forEach(l => {
            ctx.fillText(l.trim(), 540, y);
            y += size * 1.15;
          });

          // Firma inferior
          ctx.font = "700 20px 'JetBrains Mono'";
          ctx.fillStyle = '#ffd700';
          ctx.fillText('ANTONOV // PROTOCOLO DE VERDAD', 540, 960);
        };

        // Generar botones de estado
        grid.innerHTML = '';
        ESTADOS.forEach(e => {
          const b = document.createElement('button');
          b.className = 'state-btn';
          b.innerText = e;
          b.onclick = () => {
            document.querySelectorAll('.state-btn').forEach(x => x.classList.remove('active'));
            b.classList.add('active');
            activeState = e;
            draw();
          };
          grid.appendChild(b);
        });

        slider.oninput = draw;

        btn.onclick = async () => {
          if(!activeState) return;
          btn.innerText = "PROCESANDO...";
          btn.disabled = true;

          try {
            const res = await fetch('https://mis-frases.poderparatriunfar.workers.dev/', {
              method: 'POST',
              body: JSON.stringify({ prompt: `ANTONOV, sabio callejero. Traduce el estado "${activeState}" en una frase de máximo 10 palabras con mucha fuerza. TODO MAYÚSCULAS.` })
            });
            const data = await res.json();
            currentText = data.text || "EL SISTEMA NO RESPONDE";
          } catch (e) {
            currentText = "ERROR DE CONEXIÓN";
          } finally {
            btn.innerText = "Traducir Silencio";
            btn.disabled = false;
            draw();
          }
        };

        draw();
      }

      document.addEventListener('astro:page-load', start);
      if (document.readyState === 'complete') start();
      else window.addEventListener('load', start);
    })();
  </script>
</Layout>
