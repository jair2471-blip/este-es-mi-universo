---
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'ANTONOV',
};
---

<Layout metadata={metadata}>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@900&family=JetBrains+Mono:wght@700&display=swap');

    * {
      margin: 0;
      padding: 0;
      box-sizing: border-box;
    }

    :global(main) {
      width: 100% !important;
      max-width: 100% !important;
      padding: 0 !important;
      margin: 0 !important;
    }

    body {
      background: #000;
      color: #fff;
      font-family: 'Inter', sans-serif;
      overflow: hidden;
    }

    .container {
      display: grid;
      grid-template-columns: 400px 1fr;
      height: 100vh;
      width: 100vw;
    }

    .sidebar {
      background: #0a0a0a;
      border-right: 1px solid #222;
      display: flex;
      flex-direction: column;
      height: 100vh;
    }

    .header {
      padding: 40px 40px 20px;
      border-bottom: 1px solid #222;
    }

    h1 {
      font-size: 3rem;
      font-weight: 900;
      margin-bottom: 5px;
    }

    .tag {
      font-family: 'JetBrains Mono';
      font-size: 10px;
      color: #ffd700;
      display: block;
      letter-spacing: 2px;
    }

    .states-wrapper {
      flex: 1;
      overflow-y: auto;
      padding: 30px 40px;
      min-height: 0;
    }

    .states-wrapper::-webkit-scrollbar {
      width: 4px;
    }

    .states-wrapper::-webkit-scrollbar-track {
      background: #111;
    }

    .states-wrapper::-webkit-scrollbar-thumb {
      background: #333;
    }

    .label {
      font-family: 'JetBrains Mono';
      font-size: 10px;
      color: #666;
      margin-bottom: 15px;
      display: block;
      text-transform: uppercase;
      letter-spacing: 1px;
    }

    .grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 10px;
    }

    .btn-state {
      background: #111;
      border: 1px solid #222;
      color: #888;
      padding: 14px 10px;
      font-family: 'JetBrains Mono';
      font-size: 10px;
      cursor: pointer;
      transition: all 0.2s;
      text-transform: uppercase;
    }

    .btn-state:hover {
      background: #1a1a1a;
      color: #fff;
      border-color: #333;
    }

    .btn-state.active {
      background: #fff;
      color: #000;
      border-color: #fff;
      font-weight: 700;
    }

    .controls {
      padding: 30px 40px;
      border-top: 1px solid #222;
      background: #0a0a0a;
    }

    .slider-box {
      margin-bottom: 20px;
    }

    .slider-header {
      display: flex;
      justify-content: space-between;
      align-items: center;
      margin-bottom: 10px;
    }

    .size-value {
      font-family: 'JetBrains Mono';
      font-size: 10px;
      color: #ffd700;
    }

    .slider-box input {
      width: 100%;
      height: 2px;
      background: #222;
      outline: none;
      cursor: pointer;
    }

    .slider-box input::-webkit-slider-thumb {
      width: 14px;
      height: 14px;
      background: #ffd700;
      cursor: pointer;
      border-radius: 50%;
    }

    .btn-main {
      width: 100%;
      padding: 20px;
      background: #fff;
      color: #000;
      border: none;
      font-size: 13px;
      font-weight: 900;
      cursor: pointer;
      text-transform: uppercase;
      letter-spacing: 1px;
      transition: background 0.3s;
    }

    .btn-main:hover:not(:disabled) {
      background: #ffd700;
    }

    .btn-main:disabled {
      opacity: 0.4;
      cursor: not-allowed;
    }

    .canvas-area {
      background: #000;
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 60px;
    }

    canvas {
      max-width: 100%;
      max-height: 100%;
      border: 1px solid #222;
      box-shadow: 0 0 40px rgba(0,0,0,0.8);
    }

    @media (max-width: 1024px) {
      .container {
        grid-template-columns: 1fr;
        grid-template-rows: auto 1fr;
      }

      .sidebar {
        height: auto;
        max-height: 50vh;
      }

      .states-wrapper {
        max-height: 25vh;
      }
    }
  </style>

  <div class="container">
    <div class="sidebar">
      <div class="header">
        <h1>ANTONOV</h1>
        <span class="tag">PROTOCOLO DE VERDAD</span>
      </div>

      <div class="states-wrapper">
        <span class="label">Selecciona tu estado:</span>
        <div class="grid" id="grid"></div>
      </div>

      <div class="controls">
        <div class="slider-box">
          <div class="slider-header">
            <span class="label" style="margin: 0;">Tamaño</span>
            <span class="size-value" id="size">85px</span>
          </div>
          <input type="range" id="slider" min="50" max="150" value="85">
        </div>

        <button class="btn-main" id="btn">Traducir Estado</button>
      </div>
    </div>

    <div class="canvas-area">
      <canvas id="canvas"></canvas>
    </div>
  </div>

  <script>
    const ESTADOS = [
      'CANSANCIO', 'SOLEDAD', 'ANSIEDAD', 'DUDA', 'RUPTURA', 'DESEO',
      'MIEDO', 'RABIA', 'VACÍO', 'NOSTALGIA', 'CONFUSIÓN', 'TRISTEZA',
      'PÉRDIDA', 'HASTÍO', 'CULPA', 'ENVIDIA', 'DESAMOR', 'AGOBIO',
      'BLOQUEO', 'INQUIETUD', 'ARREPENTIMIENTO', 'FRUSTRACIÓN',
      'INSEGURIDAD', 'DESCONEXIÓN'
    ];

    let selectedState = '';
    let responseText = 'SELECCIONA UN ESTADO';

    const canvas = document.getElementById('canvas');
    const ctx = canvas.getContext('2d');
    const grid = document.getElementById('grid');
    const btn = document.getElementById('btn');
    const slider = document.getElementById('slider');
    const sizeDisplay = document.getElementById('size');

    function render() {
      canvas.width = 1080;
      canvas.height = 1080;

      // Fondo negro
      ctx.fillStyle = '#000000';
      ctx.fillRect(0, 0, 1080, 1080);

      // Grid sutil
      ctx.strokeStyle = '#0a0a0a';
      ctx.lineWidth = 1;
      for (let i = 0; i <= 1080; i += 54) {
        ctx.beginPath();
        ctx.moveTo(i, 0);
        ctx.lineTo(i, 1080);
        ctx.stroke();
        ctx.beginPath();
        ctx.moveTo(0, i);
        ctx.lineTo(1080, i);
        ctx.stroke();
      }

      // Estado seleccionado arriba
      if (selectedState) {
        ctx.font = "700 24px 'JetBrains Mono'";
        ctx.fillStyle = 'rgba(255, 215, 0, 0.6)';
        ctx.textAlign = 'center';
        ctx.fillText('> ' + selectedState, 540, 120);
      }

      // Texto principal centrado
      const fontSize = parseInt(slider.value);
      ctx.font = `900 ${fontSize}px 'Inter'`;
      ctx.fillStyle = '#ffffff';
      ctx.textAlign = 'center';
      ctx.textBaseline = 'middle';

      // Dividir en líneas
      const words = responseText.toUpperCase().split(' ');
      const lines = [];
      let currentLine = '';

      words.forEach(word => {
        const testLine = currentLine + word + ' ';
        if (ctx.measureText(testLine).width > 900) {
          lines.push(currentLine.trim());
          currentLine = word + ' ';
        } else {
          currentLine = testLine;
        }
      });
      lines.push(currentLine.trim());

      // Renderizar líneas centradas verticalmente
      const lineHeight = fontSize * 1.15;
      let startY = 540 - ((lines.length - 1) * lineHeight / 2);

      lines.forEach(line => {
        ctx.fillText(line, 540, startY);
        startY += lineHeight;
      });

      // Firma inferior
      ctx.font = "700 20px 'JetBrains Mono'";
      ctx.fillStyle = '#ffd700';
      ctx.textAlign = 'center';
      ctx.fillText('ANTONOV // PROTOCOLO DE VERDAD', 540, 960);

      // Línea dorada
      ctx.strokeStyle = '#ffd700';
      ctx.lineWidth = 2;
      ctx.beginPath();
      ctx.moveTo(400, 985);
      ctx.lineTo(680, 985);
      ctx.stroke();
    }

    // Crear botones de estados
    ESTADOS.forEach(estado => {
      const button = document.createElement('button');
      button.className = 'btn-state';
      button.textContent = estado;
      button.onclick = function() {
        document.querySelectorAll('.btn-state').forEach(b => {
          b.classList.remove('active');
        });
        button.classList.add('active');
        selectedState = estado;
        render();
      };
      grid.appendChild(button);
    });

    // Slider
    slider.oninput = function() {
      sizeDisplay.textContent = slider.value + 'px';
      render();
    };

    // Botón de traducir
    btn.onclick = async function() {
      if (!selectedState) {
        alert('Por favor selecciona un estado primero');
        return;
      }

      btn.textContent = 'PROCESANDO...';
      btn.disabled = true;

      try {
        const response = await fetch('https://mis-frases.poderparatriunfar.workers.dev/', {
          method: 'POST',
          headers: {
            'Content-Type': 'application/json'
          },
          body: JSON.stringify({
            prompt: `ANTONOV ES UN TRADUCTOR DE ESTADOS HUMANOS.
NO RESPONDE PREGUNTAS.
NO DA CONSEJOS.
NO JUZGA.
NO MOTIVA.
OBSERVA Y NOMBRA CON SABIDURÍA DE CALLE.

LENGUAJE:
- SIMPLE, CERCANO, DE CALLE TRANQUILA
- SABIDURÍA ADQUIRIDA CON EXPERIENCIA
- NO SUENA A LIBRO NI A COACH
- SUENA A ALGUIEN QUE YA VIVIÓ

UNA SOLA FRASE.
MÁXIMO 12 PALABRAS.
TODO EN MAYÚSCULAS.

EL ESTADO ES: "${selectedState}"

ANTONOV LO TRADUCE.`
          })
        });

        const data = await response.json();
        responseText = data.text || 'ERROR EN RESPUESTA';
      } catch (error) {
        console.error('Error:', error);
        responseText = 'ERROR DE CONEXIÓN';
      }

      btn.textContent = 'TRADUCIR ESTADO';
      btn.disabled = false;
      render();
    };

    // Renderizar al cargar
    render();
  </script>
</Layout>
