---
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'ANTONOV',
};
---

<Layout metadata={metadata}>
  <style>
    @import url('https://fonts.googleapis.com/css2?family=Inter:wght@900&family=JetBrains+Mono:wght@700&display=swap');

    * { margin: 0; padding: 0; box-sizing: border-box; }

    :global(main) {
      width: 100% !important;
      max-width: 100% !important;
      padding: 0 !important;
      margin: 0 !important;
    }

    body {
      background: #000;
      color: #fff;
      font-family: 'Inter', sans-serif;
      overflow: hidden;
    }

    .container {
      display: grid;
      grid-template-columns: 400px 1fr;
      width: 100vw;
      height: 100vh;
    }

    .sidebar {
      background: #0a0a0a;
      border-right: 1px solid #222;
      display: flex;
      flex-direction: column;
    }

    .header {
      padding: 40px;
      border-bottom: 1px solid #222;
    }

    h1 {
      font-size: 3rem;
      font-weight: 900;
    }

    .tag {
      font-family: 'JetBrains Mono';
      font-size: 10px;
      color: #ffd700;
      letter-spacing: 2px;
    }

    .states-wrapper {
      flex: 1;
      overflow-y: auto;
      padding: 30px 40px;
    }

    .label {
      font-family: 'JetBrains Mono';
      font-size: 10px;
      color: #666;
      margin-bottom: 15px;
      text-transform: uppercase;
      letter-spacing: 1px;
      display: block;
    }

    .grid {
      display: grid;
      grid-template-columns: 1fr 1fr;
      gap: 10px;
    }

    .btn-state {
      background: #111;
      border: 1px solid #222;
      color: #888;
      padding: 14px 10px;
      font-family: 'JetBrains Mono';
      font-size: 10px;
      cursor: pointer;
      text-transform: uppercase;
      transition: 0.2s;
    }

    .btn-state:hover {
      background: #1a1a1a;
      color: #fff;
    }

    .btn-state.active {
      background: #fff;
      color: #000;
      font-weight: 700;
    }

    .controls {
      padding: 30px 40px;
      border-top: 1px solid #222;
    }

    .slider-box {
      margin-bottom: 20px;
    }

    .slider-header {
      display: flex;
      justify-content: space-between;
      margin-bottom: 8px;
    }

    .size-value {
      font-family: 'JetBrains Mono';
      font-size: 10px;
      color: #ffd700;
    }

    input[type="range"] {
      width: 100%;
    }

    .btn-main {
      width: 100%;
      padding: 20px;
      background: #fff;
      color: #000;
      border: none;
      font-weight: 900;
      cursor: pointer;
      text-transform: uppercase;
    }

    .btn-main:disabled {
      opacity: 0.4;
      cursor: not-allowed;
    }

    .canvas-area {
      display: flex;
      align-items: center;
      justify-content: center;
      padding: 60px;
    }

    canvas {
      max-width: 100%;
      max-height: 100%;
      border: 1px solid #222;
    }
  </style>

  <div class="container">
    <aside class="sidebar">
      <div class="header">
        <h1>ANTONOV</h1>
        <span class="tag">PROTOCOLO DE VERDAD</span>
      </div>

      <div class="states-wrapper">
        <span class="label">Selecciona un estado</span>
        <div class="grid" id="grid"></div>
      </div>

      <div class="controls">
        <div class="slider-box">
          <div class="slider-header">
            <span class="label">Tamaño</span>
            <span class="size-value" id="size">85px</span>
          </div>
          <input type="range" id="slider" min="50" max="150" value="85">
        </div>
        <button class="btn-main" id="btn">Traducir Estado</button>
      </div>
    </aside>

    <div class="canvas-area">
      <canvas id="canvas"></canvas>
    </div>
  </div>

  <script is:inline>
    (function () {
      function init() {
        const ESTADOS = [
          'CANSANCIO','SOLEDAD','ANSIEDAD','DUDA','RUPTURA','MIEDO',
          'RABIA','VACÍO','NOSTALGIA','CONFUSIÓN','TRISTEZA','CULPA',
          'AGOBIO','BLOQUEO','FRUSTRACIÓN','INSEGURIDAD'
        ];

        let selectedState = '';
        let responseText = 'SELECCIONA UN ESTADO';

        const canvas = document.getElementById('canvas');
        const ctx = canvas?.getContext('2d');
        const grid = document.getElementById('grid');
        const btn = document.getElementById('btn');
        const slider = document.getElementById('slider');
        const sizeDisplay = document.getElementById('size');

        if (!canvas || !ctx) return;

        function render() {
          canvas.width = 1080;
          canvas.height = 1080;

          ctx.fillStyle = '#000';
          ctx.fillRect(0,0,1080,1080);

          ctx.font = "700 24px 'JetBrains Mono'";
          ctx.fillStyle = '#ffd700';
          if (selectedState) ctx.fillText('> ' + selectedState, 80, 120);

          const fontSize = Number(slider.value);
          ctx.font = `900 ${fontSize}px Inter`;
          ctx.fillStyle = '#fff';
          ctx.textAlign = 'center';
          ctx.textBaseline = 'middle';

          const words = responseText.split(' ');
          let lines = [];
          let line = '';

          words.forEach(w => {
            const test = line + w + ' ';
            if (ctx.measureText(test).width > 900) {
              lines.push(line);
              line = w + ' ';
            } else {
              line = test;
            }
          });
          lines.push(line);

          let y = 540 - (lines.length - 1) * fontSize * 0.6;
          lines.forEach(l => {
            ctx.fillText(l.trim(), 540, y);
            y += fontSize * 1.15;
          });
        }

        ESTADOS.forEach(e => {
          const b = document.createElement('button');
          b.className = 'btn-state';
          b.textContent = e;
          b.onclick = () => {
            document.querySelectorAll('.btn-state').forEach(x => x.classList.remove('active'));
            b.classList.add('active');
            selectedState = e;
            render();
          };
          grid.appendChild(b);
        });

        slider.oninput = () => {
          sizeDisplay.textContent = slider.value + 'px';
          render();
        };

        btn.onclick = async () => {
          if (!selectedState) return;

          btn.disabled = true;
          btn.textContent = 'PROCESANDO...';

          try {
            const res = await fetch('https://mis-frases.poderparatriunfar.workers.dev/', {
              method: 'POST',
              headers: { 'Content-Type': 'application/json' },
              body: JSON.stringify({
                prompt: `ANTONOV OBSERVA SIN JUZGAR.
UNA SOLA FRASE.
MÁXIMO 12 PALABRAS.
TODO EN MAYÚSCULAS.
ESTADO: "${selectedState}"`
              })
            });

            const data = await res.json();
            responseText = data.text || 'SILENCIO';
          } catch {
            responseText = 'ERROR DE CONEXIÓN';
          }

          btn.disabled = false;
          btn.textContent = 'TRADUCIR ESTADO';
          render();
        };

        render();
      }

      window.addEventListener('DOMContentLoaded', init);
    })();
  </script>
</Layout>
