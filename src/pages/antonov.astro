  <div class="cyber-grid"></div>
  <div class="scanlines"></div>

  <div class="terminal">
    <aside class="sidebar">
      <div class="logo">
        <h1>ANTONOV</h1>
        <div class="logo-subtitle">NEURAL INTERFACE v6.0</div>
      </div>

      <div class="estados-list">
        {ESTADOS.map(estado => (
          <button class="estado-btn" data-estado={estado}>
            <span>{estado}</span>
          </button>
        ))}
      </div>

      <div class="format-selector">
        <span class="format-label">Formato de imagen:</span>
        <div class="format-grid">
          <button class="format-btn active" data-format="instagram">IG Post<br>1080x1080</button>
          <button class="format-btn" data-format="story">IG Story<br>1080x1920</button>
          <button class="format-btn" data-format="facebook">Facebook<br>1200x630</button>
