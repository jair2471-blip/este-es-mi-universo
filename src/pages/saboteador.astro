<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title>Modo IncÃ³modo - Hero Image</title>
  <style>
    body {
      margin: 0;
      background: #0a0a0a;
      display: flex;
      justify-content: center;
      align-items: center;
      min-height: 100vh;
      font-family: system-ui, sans-serif;
    }
    .container {
      width: 90%;
      max-width: 1200px;
    }
    svg {
      width: 100%;
      height: auto;
    }
    .controls {
      text-align: center;
      margin-top: 30px;
    }
    button {
      padding: 12px 24px;
      background: #ff1744;
      color: white;
      border: none;
      border-radius: 8px;
      cursor: pointer;
      font-weight: bold;
      margin: 0 10px;
    }
    button:hover {
      background: #c41230;
    }
  </style>
</head>
<body>
  <div class="container">
    <svg viewBox="0 0 1200 600" xmlns="http://www.w3.org/2000/svg">
      <!-- Definiciones -->
      <defs>
        <!-- Gradiente principal rojo ardiente -->
        <linearGradient id="fireGradient" x1="0%" y1="0%" x2="100%" y2="100%">
          <stop offset="0%" style="stop-color:#ff1744;stop-opacity:1" />
          <stop offset="50%" style="stop-color:#f50057;stop-opacity:1" />
          <stop offset="100%" style="stop-color:#c41230;stop-opacity:1" />
        </linearGradient>
        
        <!-- Gradiente de fondo oscuro -->
        <linearGradient id="bgGradient" x1="0%" y1="0%" x2="100%" y2="100%">
          <stop offset="0%" style="stop-color:#0a0a0a;stop-opacity:1" />
          <stop offset="50%" style="stop-color:#1a0a0f;stop-opacity:1" />
          <stop offset="100%" style="stop-color:#0f0f0f;stop-opacity:1" />
        </linearGradient>
        
        <!-- Gradiente brillante para texto -->
        <linearGradient id="textGlow" x1="0%" y1="0%" x2="0%" y2="100%">
          <stop offset="0%" style="stop-color:#ffffff;stop-opacity:1" />
          <stop offset="100%" style="stop-color:#ff1744;stop-opacity:1" />
        </linearGradient>
        
        <!-- Filtro de brillo -->
        <filter id="glow">
          <feGaussianBlur stdDeviation="4" result="coloredBlur"/>
          <feMerge>
            <feMergeNode in="coloredBlur"/>
            <feMergeNode in="SourceGraphic"/>
          </feMerge>
        </filter>
        
        <!-- Filtro de sombra -->
        <filter id="shadow">
          <feDropShadow dx="0" dy="4" stdDeviation="8" flood-opacity="0.5"/>
        </filter>
        
        <!-- PatrÃ³n de partÃ­culas -->
        <pattern id="particles" x="0" y="0" width="100" height="100" patternUnits="userSpaceOnUse">
          <circle cx="10" cy="10" r="1" fill="#ff1744" opacity="0.3">
            <animate attributeName="opacity" values="0.1;0.5;0.1" dur="3s" repeatCount="indefinite"/>
          </circle>
          <circle cx="50" cy="30" r="1.5" fill="#ff1744" opacity="0.2">
            <animate attributeName="opacity" values="0.2;0.6;0.2" dur="4s" repeatCount="indefinite"/>
          </circle>
          <circle cx="80" cy="60" r="1" fill="#f50057" opacity="0.3">
            <animate attributeName="opacity" values="0.1;0.4;0.1" dur="3.5s" repeatCount="indefinite"/>
          </circle>
          <circle cx="30" cy="80" r="1.2" fill="#ff1744" opacity="0.25">
            <animate attributeName="opacity" values="0.15;0.5;0.15" dur="2.8s" repeatCount="indefinite"/>
          </circle>
        </pattern>
      </defs>
      
      <!-- Fondo -->
      <rect width="1200" height="600" fill="url(#bgGradient)"/>
      
      <!-- PartÃ­culas de fondo -->
      <rect width="1200" height="600" fill="url(#particles)"/>
      
      <!-- CÃ­rculos decorativos con animaciÃ³n -->
      <circle cx="200" cy="150" r="150" fill="none" stroke="#ff1744" stroke-width="1" opacity="0.1">
        <animate attributeName="r" values="150;160;150" dur="4s" repeatCount="indefinite"/>
        <animate attributeName="opacity" values="0.1;0.2;0.1" dur="4s" repeatCount="indefinite"/>
      </circle>
      
      <circle cx="1000" cy="450" r="120" fill="none" stroke="#f50057" stroke-width="1" opacity="0.15">
        <animate attributeName="r" values="120;130;120" dur="3s" repeatCount="indefinite"/>
        <animate attributeName="opacity" values="0.15;0.25;0.15" dur="3s" repeatCount="indefinite"/>
      </circle>
      
      <!-- LÃ­neas decorativas animadas -->
      <line x1="100" y1="200" x2="300" y2="200" stroke="#ff1744" stroke-width="2" opacity="0.3">
        <animate attributeName="x2" values="300;320;300" dur="2s" repeatCount="indefinite"/>
      </line>
      
      <line x1="900" y1="400" x2="1100" y2="400" stroke="#ff1744" stroke-width="2" opacity="0.3">
        <animate attributeName="x2" values="1100;1120;1100" dur="2.5s" repeatCount="indefinite"/>
      </line>
      
      <!-- Elemento central: Llama estilizada -->
      <g id="flame" transform="translate(600, 200)">
        <!-- Llama principal -->
        <path d="M 0,-80 Q -30,-40 -20,0 Q -30,40 0,80 Q 30,40 20,0 Q 30,-40 0,-80 Z" 
              fill="url(#fireGradient)" 
              opacity="0.3"
              filter="url(#glow)">
          <animateTransform
            attributeName="transform"
            type="scale"
            values="1,1;1.1,0.9;1,1"
            dur="2s"
            repeatCount="indefinite"/>
        </path>
        
        <!-- Llama interior -->
        <path d="M 0,-50 Q -20,-25 -10,0 Q -20,25 0,50 Q 20,25 10,0 Q 20,-25 0,-50 Z" 
              fill="#ffffff" 
              opacity="0.4"
              filter="url(#glow)">
          <animateTransform
            attributeName="transform"
            type="scale"
            values="1,1;0.9,1.1;1,1"
            dur="1.8s"
            repeatCount="indefinite"/>
        </path>
        
        <!-- NÃºcleo brillante -->
        <circle cx="0" cy="0" r="15" fill="#ffffff" opacity="0.8" filter="url(#glow)">
          <animate attributeName="r" values="15;18;15" dur="1.5s" repeatCount="indefinite"/>
          <animate attributeName="opacity" values="0.8;1;0.8" dur="1.5s" repeatCount="indefinite"/>
        </circle>
      </g>
      
      <!-- Texto principal "MODO INCÃ“MODO" -->
      <g id="mainText" filter="url(#shadow)">
        <text x="600" y="380" 
              font-size="72" 
              font-weight="900" 
              text-anchor="middle" 
              fill="url(#textGlow)"
              letter-spacing="12">
          MODO INCÃ“MODO
          <animate attributeName="opacity" values="1;0.95;1" dur="3s" repeatCount="indefinite"/>
        </text>
      </g>
      
      <!-- SubtÃ­tulo -->
      <text x="600" y="430" 
            font-size="24" 
            font-weight="400" 
            text-anchor="middle" 
            fill="#888888"
            letter-spacing="4"
            font-style="italic">
        VERDADES QUE ARDEN, PERO SALVAN
        <animate attributeName="opacity" values="0.6;0.8;0.6" dur="4s" repeatCount="indefinite"/>
      </text>
      
      <!-- LÃ­nea decorativa inferior -->
      <line x1="400" y1="460" x2="800" y2="460" 
            stroke="#ff1744" 
            stroke-width="2" 
            opacity="0.4">
        <animate attributeName="stroke-width" values="2;3;2" dur="2s" repeatCount="indefinite"/>
      </line>
      
      <!-- Elementos decorativos laterales -->
      <g opacity="0.3">
        <!-- Izquierda -->
        <circle cx="150" cy="300" r="3" fill="#ff1744">
          <animate attributeName="cy" values="300;290;300" dur="2s" repeatCount="indefinite"/>
        </circle>
        <circle cx="180" cy="320" r="2" fill="#f50057">
          <animate attributeName="cy" values="320;310;320" dur="2.5s" repeatCount="indefinite"/>
        </circle>
        <circle cx="120" cy="340" r="2.5" fill="#ff1744">
          <animate attributeName="cy" values="340;330;340" dur="2.2s" repeatCount="indefinite"/>
        </circle>
        
        <!-- Derecha -->
        <circle cx="1050" cy="300" r="3" fill="#ff1744">
          <animate attributeName="cy" values="300;290;300" dur="2.3s" repeatCount="indefinite"/>
        </circle>
        <circle cx="1020" cy="320" r="2" fill="#f50057">
          <animate attributeName="cy" values="320;310;320" dur="2.7s" repeatCount="indefinite"/>
        </circle>
        <circle cx="1080" cy="340" r="2.5" fill="#ff1744">
          <animate attributeName="cy" values="340;330;340" dur="2.1s" repeatCount="indefinite"/>
        </circle>
      </g>
      
      <!-- Chispas aleatorias -->
      <g id="sparks" opacity="0.5">
        <circle cx="550" cy="250" r="1.5" fill="#ffffff">
          <animate attributeName="opacity" values="0;1;0" dur="1.5s" repeatCount="indefinite"/>
          <animate attributeName="cy" values="250;240;250" dur="1.5s" repeatCount="indefinite"/>
        </circle>
        <circle cx="650" cy="260" r="1" fill="#ffffff">
          <animate attributeName="opacity" values="0;1;0" dur="2s" repeatCount="indefinite" begin="0.5s"/>
          <animate attributeName="cy" values="260;250;260" dur="2s" repeatCount="indefinite" begin="0.5s"/>
        </circle>
        <circle cx="580" cy="270" r="1.2" fill="#ffffff">
          <animate attributeName="opacity" values="0;1;0" dur="1.8s" repeatCount="indefinite" begin="1s"/>
          <animate attributeName="cy" values="270;260;270" dur="1.8s" repeatCount="indefinite" begin="1s"/>
        </circle>
      </g>
      
      <!-- Badge "ðŸ’¥" -->
      <g transform="translate(850, 340)">
        <circle cx="0" cy="0" r="25" fill="#ff1744" opacity="0.2"/>
        <text x="0" y="0" font-size="30" text-anchor="middle" dominant-baseline="central">ðŸ’¥</text>
      </g>
    </svg>
    
    <div class="controls">
      <button onclick="downloadSVG()">ðŸ“¥ Descargar SVG</button>
      <button onclick="downloadPNG()">ðŸ“¥ Descargar PNG (Alta Res)</button>
      <button onclick="copySVG()">ðŸ“‹ Copiar SVG</button>
    </div>
  </div>

  <script>
    // FunciÃ³n para descargar SVG
    function downloadSVG() {
      const svg = document.querySelector('svg');
      const svgData = new XMLSerializer().serializeToString(svg);
      const blob = new Blob([svgData], { type: 'image/svg+xml' });
      const url = URL.createObjectURL(blob);
      const link = document.createElement('a');
      link.href = url;
      link.download = 'modo-incomodo-hero.svg';
      link.click();
      URL.revokeObjectURL(url);
    }

    // FunciÃ³n para descargar PNG
    function downloadPNG() {
      const svg = document.querySelector('svg');
      const svgData = new XMLSerializer().serializeToString(svg);
      const canvas = document.createElement('canvas');
      const ctx = canvas.getContext('2d');
      
      // Alta resoluciÃ³n (2x)
      canvas.width = 2400;
      canvas.height = 1200;
      
      const img = new Image();
      img.onload = function() {
        ctx.drawImage(img, 0, 0, 2400, 1200);
        canvas.toBlob(function(blob) {
          const url = URL.createObjectURL(blob);
          const link = document.createElement('a');
          link.href = url;
          link.download = 'modo-incomodo-hero.png';
          link.click();
          URL.revokeObjectURL(url);
        });
      };
      img.src = 'data:image/svg+xml;base64,' + btoa(unescape(encodeURIComponent(svgData)));
    }

    // FunciÃ³n para copiar SVG
    function copySVG() {
      const svg = document.querySelector('svg');
      const svgData = new XMLSerializer().serializeToString(svg);
      navigator.clipboard.writeText(svgData).then(() => {
        const btn = event.target;
        const originalText = btn.textContent;
        btn.textContent = 'âœ“ Copiado!';
        setTimeout(() => {
          btn.textContent = originalText;
        }, 2000);
      });
    }
  </script>
</body>
</html>
