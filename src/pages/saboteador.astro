<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Sabotajes Mentales</title>

  <style>
    body {
      font-family: Arial, sans-serif;
      background: #0f172a;
      color: white;
      display: flex;
      justify-content: center;
      align-items: center;
      height: 100vh;
      margin: 0;
      text-align: center;
      padding: 20px;
    }

    .card {
      max-width: 700px;
    }

    .texto {
      font-size: 1.5rem;
      margin-bottom: 1rem;
    }

    .remate {
      font-weight: bold;
      color: #38bdf8;
      margin-bottom: 2rem;
    }

    button {
      background: #38bdf8;
      border: none;
      padding: 10px 20px;
      font-size: 1rem;
      cursor: pointer;
      border-radius: 6px;
      margin: 5px;
    }

    select {
      padding: 8px;
      border-radius: 6px;
      margin-bottom: 1rem;
    }
  </style>
</head>
<body>

  <div class="card">
    <h2>El Universo de la Mente</h2>

    <select id="categoria">
      <option value="todas">Todas</option>
      <option value="relaciones">Relaciones</option>
      <option value="autoestima">Autoestima</option>
      <option value="autoengano">Autoengaño</option>
      <option value="trabajo">Trabajo</option>
      <option value="familia">Familia</option>
    </select>

    <div class="texto" id="texto"></div>
    <div class="remate" id="remate"></div>

    <button onclick="generar()">Otra frase</button>
  </div>

  <script>
    let sabotajes = [];
    let categoriaActiva = 'todas';

    const textoEl = document.getElementById('texto');
    const remateEl = document.getElementById('remate');
    const categoriaSelect = document.getElementById('categoria');

    categoriaSelect.addEventListener('change', (e) => {
      categoriaActiva = e.target.value;
      generar();
    });

    async function cargarFrases() {
      try {
        const res = await fetch('/data/frases.json');
        sabotajes = await res.json();
        generar();
      } catch (error) {
        console.error('Error cargando frases:', error);
        textoEl.innerText = "Error cargando frases.";
      }
    }

    function generar() {
      if (!sabotajes.length) return;

      let pool = categoriaActiva === 'todas'
        ? sabotajes
        : sabotajes.filter(f => f.categoria === categoriaActiva);

      if (!pool.length) {
        textoEl.innerText = "No hay frases en esta categoría.";
        remateEl.innerText = "";
        return;
      }

      const random = pool[Math.floor(Math.random() * pool.length)];

      textoEl.innerText = random.texto;
      remateEl.innerText = random.remate;
    }

    cargarFrases();
  </script>

</body>
</html>
