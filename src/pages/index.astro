---
import Layout from '~/layouts/PageLayout.astro';
import Hero from '~/components/widgets/Hero.astro';
import BlogLatestPosts from '~/components/widgets/BlogLatestPosts.astro';
import Features from '~/components/widgets/Features.astro';

const metadata = {
  title: 'El Universo de la Mente — Rompe tus Límites',
  ignoreTitleTemplate: true,
};
---

<Layout metadata={metadata}>
  <Hero
    actions={[
      { variant: 'primary', text: 'Entrar al Portal Cósmico', href: '/portal', icon: 'tabler:sparkles' },
      { text: 'Explorar Reflexiones', href: '#blog', icon: 'tabler:book' },
    ]}
  >
    <Fragment slot="title">
      Domina tu <span class="text-accent dark:text-secondary highlight">Mente</span>, <br />
      Conquista tu <span class="relative inline-block">Realidad</span>
    </Fragment>

    <Fragment slot="subtitle">
      No somos un blog más. Somos el epicentro de la **psicología profunda**, el análisis sin filtros y la tecnología creativa.
    </Fragment>
  </Hero>

  <Features
    id="features"
    tagline="Lo que encontrarás"
    title="Contenido con Berraquera"
    items={[
      { title: 'Análisis Crítico', description: 'Desmontamos las verdades a medias.', icon: 'tabler:brain' },
      { title: 'Portal Cósmico', description: 'IA para potenciar tu presencia digital.', icon: 'tabler:device-floppy' },
      { title: 'Filosofía Viva', description: '91 lecciones de vida listas para ti.', icon: 'tabler:comet' },
    ]}
  />

  <section id="blog">
    <BlogLatestPosts
      title="Manifiestos y Reflexiones"
      information="Cada artículo es una pieza del rompecabezas."
    />
  </section>
</Layout>